			ТекстОшибки = НСтр("ru = 'В настройке должна быть указана организация или подразделение';
								|en = 'Specify a company or a business unit in the setting'");
			ОбщегоНазначения.СообщитьПользователю(ТекстОшибки,, "Организация", "Запись", Отказ);
		КонецЕсли;
	КонецЦикла;

КонецПроцедуры


