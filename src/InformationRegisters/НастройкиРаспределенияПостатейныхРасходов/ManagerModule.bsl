Функция ПолучитьКоличествоНастроекПоСтатье(СтатьяРасходов) Экспорт
	Запрос = Новый Запрос();
	Запрос.Текст = "
	|ВЫБРАТЬ 
	|	КОЛИЧЕСТВО(Т.НастройкаУпр) Как КоличествоНастроек
	|ИЗ
	|	РегистрСведений.НастройкиРаспределенияПостатейныхРасходов КАК Т
	|ГДЕ
	|	Т.СтатьяРасходов = &СтатьяРасходов";
	Запрос.УстановитьПараметр("СтатьяРасходов", СтатьяРасходов);
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Возврат Выборка.КоличествоНастроек;
	Иначе
		Возврат 0;
	КонецЕсли;
КонецФункции

