// Рассчитывает нормативную длительность производства
//
// Параметры:
//  Задания - ТаблицаЗначений - колонки соответствуют измерениям, ресурсам и реквизитам регистра сведений
//                              "ЗаданияКРасчетуДлительностиПроизводства", есть и служебные колонки:
//             * ОбъектРасчета          - СправочникСсылка.РесурсныеСпецификации, СправочникСсылка.СтруктураПредприятия, СправочникСсылка.Календари -
//             * УдалитьНомерЗадания    - Число -
//             * ИдентификаторЗаписи    - УникальныйИдентификатор -
//             * УдалитьДеньРегистрации - Число  -
//             * ПолныйРасчет           - Булево -
//             * РасчетДнейДоОкончания  - Булево -
//             * ДатаДобавления         - Дата -
//             * ДатаЗаписи             - Дата   -
//             * ИдентификаторЗадания   - УникальныйИдентификатор - служебная
//             * ДатаЗадания            - Дата                    - служебная
//  ИдентификаторыНеОбработанныхЗаписей - Соответствие из УникальныйИдентификатор - ключ, это идентификатор 
//                                                                                   не выполненных (выдающих ошибку при
//                                                                                   выполнении) записей регистра
//                                                                                   сведений очереди заданий
//                                                                                   (измерение ИдентификаторЗаписи
//                                                                                   регистра сведений очереди заданий),
//                                                                                  значение, это представление ошибки.
//  ДополнительныеСвойства - Неопределено, Структура - дополнительные свойства выполнения заданий.
//
Процедура ВыполнитьРасчет(Задания, ИдентификаторыНеОбработанныхЗаписей, ДополнительныеСвойства = Неопределено) Экспорт
	
	ЗамерВремени = ОценкаПроизводительности.НачатьЗамерДлительнойОперации("РегистрСведений.НормативнаяДлительностьПроизводства.МодульМенеджера.Рассчитать");
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Задания.ОбъектРасчета       КАК ОбъектРасчета,
	|	Задания.ПолныйРасчет        КАК ПолныйРасчет,
	|	Задания.ИдентификаторЗаписи КАК ИдентификаторЗаписи,
	|	Задания.ДатаЗаписи          КАК ДатаЗаписи
	|ПОМЕСТИТЬ Задания
	|ИЗ
	|	&Задания КАК Задания
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ОбъектРасчета
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	Задания.ОбъектРасчета       КАК ОбъектРасчета,
	|	Задания.ПолныйРасчет        КАК ПолныйРасчет,
	|	Задания.ИдентификаторЗаписи КАК ИдентификаторЗаписи,
	|	Задания.ДатаЗаписи          КАК ДатаЗаписи,
	|
	|	ПРЕДСТАВЛЕНИЕ(Задания.ОбъектРасчета) КАК ОбъектРасчетаПредставление
	|
	|ИЗ
	|	Задания КАК Задания
	|
	|УПОРЯДОЧИТЬ ПО
	|	ДатаЗаписи,
	|	ОбъектРасчета
	|
	|ИТОГИ
	|	МАКСИМУМ(ПолныйРасчет)        КАК ПолныйРасчет,
	|	МАКСИМУМ(ИдентификаторЗаписи) КАК ИдентификаторЗаписи,
	|	МИНИМУМ(ДатаЗаписи)           КАК ДатаЗаписи
	|ПО
	|	ОбъектРасчета
	|";
	
	Запрос.УстановитьПараметр("Задания", Задания);
	
	УстановитьПривилегированныйРежим(Истина);
	РезультатЗапроса = Запрос.Выполнить();
	УстановитьПривилегированныйРежим(Ложь);
	
	ТипыОбъекта = Новый Массив;
	ТипыОбъекта.Добавить(Тип("СправочникСсылка.РесурсныеСпецификации"));
	ТипыОбъекта.Добавить(Тип("СправочникСсылка.СтруктураПредприятия"));
	ТипыОбъекта.Добавить(Тип("СправочникСсылка.Календари"));
	
	ДополнительныеДанные = Новый Структура;
	ДополнительныеДанные.Вставить("ТаблицаЗависимыхОбъектов", Новый ТаблицаЗначений);
	ДополнительныеДанные.ТаблицаЗависимыхОбъектов.Колонки.Добавить("ЗависимыйОбъект", Новый ОписаниеТипов(ТипыОбъекта));
	ДополнительныеДанные.ТаблицаЗависимыхОбъектов.Колонки.Добавить("ПолныйРасчет",    Новый ОписаниеТипов("Булево"));
	ДополнительныеДанные.ТаблицаЗависимыхОбъектов.Индексы.Добавить("ЗависимыйОбъект");
	
	ПоляОшибки = Неопределено;
	
	Выборка = РезультатЗапроса.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	Пока Выборка.Следующий() Цикл
		
		ОбъектРасчета = Выборка.ОбъектРасчета;
		ПолныйРасчет  = Выборка.ПолныйРасчет;
		
		ТекстОшибки   = "";
		
		Рассчитать(ОбъектРасчета, ПолныйРасчет, ДополнительныеДанные, ТекстОшибки);
		
		Если ЗначениеЗаполнено(ТекстОшибки) Тогда
			
			Если ПоляОшибки = Неопределено Тогда
				ПоляОшибки = Новый Структура;
				ПоляОшибки.Вставить("ОбъектРасчетаПредставление", "ОбъектРасчета");
				ПоляОшибки.Вставить("ПолныйРасчет");
			КонецЕсли;
			
			ТекстОшибки = ОтложенныеЗадания.ТекстОшибкиВыполнения(ПоляОшибки, Выборка, ТекстОшибки);
			
			ВыборкаИдентификаторы = Выборка.Выбрать();
			Пока ВыборкаИдентификаторы.Следующий() Цикл
				ИдентификаторыНеОбработанныхЗаписей.Вставить(ВыборкаИдентификаторы.ИдентификаторЗаписи, ТекстОшибки);
			КонецЦикла;
			
		КонецЕсли;
		
	КонецЦикла;
	
	ТаблицаЗависимыхОбъектов = ДополнительныеДанные.ТаблицаЗависимыхОбъектов;
	Если ТаблицаЗависимыхОбъектов.Количество() > 0 Тогда
		
		Для каждого СтрокаТаблицы Из ТаблицаЗависимыхОбъектов Цикл
			
			ЗависимыйОбъект = СтрокаТаблицы.ЗависимыйОбъект;
			ПолныйРасчет    = СтрокаТаблицы.ПолныйРасчет;
			
			Рассчитать(ЗависимыйОбъект, ПолныйРасчет, ДополнительныеДанные);

		КонецЦикла;
		
	КонецЕсли;
	
	ОценкаПроизводительности.ЗакончитьЗамерДлительнойОперации(ЗамерВремени, 1);
	
КонецПроцедуры

// Возвращает длительность производства по спецификации
//
// Параметры:
//  Спецификация - СправочникСсылка.РесурсныеСпецификации, Массив - спецификации.
// 
// Возвращаемое значение:
//   - Структура, Соответствие - длительность производства.
//
Функция ПолучитьДлительность(Спецификация) Экспорт
	
	ТекстЗапроса = ТекстЗапросаДлительностиПроизводстваПоСпецификации();
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Запрос.УстановитьПараметр("МассивСсылок", ПроизводствоСервер.МассивЗначений(Спецификация));
	
	УстановитьПривилегированныйРежим(Истина);
	РезультатЗапроса = Запрос.Выполнить();
	УстановитьПривилегированныйРежим(Ложь);
	
	Если ТипЗнч(Спецификация) <> Тип("Массив") Тогда
		
		Результат = СтруктураДанныхЗаписиРегистра();
		Если Не РезультатЗапроса.Пустой() Тогда
			Выборка = РезультатЗапроса.Выбрать();
			Выборка.Следующий();
			ЗаполнитьЗначенияСвойств(Результат, Выборка);
		КонецЕсли;
		
	Иначе
		
		Результат = Новый Соответствие;
		Если Не РезультатЗапроса.Пустой() Тогда
			Выборка = РезультатЗапроса.Выбрать();
			Пока Выборка.Следующий() Цикл
				Данные = СтруктураДанныхЗаписиРегистра();
				ЗаполнитьЗначенияСвойств(Данные, Выборка);
				Результат.Вставить(Выборка.Спецификация, Данные);
			КонецЦикла;
		КонецЕсли;
		
		Для каждого Элемент Из Спецификация Цикл
			Если Результат.Получить(Элемент) <> Неопределено Тогда
				Продолжить;
			КонецЕсли;
			Данные = СтруктураДанныхЗаписиРегистра();
			Результат.Вставить(Элемент, Данные);
		КонецЦикла;

	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

