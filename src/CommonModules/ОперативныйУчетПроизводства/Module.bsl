		Запрос.УстановитьПараметр("РабочийЦентр", РабочийЦентр);
		
		Результат = Запрос.Выполнить().Выбрать();
	
		Если Результат.Следующий() Тогда
			Загрузка.РабочийЦентр = ?(Результат.Загрузка = NULL, 0, Окр(Результат.Загрузка, 2));
		КонецЕсли;
		
	Иначе
		Загрузка.РабочийЦентр = 0;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Исполнитель) Тогда
		
		Запрос = ЗапросЗагрузка(Подразделение);
		
		Запрос.Текст = СтрЗаменить(Запрос.Текст,"&ПереопределяемыйОтбор","Операции.Исполнитель = &Исполнитель");
		
		Запрос.УстановитьПараметр("Исполнитель", Исполнитель);
		
		Результат = Запрос.Выполнить().Выбрать();
	
		Если Результат.Следующий() Тогда
			Загрузка.Исполнитель = ?(Результат.Загрузка = NULL, 0, Окр(Результат.Загрузка, 2));
		КонецЕсли;
		
	Иначе
		Загрузка.Исполнитель = 0;
	КонецЕсли;
	
	Возврат Загрузка;
	
КонецФункции

