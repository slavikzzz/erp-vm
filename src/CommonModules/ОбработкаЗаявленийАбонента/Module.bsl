Функция УЦИзСертификата(СвойстваСертификата) Экспорт
	
	Если (ТипЗнч(СвойстваСертификата) = Тип("Структура")
		ИЛИ ТипЗнч(СвойстваСертификата) = Тип("ФиксированнаяСтруктура"))
		И СвойстваСертификата.Свойство("Поставщик") Тогда
		
		Поставщик = СтрРазделить(СвойстваСертификата.Поставщик, ",");
		
	ИначеЕсли ТипЗнч(СвойстваСертификата) = Тип("СертификатКриптографии") Тогда
		
		Поставщик = СвойстваСертификата.Издатель;
		
	Иначе
		Возврат "";
	КонецЕсли;
		
	Для каждого РеквизитПоставщика Из Поставщик Цикл
		
		КлючЗначение = СтрРазделить(РеквизитПоставщика, "=");
		Если КлючЗначение.Количество() <> 2 Тогда
			Продолжить;
		КонецЕсли;
		
		Ключ     = КлючЗначение[0];
		Значение = КлючЗначение[1];
		
		Если Ключ = "O" Тогда
			Возврат Значение;
		КонецЕсли;
	
	КонецЦикла;
	
	Возврат "";
	
