		ЧастиАдреса.Добавить(Дом);
		ЧастиАдреса.Добавить(Корпус);
		
		Если ЗначениеЗаполнено(Квартира) Тогда
			ЧастиАдреса.Добавить(Квартира);
		КонецЕсли;
		
		Разделитель = " ";
		
