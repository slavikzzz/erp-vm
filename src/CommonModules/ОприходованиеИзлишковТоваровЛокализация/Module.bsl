			ДанныеЗаполнения);
		Объект.ДополнительныеСвойства.ЗаполнитьТабличнуюЧастьТовары = Ложь;
		
	ИначеЕсли ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.ФормированиеПартийЗЕРНО") Тогда
			
		ИнтеграцияЗЕРНОУТ.ЗаполнитьОприходованиеИзлишковТоваровНаОснованииФормированиеПартийЗЕРНО(
			Объект, 
			ДанныеЗаполнения);
		Объект.ДополнительныеСвойства.ЗаполнитьТабличнуюЧастьТовары = Ложь;
	
	ИначеЕсли ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.АктИнвентаризацииСАТУРН") Тогда
			
		ИнтеграцияСАТУРНУТ.ЗаполнитьОприходованиеИзлишковТоваровНаОснованииАктИнвентаризацииСАТУРН(
			Объект, 
			ДанныеЗаполнения);
		Объект.ДополнительныеСвойства.ЗаполнитьТабличнуюЧастьТовары = Ложь;
		
	КонецЕсли;
