																												|en = 'PF (%1. work, class %2)'"),
								?(Найти(ИмяПоля,"Подземн") > 0, "подз", "тяж"), 
								?(Прав(ИмяПоля,1) = "й", "О4", "В3" + Прав(ИмяПоля,1))));
					КонецЦикла;
				Иначе
					Описание.Вставить("ПФРЗаЗанятыхНаПодземныхИВредныхРаботах", НСтр("ru = 'ПФР (подземные работы)';
																					|en = 'PF (underground work)'"));
					Описание.Вставить("ПФРЗаЗанятыхНаТяжелыхИПрочихРаботах", НСтр("ru = 'ПФР (тяжелые работы)';
																					|en = 'PF (arduous works)'"));
				КонецЕсли;
			КонецЕсли;
		Иначе
			Описание.Вставить("ПФРНаДоплатуЛетчикам", НСтр("ru = 'ДСО (летн. экипаж)';
															|en = 'Additional social security (flight crew)'"));
			Описание.Вставить("ПФРНаДоплатуШахтерам", НСтр("ru = 'ДСО (шахтеры)';
