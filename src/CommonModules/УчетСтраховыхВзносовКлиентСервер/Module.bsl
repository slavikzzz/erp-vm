// Формирует соответствие описания реквизитов, содержащих суммы взносов.
//      	 
// Параметры:
//		Месяц - дата - необязательный, указывает на месяц начисления, для которого могут использоваться те или иные колонки
//		               взносов.
//		ВключатьДопТарифы - булево - необязательный, если выставлен в Ложь, взносы по доп.тарифам в описание не включаются.
//
// Возвращаемое значение:
//		Соответствие
//
Функция ОписаниеПолейВзносовВСоответствии(Месяц = '00010101', ВключатьДопТарифы = Истина, ВключатьКолонкиЕНВД = Истина) Экспорт

	ДатаПоявленияВзносовНаДоплатуШахтерам = ДатаВводаВзносовНаДоплатуШахтерам();
	ДатаОтменыТФОМС = ДатаОтменыТФОМС();
	ДатаПоявленияВзносовЗаЗанятыхНаРаботахСДосрочнойПенсией = ДатаВводаВзносовЗаЗанятыхНаРаботахСДосрочнойПенсией();
	ДатаОбъединенияСтраховойИНакопительнойЧастейВзносовПФР = ДатаОбъединенияСтраховойИНакопительнойЧастейВзносовПФР();
	ДатаВыделенияВзносовНаОПСсСуммПревышенияПредельнойВеличины = ДатаВыделенияВзносовНаОПСсСуммПревышенияПредельнойВеличины();
	ДатаОбъединенияВзносов = ДатаОбъединенияВзносов();
	
	Описание = Новый Соответствие;
	
	Описание.Вставить("ФФОМС", НСтр("ru = 'ОМС';
									|en = 'CMI'"));
	Если ВключатьКолонкиЕНВД Тогда
		Описание.Вставить("ФФОМСЕНВД", НСтр("ru = 'ФФОМС (ЕНВД)';
											|en = 'CMIF (UTII)'"));
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Месяц) Или Месяц < ДатаОтменыТФОМС Тогда
		Описание.Вставить("ТФОМС", НСтр("ru = 'ТФОМС';
										|en = 'TCMIF'"));
		Если ВключатьКолонкиЕНВД Тогда
			Описание.Вставить("ТФОМСЕНВД", НСтр("ru = 'ТФОМС (ЕНВД)';
												|en = 'TCMIF (UTII)'"));
		КонецЕсли;
	КонецЕсли;
	
	Описание.Вставить("ФСС", НСтр("ru = 'ОСС';
									|en = 'CSI'"));
	Если ВключатьКолонкиЕНВД Тогда
		Описание.Вставить("ФССЕНВД", НСтр("ru = 'ФСС (ЕНВД)';
											|en = 'SSF (UTII)'"));
	КонецЕсли;
	Описание.Вставить("ФССНесчастныеСлучаи", НСтр("ru = 'ОСС (несч. случ.)';
													|en = 'CSI (accident)'"));
	
	Если Месяц < ДатаОбъединенияСтраховойИНакопительнойЧастейВзносовПФР Тогда
		Описание.Вставить("ПФРНакопительная", НСтр("ru = 'ПФР (накоп.)';
													|en = 'PF (fund.)'"));
		Описание.Вставить("ПФРСтраховая", НСтр("ru = 'ПФР (страх.)';
												|en = 'PF (insur.)'"));
		Если ВключатьКолонкиЕНВД Тогда
			Описание.Вставить("ПФРНакопительнаяЕНВД", НСтр("ru = 'ПФР (накоп. ЕНВД)';
															|en = 'PF (fund. UTII)'"));
			Описание.Вставить("ПФРСтраховаяЕНВД", НСтр("ru = 'ПФР (страх. ЕНВД)';
														|en = 'PF (insur. UTII)'"));
		КонецЕсли;
	ИначеЕсли Месяц < ДатаВыделенияВзносовНаОПСсСуммПревышенияПредельнойВеличины Тогда
		Описание.Вставить("ПФРПоСуммарномуТарифу", НСтр("ru = 'ПФР (на ОПС)';
														|en = 'PF (for MPI)'"));
		Если ВключатьКолонкиЕНВД Тогда
			Описание.Вставить("ПФРПоСуммарномуТарифуЕНВД", НСтр("ru = 'ПФР (на ОПС ЕНВД)';
																|en = 'PF (for MPI UTII)'"));
		КонецЕсли;
	ИначеЕсли Месяц < ДатаОбъединенияВзносов Тогда 
		Описание.Вставить("ПФРДоПредельнойВеличины", НСтр("ru = 'ПФР (на ОПС, до предела)';
															|en = 'PF (for MPI, to excess)'"));
		Если ВключатьКолонкиЕНВД Тогда
			Описание.Вставить("ПФРДоПредельнойВеличиныЕНВД", НСтр("ru = 'ПФР (на ОПС, до предела ЕНВД)';
																	|en = 'PF (for MPI, to UTII limit)'"));
		КонецЕсли;
		Описание.Вставить("ПФРСПревышения", НСтр("ru = 'ПФР (на ОПС, с превышения)';
												|en = 'PF (for MPI, from excess)'"));
		Если ВключатьКолонкиЕНВД Тогда
			Описание.Вставить("ПФРСПревышенияЕНВД", НСтр("ru = 'ПФР (на ОПС, с превышения ЕНВД)';
														|en = 'PF (for MPI, from UTII excess)'"));
		КонецЕсли;
	Иначе
		Описание.Вставить("ПФРДоПредельнойВеличины", НСтр("ru = 'Ед.тариф (до предела)';
															|en = 'Joint rate (to the limit)'"));
		Описание.Вставить("ПФРСПревышения", НСтр("ru = 'Ед.тариф (с превышения)';
												|en = 'Joint rate (from excess)'"));
		Описание.Вставить("ОПСпоМеждународнымДоговорам", НСтр("ru = 'ОПС, межд.дог. (до предела)';
																|en = 'MPI, international contract (to the limit)'"));
		Описание.Вставить("ОПСпоМеждународнымДоговорамСПревышения", НСтр("ru = 'ОПС, межд.дог. (с превышения)';
																		|en = 'MPI, international contract (from excess)'"));
		Описание.Вставить("ОМСпоМеждународнымДоговорам", НСтр("ru = 'ОМС, межд.дог. (до предела)';
																|en = 'CMI, international contract (to the limit)'"));
		Описание.Вставить("ОМСпоМеждународнымДоговорамСПревышения", НСтр("ru = 'ОМС, межд.дог. (с превышения)';
																		|en = 'CMI, international contract (from excess)'"));
		Описание.Вставить("ОССпоМеждународнымДоговорам", НСтр("ru = 'ОСС, межд.дог. (до предела)';
																|en = 'CSI, international contract (to the limit)'"));
		Описание.Вставить("ОССпоМеждународнымДоговорамСПревышения", НСтр("ru = 'ОСС, межд.дог. (с превышения)';
																		|en = 'CSI, international contract (from excess)'"));
	КонецЕсли;
	
	Если ВключатьДопТарифы Тогда
		Если ЗначениеЗаполнено(Месяц) И Месяц < ДатаОбъединенияВзносов Тогда 
			Описание.Вставить("ПФРНаДоплатуЛетчикам", НСтр("ru = 'ПФР (летн. экипаж)';
															|en = 'PF (flight crew)'"));
			Если Не ЗначениеЗаполнено(Месяц) Или Месяц >= ДатаПоявленияВзносовНаДоплатуШахтерам Тогда
				Описание.Вставить("ПФРНаДоплатуШахтерам", НСтр("ru = 'ПФР (шахтеры)';
																|en = 'PF (miners)'"));
			КонецЕсли;
			Если Месяц >= ДатаПоявленияВзносовЗаЗанятыхНаРаботахСДосрочнойПенсией Тогда
				Если Месяц >= ДатаОбъединенияСтраховойИНакопительнойЧастейВзносовПФР Тогда
					Описание.Вставить("ПФРЗаЗанятыхНаПодземныхИВредныхРаботах", НСтр("ru = 'ПФР (подз. раб., без оценки)';
																					|en = 'PF (late works, no assessment)'"));
					Описание.Вставить("ПФРЗаЗанятыхНаТяжелыхИПрочихРаботах", НСтр("ru = 'ПФР (тяж. раб., без оценки)';
																					|en = 'PF (hard works, no assessment)'"));
					Для каждого ИмяПоля Из СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(ВзносыПоКодамСпециальнойОценки()) Цикл
