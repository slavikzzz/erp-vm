// Параметры:
//  ТаблицаСведений - См. ЗащитаПерсональныхДанныхПереопределяемый.ПриЗаполненииСведенийОбУничтожаемыхПерсональныхДанных.ТаблицаСведений
//  МетаданныеОбъекта - ОбъектМетаданных
//  ИмяТабличнойЧасти - Строка
//  ИмяРеквизитаФизическоеЛицо - Строка
//  ИмяРеквизитаКраткийСоставДокумента - Строка
Процедура ДобавитьОписаниеУничтожаемыхПерсональныхДанных(ТаблицаСведений, МетаданныеОбъекта, ИмяТабличнойЧасти,
	ИмяРеквизитаФизическоеЛицо, ИмяРеквизитаКраткийСоставДокумента)
	
	ПолноеИмя = МетаданныеОбъекта.ПолноеИмя();
	ТабличнаяЧасть = МетаданныеОбъекта.ТабличныеЧасти.Найти(ИмяТабличнойЧасти);
	
	ТекстОшибки = СтрШаблон(
		НСтр("ru = 'Ошибка в описании уничтожаемых персональных данных: у объекта %1 нет табличной части %2';
			|en = 'Error in the details of the eliminated personal data: object %1 does not have table %2'"),
		ПолноеИмя, ИмяТабличнойЧасти);
	ОбщегоНазначенияКлиентСервер.Проверить(ТабличнаяЧасть <> Неопределено,
		ТекстОшибки, "ЗарплатаКадрыСоставДокументов.ДобавитьОписаниеУничтожаемыхПерсональныхДанных");
	
	РеквизитФизическоеЛицо = ТабличнаяЧасть.Реквизиты.Найти(ИмяРеквизитаФизическоеЛицо);
	ТекстОшибки = СтрШаблон(
		НСтр("ru = 'Ошибка в описании уничтожаемых персональных данных: у объекта %1 в табличной части %2 нет реквизита %3';
			|en = 'Details in the error of the eliminated personal data: object %1 does not have attribute %3 it table %2'"),
		ПолноеИмя, ИмяТабличнойЧасти, ИмяРеквизитаФизическоеЛицо);
	ОбщегоНазначенияКлиентСервер.Проверить(РеквизитФизическоеЛицо <> Неопределено,
		ТекстОшибки, "ЗарплатаКадрыСоставДокументов.ДобавитьОписаниеУничтожаемыхПерсональныхДанных");
	
	НовыеСведения = ТаблицаСведений.Добавить();
	НовыеСведения.Объект = ПолноеИмя;
	НовыеСведения.ПолеСубъект = РеквизитФизическоеЛицо.ПолноеИмя();
	НовыеСведения.Поля = ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(
		МетаданныеОбъекта.Реквизиты[ИмяРеквизитаКраткийСоставДокумента].ПолноеИмя());
	НовыеСведения.КатегорияДанных = "ФИО";
		
КонецПроцедуры

