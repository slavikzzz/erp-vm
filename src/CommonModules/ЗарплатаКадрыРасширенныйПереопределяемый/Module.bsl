// Обработчик события, возникающего при включении/отключении библиотеки «Зарплата и кадры» в целом.
//
// Параметры:
//	Использование - булево, устанавливаемое значение использования.
//
Процедура ПриУстановкеИспользованияЗарплатаКадры(Использование) Экспорт
	
	Константы.ИспользоватьКадровыйУчет.Установить(Использование);
	
	Если Использование Тогда
		Параметры = ЗарплатаКадрыРасширенный.ПараметрыНастройкиЗарплатаКадрыПоУмолчанию();
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ИспользоватьКадровыйУчет", Истина);
		ЗарплатаКадрыРасширенный.ЗаписатьНастройкиЗарплатаКадры(Параметры);
	Иначе
		
		Параметры = ЗарплатаКадрыРасширенный.ПараметрыНастройкиЗарплатаКадрыПоУмолчанию();
		
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ИспользоватьКадровыйУчет", Ложь);
		
		Параметры.НастройкиВоинскогоУчета.ИспользоватьВоинскийУчет = Ложь;
		Параметры.НастройкиВоинскогоУчета.ИспользоватьБронированиеГраждан = Ложь;
		Параметры.НастройкиВоинскогоУчета.ИспользуетсяТрудЛетноПодъемногоСостава = Ложь;
		Параметры.НастройкиВоинскогоУчета.ИспользуетсяТрудПлавсостава = Ложь;
		
		Параметры.НастройкиКадровогоУчета.ИспользоватьРаботуНаНеполнуюСтавку = Ложь;
		Параметры.НастройкиКадровогоУчета.ИспользоватьПереносОстатковОтпускаПриУвольненииПереводом = Ложь;
		Параметры.НастройкиКадровогоУчета.КонтролироватьУникальностьТабельныхНомеров = Ложь;
		
		Параметры.НастройкиРасчетаЗарплатыБазовые.ИспользоватьНачисленияПоДоговорам = Ложь;
		
		Параметры.НастройкиРасчетаЗарплаты.ИспользоватьИндексациюЗаработка         = Ложь;
		
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ИспользоватьПризыПодарки", Ложь);
		
		Параметры.НастройкиРасчетаЗарплаты.ИспользоватьМатериальнуюПомощь          = Ложь;
		Параметры.НастройкиРасчетаЗарплаты.ИспользоватьРегистрациюПрочихДоходов    = Ложь;
		Параметры.НастройкиРасчетаЗарплаты.ИспользоватьВыплатыБывшимСотрудникам    = Ложь;
		
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ВыполнятьРасчетЗарплатыПоПодразделениям", Истина);
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ИспользоватьНесколькоТарифныхСтавок", Ложь);
		
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ИспользоватьКраткосрочныеИзмененияОплатыТрудаВЗависимостиОтВыполняемойРаботы", Ложь);
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ИспользоватьИндивидуальныйГрафикПриСменеГрафикаРаботы", Ложь);
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ПорядокРасчетаСтоимостиЕдиницыВремени", Перечисления.ПорядокРасчетаСтоимостиЕдиницыВремениОплатыТруда.ПустаяСсылка());
		Параметры.НастройкиРасчетаЗарплаты.Вставить("ПереноситьДанныеВДругойУчетСреднегоЗаработка", Ложь);
		
		Параметры.НастройкиЗаймовСотрудникам.ИспользоватьЗаймыСотрудникам = Ложь;
		
		Параметры.НастройкиСтатистикиПерсонала.Вставить("ИспользоватьОтчетностьМониторингаРаботниковСоциальнойСферы", Ложь);
		
		Параметры.Вставить("ИспользоватьСтатьиФинансирования", Ложь);
		Параметры.Вставить("РассчитыватьДокументыПриРедактировании", Ложь);
		Параметры.Вставить("ИспользоватьПодработки", Ложь);
		Параметры.Вставить("ИспользоватьСпециальностиФизическихЛиц", Ложь);
		
		Константы.ИспользоватьСтатьиФинансированияЗарплата.Установить(Ложь);
		Константы.РассчитыватьДокументыПриРедактировании.Установить(Ложь);
		Константы.ИспользоватьПодработки.Установить(Ложь);
		Константы.ИспользоватьСпециальностиФизическихЛиц.Установить(Ложь);
		
		ЗарплатаКадрыРасширенный.ЗаписатьНастройкиЗарплатаКадры(Параметры);
		
	КонецЕсли;
	
КонецПроцедуры

