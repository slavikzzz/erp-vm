Функция ИзвлечьРегистрационныйНомерСФРИлиПФРИзИмениФайла(ИмяФайлаВыгрузки) Экспорт
	
	Результат = Неопределено;
	ИмяФайлаВыгрузкиПриведенное = ВРЕГ(ИмяФайлаВыгрузки);
	
	Если Лев(ИмяФайлаВыгрузкиПриведенное, 4) = "ПФР_" ИЛИ Лев(ИмяФайлаВыгрузкиПриведенное, 4) = "СФР_" Тогда
		Результат = Сред(ИмяФайлаВыгрузкиПриведенное, 5);
		КонецРегистрационногоНомера = СтрНайти(Результат, "_");
		Если КонецРегистрационногоНомера > 0 Тогда
			Результат = Лев(Результат, КонецРегистрационногоНомера - 1);
		КонецЕсли;
		
		Если ЗначениеЗаполнено(Результат) И СтрНайти(Результат, "-") = 0
			И (СтрДлина(Результат) = 14 ИЛИ СтрДлина(Результат) = 7) Тогда
			
			Результат = Неопределено;
		КонецЕсли;
		
	ИначеЕсли Лев(ИмяФайлаВыгрузкиПриведенное, 4) = "PFR-" Тогда
		НачалоРегистрационногоНомера = СтрНайти(ИмяФайлаВыгрузкиПриведенное, "ORG-");
		Если НачалоРегистрационногоНомера > 0 Тогда
			НачалоРегистрационногоНомера = НачалоРегистрационногоНомера + 4;
			ДлинаРегистрационногоНомера = 14;
			
			Результат = Сред(ИмяФайлаВыгрузкиПриведенное, НачалоРегистрационногоНомера, ДлинаРегистрационногоНомера);
			Результат = СокрЛП(Результат);
			Если СтрДлина(Результат) <> ДлинаРегистрационногоНомера Тогда
				Результат = Неопределено;
				
			Иначе
				КонецРегистрационногоНомера = СтрНайти(Результат, "-",,, 3);
				Если КонецРегистрационногоНомера > 0 Тогда
					Результат = Лев(Результат, КонецРегистрационногоНомера - 1);
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

