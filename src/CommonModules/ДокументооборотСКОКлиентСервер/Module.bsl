		Издатель = ", " + Сертификат.Издатель["O"];
	Иначе
		Издатель = "";
	КонецЕсли;
	
	Наименование = НаименованиеСертификата(Сертификат);
	
	Шаблон = НСтр("ru = '%1 (%2-%3)%4';
					|en = '%1 (%2-%3)%4'");
	
	Представление = СтрШаблон(
		Шаблон,
		Наименование,
		СертификатДействителенС,
		СертификатДействителенПо,
		Издатель);
	
