	Результат.Вставить("ТипПараметра", ДопустимыеПараметры[5]); // Ожидаемые: JSON, BodyURL, URL, BodyMulti,    
	Результат.Вставить("ТипОтвета", ДопустимыеПараметры[6]); // Ожидаемые: BASE64, JSON, BIN, String 
	
	Возврат Результат;
	
