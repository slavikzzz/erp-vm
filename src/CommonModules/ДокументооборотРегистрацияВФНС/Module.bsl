	ПараметрыФайла.Вставить("ТипСодержимого", ПолучитьТипФайла(РасширениеФайлаБезТочки));
	ПараметрыФайла.Вставить("ИдентификаторОтвета", СвойствоОтвета.ИдентификаторОтвета);
