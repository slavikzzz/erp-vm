		Если РезультатЗапроса <> Неопределено Тогда
			ПараметрыЗапроса.user_login = РезультатЗапроса.Логин;
			ПараметрыЗапроса.user_pass = РезультатЗапроса.Пароль;
		КонецЕсли;
