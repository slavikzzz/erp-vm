		МенеджерЗаписи.ВерсияДанных = Строка(Новый УникальныйИдентификатор);
		МенеджерЗаписи.Записать();
		
		Если ЗначениеЗаполнено(ПодразделенияИсполнителейЗадач) Тогда
			НаборЗаписей = РегистрыСведений.ИсполнителиЗадач.СоздатьНаборЗаписей();
			НаборЗаписей.Отбор.РольИсполнителя.Установить(Справочники.РолиИсполнителей.ОтветственныйЗаОбращенияСотрудников);
			НаборЗаписей.Отбор.ДополнительныйОбъектАдресации.Установить(Объект.Ссылка);
			Для каждого Подразделение Из ПодразделенияИсполнителейЗадач Цикл
				ЗаписьНабора = НаборЗаписей.Добавить();
				ЗаписьНабора.РольИсполнителя 				= Справочники.РолиИсполнителей.ОтветственныйЗаОбращенияСотрудников;
				ЗаписьНабора.Исполнитель 					= Координатор;
				ЗаписьНабора.ОсновнойОбъектАдресации 		= Подразделение;
				ЗаписьНабора.ДополнительныйОбъектАдресации 	= Объект.Ссылка;
			КонецЦикла;
			НаборЗаписей.Записать();
		КонецЕсли;
	
		ЗафиксироватьТранзакцию();
		
	Исключение
		ОтменитьТранзакцию();
		ЗаписатьОшибку(ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
		ВызватьИсключение;
	КонецПопытки;
	
