	ВидПродукцииПоНоменклатуре = СтрШаблон(
		"ВЫБОР
		|	%1
		|КОНЕЦ",
		СтрСоединить(УсловияКонвертации, Символы.ПС));
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ВидПродукцииПоНоменклатуре",   ВидПродукцииПоНоменклатуре);
