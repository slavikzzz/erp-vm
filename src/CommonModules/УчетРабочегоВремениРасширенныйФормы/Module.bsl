Процедура ПриСозданииФормыСпискаСправочникаВидыИспользованияРабочегоВремени(Форма, Параметры) Экспорт
	
	// Исключение регистрируемых отдельными документами.
	Если Параметры.Свойство("ИсключатьРегистрируемыеОтдельнымиДокументами")
		И Параметры.ИсключатьРегистрируемыеОтдельнымиДокументами = Истина Тогда
		ВидыДокументов = УчетРабочегоВремениРасширенный.ВидыВремениРегистрируемыеОтдельнымиДокументами();
		
		ВидыВремениРазрешенные = Новый Массив;
		Если Параметры.Свойство("ВидДокументаНачисления") Тогда
			Отбор = Новый Структура("ВидДокумента", Параметры.ВидДокументаНачисления);
			РазрешенныеСтроки = ВидыДокументов.НайтиСтроки(Отбор);
			Для Каждого Строка Из РазрешенныеСтроки Цикл
				ВидыВремениРазрешенные.Добавить(Строка.ВидВремени);
			КонецЦикла;
		КонецЕсли;
		
		ВидыВремени = Новый Массив;
		Для Каждого СтрокаТаблицы Из ВидыДокументов Цикл
			Если СтрокаТаблицы.ВидДокумента = Перечисления.ВидыДокументовНачисления.ОплатаПоСреднемуЗаработку Тогда
				Продолжить;
			КонецЕсли;
			Если ВидыВремениРазрешенные.Найти(СтрокаТаблицы.ВидВремени) <> Неопределено Тогда
				Продолжить;
			КонецЕсли;
			ВидыВремени.Добавить(СтрокаТаблицы.ВидВремени);
		КонецЦикла;
		ОбщегоНазначенияКлиентСервер.ДобавитьЭлементКомпоновки(Форма.Список.Отбор, "Ссылка", ВидСравненияКомпоновкиДанных.НеВСписке, ВидыВремени, , Истина);
	КонецЕсли;
	
КонецПроцедуры

#Область УточнениеВидаВремени

Функция ТаблицаВариантовОбстоятельств() Экспорт
	
	Результат = Новый ТаблицаЗначений;
	Результат.Колонки.Добавить("Состояние");
	Результат.Колонки.Добавить("ВидВремениПереопределенный");
	
	Возврат Результат;
	
КонецФункции

Процедура ДобавитьВариантСелектора(Варианты, Состояние, ВидВремениПереопределенный = Неопределено) Экспорт
	
	НоваяСтрока = Варианты.Добавить();
	
	НоваяСтрока.Состояние = ОбщегоНазначения.ПредопределенныйЭлемент(
		"Перечисление.СостоянияСотрудника." + Состояние);
		
	Если ВидВремениПереопределенный <> Неопределено Тогда
		НоваяСтрока.ВидВремениПереопределенный = ОбщегоНазначения.ПредопределенныйЭлемент(
			"Справочник.ВидыИспользованияРабочегоВремени." + ВидВремениПереопределенный);
	КонецЕсли;
	
КонецПроцедуры

Процедура ДобавитьУточнениеВидаВремени(Форма, ВариантыСелектора, ТекущееСостояние, ТекущийВидРасчета, ИмяГруппы = "УточнениеВидаВремени") Экспорт
	
	ГруппаФормы = Форма.Элементы[ИмяГруппы];
	
	ИмяЭлемента = "УточняющийВидВремени";
	Элемент = Форма.Элементы.Найти(ИмяЭлемента);
	Если Элемент <> Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Элемент = Форма.Элементы.Добавить(ИмяЭлемента, Тип("ПолеФормы"), ГруппаФормы);
	Элемент.Вид = ВидПоляФормы.ПолеВвода;
	Элемент.ПоложениеЗаголовка = ПоложениеЗаголовкаЭлементаФормы.Нет;
	Элемент.ПутьКДанным = "Объект.ВидВремени";
	Элемент.УстановитьДействие("ПриИзменении", "Подключаемый_УточняющийВидВремениПриИзменении");
	Элемент.УстановитьДействие("Открытие", "Подключаемый_УточняющийВидВремениОткрытие");
	Элемент.КнопкаОчистки = Истина;
	Элемент.КнопкаВыпадающегоСписка = Ложь;
	Элемент.КнопкаВыбора            = Истина;
	Элемент.ОтображениеКнопкиВыбора = ОтображениеКнопкиВыбора.ОтображатьВПолеВвода;
	
	СуществующиеРеквизиты = Новый Массив;
	ЗарплатаКадры.ЗаполнитьМассивИменРеквизитовФормы(Форма, СуществующиеРеквизиты);
	
	ДобавляемыеРеквизиты = Новый Массив;
	
	ИмяСелектора = "СелекторОбстоятельств";
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы(ИмяСелектора, Новый ОписаниеТипов("ТаблицаЗначений")));
	// Назначение колонок таблицы селектора обстоятельств:
	//  * Состояние                  - Состояние сотрудника.
	//  * ВидВремени                 - Вид времени предопределенный для состояния сотрудника.
	//  * ВидВремениПереопределенный - Вид времени переопределенный документом.
	//  * ВидВремениУточненный       - Вид времени уточненный пользователем.
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("Состояние", Новый ОписаниеТипов(), ИмяСелектора));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ВидВремени", Новый ОписаниеТипов(), ИмяСелектора));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ВидВремениПереопределенный", Новый ОписаниеТипов(), ИмяСелектора));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ВидВремениУточненный", Новый ОписаниеТипов(), ИмяСелектора));
	
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ПозицияСелектораОбстоятельств", Новый ОписаниеТипов("Число")));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ВидВремениНачисления", Новый ОписаниеТипов()));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ВидВремениСостояния", Новый ОписаниеТипов()));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("КодВидаВремени", Новый ОписаниеТипов("Строка")));
	ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("ВидВремениУточненПользователем", Новый ОписаниеТипов("Булево")));
	
	ЗарплатаКадры.ИзменитьРеквизитыФормы(Форма, ДобавляемыеРеквизиты, СуществующиеРеквизиты);
	
	ЗаполнитьСелекторОбстоятельств(Форма[ИмяСелектора], ВариантыСелектора);
	
	Если Форма.Параметры.Ключ.Пустая() Тогда
		УстановитьПозициюСелектора(Форма, ТекущееСостояние);
	Иначе
		ВосстановитьПозициюСелектора(Форма, ТекущееСостояние);
	КонецЕсли;
	
	Форма.ВидВремениУточненПользователем = ЗначениеЗаполнено(Форма.Объект.ВидВремени) И Не ЗначениеЗаполнено(ТекущийВидРасчета);
	
	ГруппаФормы.Заголовок = НСтр("ru = 'Вид времени';
								|en = 'Time kind'");
	ГруппаФормы.ПутьКДаннымЗаголовка = "КодВидаВремени";
	ГруппаФормы.Поведение = ПоведениеОбычнойГруппы.Свертываемая;
	ГруппаФормы.ОтображениеУправления = ОтображениеУправленияОбычнойГруппы.Картинка;
	
КонецПроцедуры

Процедура УстановитьПозициюСелектора(Форма, ТекущееСостояние) Экспорт
	
	Отбор = Новый Структура("Состояние", ТекущееСостояние);
	СтрокиПоСостоянию = Форма.СелекторОбстоятельств.НайтиСтроки(Отбор);
	
	СелекторУстановлен = Ложь;
	
	Если СтрокиПоСостоянию.Количество() = 1 Тогда
		Форма.ПозицияСелектораОбстоятельств = Форма.СелекторОбстоятельств.Индекс(СтрокиПоСостоянию[0]);
		СелекторУстановлен = Истина;
	КонецЕсли;
	
	Если Не СелекторУстановлен Тогда
		ВидВремени = Форма.Объект.ВидВремени;
		ТекущийВидВремени = ?(ЗначениеЗаполнено(ВидВремени), ВидВремени, Форма.ВидВремениСостояния);
		
		Если ТекущийВидВремени = Неопределено Тогда
			Для Каждого СтрокаСелектора Из СтрокиПоСостоянию Цикл
				Если СтрокаСелектора.ВидВремениПереопределенный = Неопределено Тогда
					Форма.ПозицияСелектораОбстоятельств = Форма.СелекторОбстоятельств.Индекс(СтрокаСелектора);
					СелекторУстановлен = Истина;
				КонецЕсли;
			КонецЦикла;
		Иначе
			Для Каждого СтрокаСелектора Из СтрокиПоСостоянию Цикл
				Если ДействующийВидВремениСтроки(СтрокаСелектора) = ТекущийВидВремени Тогда
					Если Не СелекторУстановлен Тогда
						Форма.ПозицияСелектораОбстоятельств = Форма.СелекторОбстоятельств.Индекс(СтрокаСелектора);
						СелекторУстановлен = Истина;
					Иначе
						Форма.ПозицияСелектораОбстоятельств = 0;
						СелекторУстановлен = Ложь;
					КонецЕсли;
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
	КонецЕсли;
	
	Если СелекторУстановлен	Тогда
		СтрокаСелектора = Форма.СелекторОбстоятельств[Форма.ПозицияСелектораОбстоятельств];
		Форма.ВидВремениСостояния = ДействующийВидВремениСтроки(СтрокаСелектора);
	КонецЕсли;
		
КонецПроцедуры

Процедура ДобавитьУточнениеВремениВОтборНачислений(ПараметрыВыбора, Форма) Экспорт
	
	ИмяПараметра = "Отбор.ОбозначениеВТабелеУчетаРабочегоВремени";
	
	// Если вид времени уточнен пользователем.
	Если Форма.ВидВремениУточненПользователем Тогда
		ПараметрыВыбора.Вставить(ИмяПараметра, Форма.Объект.ВидВремени);
		Возврат;
	КонецЕсли;
	
	// Если вид времени выбранного состояния переопределен.
	СтрокаСелектора = Форма.СелекторОбстоятельств.Получить(Форма.ПозицияСелектораОбстоятельств);
	Если СтрокаСелектора.ВидВремениПереопределенный <> Неопределено Тогда
		ПараметрыВыбора.Вставить(ИмяПараметра, СтрокаСелектора.ВидВремениПереопределенный);
		Возврат;
	КонецЕсли;
	
	// Если документ регистрирует одинаковые состояния у которых могут быть разные виды времени.
	Отбор = Новый Структура("Состояние", СтрокаСелектора.Состояние);
	Если Форма.СелекторОбстоятельств.НайтиСтроки(Отбор).Количество() > 1 Тогда
		ПараметрыВыбора.Вставить(ИмяПараметра, ДействующийВидВремениСтроки(СтрокаСелектора));
		Возврат;
	КонецЕсли;
	
	// Иначе надо удалить параметр выбора.
	ПараметрыВыбора.Вставить(ИмяПараметра, Неопределено);
	
КонецПроцедуры

Процедура УдалитьУточнениеВремениИзПараметровВыбора(Форма, ИмяПоляВвода) Экспорт
	
	Если Форма.ВидВремениУточненПользователем Тогда
		Возврат;
	КонецЕсли;
		
	ПолеВвода = Форма.Элементы.Найти(ИмяПоляВвода);
	Если ПолеВвода = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрыВыбора = Новый Соответствие();
	ПараметрыВыбора.Вставить("Отбор.ОбозначениеВТабелеУчетаРабочегоВремени", Неопределено);
	
	ОбщегоНазначенияБЗК.УстановитьПараметрыВыбора(ПолеВвода, ПараметрыВыбора)
	
КонецПроцедуры

Процедура НастроитьУточнениеВидаВремени(Форма, ВидРасчета) Экспорт
	
	Объект = Форма.Объект;
	
	УстановитьПривилегированныйРежим(Истина);
	
	СтрокаСелектора = Форма.СелекторОбстоятельств.Получить(Форма.ПозицияСелектораОбстоятельств);
	
	ВидВремениСостоянияПереопределен = СтрокаСелектора.ВидВремениПереопределенный <> Неопределено;
	
	ВидВремениСостояния = ?(ВидВремениСостоянияПереопределен,
		СтрокаСелектора.ВидВремениПереопределенный,
		СтрокаСелектора.ВидВремени);
	
	БуквенныйКодИмяРеквизита = УчетРабочегоВремениРасширенный.БуквенныйКодИмяРеквизита(Объект.ПериодРегистрации);
	
	Реквизиты = Новый Структура();
	Реквизиты.Вставить("ОбозначениеВТабелеУчетаРабочегоВремени");
	Реквизиты.Вставить("БуквенныйКод", "ОбозначениеВТабелеУчетаРабочегоВремени." + БуквенныйКодИмяРеквизита);
	СвойстваНачисления = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ВидРасчета, Реквизиты);
	
	ВидВремениНачисления = СвойстваНачисления.ОбозначениеВТабелеУчетаРабочегоВремени;
	Если ВидВремениНачисления <> Неопределено И ВидВремениНачисления.Пустая() Тогда
		ВидВремениНачисления = Неопределено;
	КонецЕсли;
	
	КодыВидовВремени = Новый Соответствие;
	КодыВидовВремени.Вставить(СвойстваНачисления.ОбозначениеВТабелеУчетаРабочегоВремени, СвойстваНачисления.БуквенныйКод);
	
	ИзмененоНачисление =
		Форма.ВидВремениНачисления <> Неопределено
		И ВидВремениНачисления <> Неопределено
		И Форма.ВидВремениНачисления <> ВидВремениНачисления;
		
	ИзмененоСостояние =
		Форма.ВидВремениСостояния <> Неопределено
		И Форма.ВидВремениСостояния <> ВидВремениСостояния;
	
	Если ИзмененоСостояние Тогда
		
		Если ВидВремениНачисления = ВидВремениСостояния Тогда
			ВидВремениДокумента = ВидВремениСостояния;
			Если Не Форма.ВидВремениУточненПользователем Тогда
				Объект.ВидВремени = Неопределено;
			КонецЕсли;
		Иначе
			Если Форма.ВидВремениУточненПользователем Тогда
				ВидВремениДокумента = Объект.ВидВремени;
			Иначе
				Объект.ВидВремени = ВидВремениНачисления;
				ВидВремениДокумента = ВидВремениНачисления;
			КонецЕсли;
		КонецЕсли;
		
	ИначеЕсли ИзмененоНачисление Тогда
		
		Если ВидВремениНачисления = ВидВремениСостояния Тогда
			Если ВидВремениСостоянияПереопределен Тогда
				Объект.ВидВремени = ВидВремениСостояния;
			ИначеЕсли Не Форма.ВидВремениУточненПользователем Тогда
				Объект.ВидВремени = Неопределено;
			КонецЕсли;
		Иначе
			Объект.ВидВремени = ВидВремениНачисления;
		КонецЕсли;
		
		ВидВремениДокумента = ВидВремениНачисления;
		
	Иначе // Изменен уточняющий вид времени.
		
		Если ЗначениеЗаполнено(Объект.ВидВремени) Тогда
			ВидВремениДокумента = Объект.ВидВремени;
		Иначе
			Если ВидВремениНачисления = ВидВремениСостояния Тогда
				ВидВремениДокумента = ВидВремениСостояния;
			Иначе
				Объект.ВидВремени = ВидВремениНачисления;
				ВидВремениДокумента = ВидВремениНачисления;
			КонецЕсли;
		КонецЕсли;
		
	КонецЕсли;
	
	Если ВидВремениДокумента = Неопределено Тогда
		ВидВремениДокумента = ВидВремениСостояния;
	КонецЕсли;
	
	Форма.ВидВремениНачисления = ВидВремениНачисления;
	Форма.ВидВремениСостояния = ВидВремениСостояния;
	
	КодВидаВремени = КодыВидовВремени[ВидВремениДокумента];
	Если КодВидаВремени = Неопределено И ВидВремениДокумента <> Неопределено Тогда
		КодВидаВремени = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ВидВремениДокумента, БуквенныйКодИмяРеквизита)
	КонецЕсли;
	Форма.КодВидаВремени = КодВидаВремени;
	
	Элемент = Форма.Элементы.УточняющийВидВремени;
	Элемент.ПодсказкаВвода = ВидВремениСостояния;
	
	Если ВидВремениДокумента = ВидВремениСостояния И ВидВремениДокумента = ВидВремениНачисления Тогда
		Элемент.РасширеннаяПодсказка.Заголовок = "";
		Элемент.ОтображениеПодсказки = ОтображениеПодсказки.Нет;
		Возврат;
	КонецЕсли;
	
	ЧастиПодсказки = Новый Массив;
	
	Если ВидВремениДокумента <> ВидВремениСостояния И ВидВремениСостояния <> Неопределено Тогда
		СтрокаСТегами = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Стандартный вид времени: <a href = ""%1"">%2</a>';
				|en = 'Standard time kind: <a href = ""%1"">%2</a>'"),
			ПолучитьНавигационнуюСсылку(ВидВремениСостояния), Строка(ВидВремениСостояния));
		ЧастиПодсказки.Добавить(Символы.ПС);
		ЧастиПодсказки.Добавить(СтроковыеФункцииКлиентСервер.ФорматированнаяСтрока(СтрокаСТегами));
	КонецЕсли;
	
	Если ВидВремениДокумента <> ВидВремениНачисления И ВидВремениНачисления <> Неопределено Тогда
		
		Форма.ВидВремениУточненПользователем = ВидВремениДокумента <> ВидВремениСостояния;
		
		СтрокаСТегами = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Вид времени начисления: <a href = ""%1"">%2</a>';
				|en = 'Accrual time kind: <a href = ""%1"">%2</a>'"),
