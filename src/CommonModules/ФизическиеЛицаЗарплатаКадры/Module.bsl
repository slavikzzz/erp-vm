// Заполнение контактной информации физических лиц в формате JSON из других форматов.
Процедура ЗаполнитьКонтактнуюИнформациюJSON(ПараметрыОбновления = Неопределено) Экспорт
	ОбработкаЗавершена   = Истина;
	ОбработчикОтложенный = (ПараметрыОбновления <> Неопределено);
	ОшибкиКратко         = Новый Массив;
	ОшибкиПодробно       = Новый Массив;
	КоличествоОшибок     = 0;
	
	МетаданныеСправочника = Метаданные.Справочники.ФизическиеЛица;
	ПолеБлокировки        = "Ссылка";
	ТаблицаБлокировки     = МетаданныеСправочника.ПолноеИмя();
	
	РазмерПорции = ?(ОбработчикОтложенный, 1000, Неопределено);
	МассивСсылок = УправлениеКонтактнойИнформацией.ОбъектыТребующиеОбновленияКонтактнойИнформации(МетаданныеСправочника, РазмерПорции);
	
	Если ОбработчикОтложенный И МассивСсылок.Количество() = РазмерПорции Тогда
		ОбработкаЗавершена = Ложь;
	КонецЕсли;
	
	Для Каждого Ссылка Из МассивСсылок Цикл
		
		Если ОбработчикОтложенный Тогда
			Если Не ОбновлениеИнформационнойБазыЗарплатаКадрыБазовый.ПодготовитьОбновлениеДанных(
					ПараметрыОбновления,
					ТаблицаБлокировки,
					ПолеБлокировки,
					Ссылка) Тогда
				ОбработкаЗавершена = Ложь; // Объект заблокирован, требуется повторная обработка.
				Продолжить;
			КонецЕсли;
		КонецЕсли;
		
		СправочникОбъект = Ссылка.ПолучитьОбъект();
		Попытка
			ОбъектИзменен = УправлениеКонтактнойИнформацией.ОбновитьКонтактнуюИнформациюОбъекта(СправочникОбъект);
		Исключение
			ОбработкаЗавершена = Ложь;
			ОбъектИзменен = Ложь;
			КоличествоОшибок = КоличествоОшибок + 1;
			
			ИнформацияОбОшибке = ИнформацияОбОшибке();
			Подробно  = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке);
			Кратко    = КраткоеПредставлениеОшибки(ИнформацияОбОшибке);
			ДанныеXML = ОбщегоНазначения.ЗначениеВСтрокуXML(Ссылка.КонтактнаяИнформация.Выгрузить());
			
			ЗаголовокОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Ошибка при вызове функции %1 для физического лица %2: %3.';
					|en = 'An error occurred while calling the %1 function for individual %2: %3.'"),
				"УправлениеКонтактнойИнформацией.ОбновитьКонтактнуюИнформациюОбъекта",
				Строка(Ссылка),
				Кратко);
			ПолныйТекстОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = '%1
					|
					|Подробности:
					|%2
					|
					|Контактная информация:
					|%3';
					|en = '%1
					|
					|Details:
					|%2
					|
					|Contact information:
					|%3'"),
				ЗаголовокОшибки,
				Подробно,
				ДанныеXML);
			
			ЗаписьЖурналаРегистрации(
				НСтр("ru = 'Физические лица';
					|en = 'Persons'", ОбщегоНазначения.КодОсновногоЯзыка()),
				УровеньЖурналаРегистрации.Ошибка,
				Ссылка.Метаданные(),
				Ссылка,
				ПолныйТекстОшибки);
			
			Если ОшибкиКратко.Найти(Кратко) = Неопределено Тогда
				ОшибкиКратко.Добавить(Кратко);
				ОшибкиПодробно.Добавить(ЗаголовокОшибки);
			КонецЕсли;
		КонецПопытки;
		
		Если ОбъектИзменен Тогда
			ОбновлениеИнформационнойБазы.ЗаписатьОбъект(СправочникОбъект);
		КонецЕсли;
		
