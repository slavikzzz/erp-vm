		?(ПараметрыРасчета.Свойство("Регистратор"),ПараметрыРасчета.Регистратор, Неопределено));
	
	//++ НЕ УТКА
	ПараметрыПолученияПартий = ЗатратыСервер.ОписаниеПараметровПолученияАктивныхПартийБезСпецификаций();
