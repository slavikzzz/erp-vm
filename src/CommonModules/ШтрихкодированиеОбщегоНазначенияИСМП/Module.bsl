				СтрокаДанныхПоШтрихкодам.ТекстОшибки = ШаблонТекстаОшибки;
				
				СтрокаДанныхПоШтрихкодам.КонтролиРазрешительногоРежима.Добавить(СтрокаДанныхПоШтрихкодам.ТекстОшибки);
				
			ИначеЕсли РезультатОффлайнЗапроса.ОтсутствиеСинхронизацииЛМ Тогда
				
				Если ПараметрыСканирования.РасширеннаяВерсияГосИС Тогда
					
					//@skip-check wrong-string-literal-content
					Модуль = ОбщегоНазначения.ОбщийМодуль("ШтрихкодированиеИСМПКлиентСервер");
					
					ВидДополнения                                                = Модуль.ПараметрыРасширенногоОписанияОшибки();
					ВидДополнения.НекорректныеДанныеАвторизацииЛокальногоМодуляЧЗ = Истина;
