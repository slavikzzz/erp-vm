		СуммовыеПоказатели.Вычеты               = Окр(СтруктураПоказателейРаздела3.П000300022003) 
			+ Окр(СтруктураПоказателейРаздела4.П000400000103_1)
			+ Окр(СтруктураПоказателейРаздела6.П000600000104_1);
		
