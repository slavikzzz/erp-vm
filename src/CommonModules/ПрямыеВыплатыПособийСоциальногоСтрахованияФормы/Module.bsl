Функция ПредставлениеРодственнойСвязи(КодСвязи) Экспорт
	
	Если КодСвязи = "38" Тогда
		Возврат НСтр("ru = '38 - мать';
					|en = '38 - mother'");
		
	ИначеЕсли КодСвязи = "39" Тогда
		Возврат НСтр("ru = '39 - отец';
					|en = '39 - father'");
		
	ИначеЕсли КодСвязи = "40" Тогда
		Возврат НСтр("ru = '40 - опекун';
					|en = '40 - guardian'");
		
	ИначеЕсли КодСвязи = "41" Тогда
		Возврат НСтр("ru = '41 - попечитель';
					|en = '41 - guardian'");
		
	ИначеЕсли КодСвязи = "42" Тогда
		Возврат НСтр("ru = '42 - иной родственник';
					|en = '42 - other relative'");
		
	Иначе
		Возврат "";
	КонецЕсли;
	
