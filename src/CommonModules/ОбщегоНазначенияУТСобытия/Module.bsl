// Параметры:
// 	Источник - ПланВидовХарактеристикОбъект, ДокументОбъект, СправочникОбъект -
// 	Отказ - Булево -
Процедура ИсключенияПоискаСсылокПередУдалением(Источник, Отказ) Экспорт
	
	Если Источник.ОбменДанными.Загрузка Тогда
		Возврат;
	КонецЕсли;

	ТипИсточника = ТипЗнч(Источник);
	
	Если ТипИсточника = Тип("ПланВидовХарактеристикОбъект.ДополнительныеРеквизитыИСведения") Тогда
		
		УстановитьПривилегированныйРежим(Истина);
		
		Запрос = Новый Запрос;
		Запрос.Текст =
		"ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	Реквизиты.Ссылка
		|ИЗ
		|	(ВЫБРАТЬ
		|		ТабличнаяЧасть.Ссылка КАК Ссылка
		|	ИЗ
		|		Справочник.ВидыНоменклатуры.РеквизитыДляКонтроляНоменклатуры КАК ТабличнаяЧасть
		|	ГДЕ
		|		ТабличнаяЧасть.Свойство = &УдаляемоеСвойство
		|	
		|	ОБЪЕДИНИТЬ ВСЕ
		|	
		|	ВЫБРАТЬ
		|		ТабличнаяЧасть.Ссылка
		|	ИЗ
		|		Справочник.ВидыНоменклатуры.РеквизитыДляКонтроляХарактеристик КАК ТабличнаяЧасть
		|	ГДЕ
		|		ТабличнаяЧасть.Свойство = &УдаляемоеСвойство
		|	
		|	ОБЪЕДИНИТЬ ВСЕ
		|	
		|	ВЫБРАТЬ
		|		ТабличнаяЧасть.Ссылка
		|	ИЗ
		|		Справочник.ВидыНоменклатуры.РеквизитыДляКонтроляСерий КАК ТабличнаяЧасть
		|	ГДЕ
		|		ТабличнаяЧасть.Свойство = &УдаляемоеСвойство
		|	
		|	ОБЪЕДИНИТЬ ВСЕ
		|	
		|	ВЫБРАТЬ
		|		ТабличнаяЧасть.Ссылка
		|	ИЗ
		|		Справочник.ВидыНоменклатуры.РеквизитыБыстрогоОтбораНоменклатуры КАК ТабличнаяЧасть
		|	ГДЕ
		|		ТабличнаяЧасть.Свойство = &УдаляемоеСвойство
		|	
		|	ОБЪЕДИНИТЬ ВСЕ
		|	
		|	ВЫБРАТЬ
		|		ТабличнаяЧасть.Ссылка
		|	ИЗ
		|		Справочник.ВидыНоменклатуры.РеквизитыБыстрогоОтбораХарактеристик КАК ТабличнаяЧасть
		|	ГДЕ
		|		ТабличнаяЧасть.Свойство = &УдаляемоеСвойство) КАК Реквизиты";
		
		Запрос.УстановитьПараметр("УдаляемоеСвойство", Источник.Ссылка);
		
		Выборка = Запрос.Выполнить().Выбрать();
		
		НачатьТранзакцию();
			
		Попытка
			
			Пока Выборка.Следующий() Цикл
				
				Блокировка = Новый БлокировкаДанных;
				ЭлементБлокировки = Блокировка.Добавить("Справочник.ВидыНоменклатуры");
				ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
				ЭлементБлокировки.УстановитьЗначение("Ссылка", Выборка.Ссылка);
				
				Блокировка.Заблокировать();
				ЗаблокироватьДанныеДляРедактирования(Выборка.Ссылка);
				ОбъектССсылкой = Выборка.Ссылка.ПолучитьОбъект(); // СправочникОбъект.ВидыНоменклатуры - 
				
				УдалитьВхожденияЭлементаИзТабличнойЧасти(ОбъектССсылкой.РеквизитыДляКонтроляНоменклатуры,     Источник.Ссылка, "Свойство");
				УдалитьВхожденияЭлементаИзТабличнойЧасти(ОбъектССсылкой.РеквизитыДляКонтроляХарактеристик,    Источник.Ссылка, "Свойство");
				УдалитьВхожденияЭлементаИзТабличнойЧасти(ОбъектССсылкой.РеквизитыДляКонтроляСерий,            Источник.Ссылка, "Свойство");
				УдалитьВхожденияЭлементаИзТабличнойЧасти(ОбъектССсылкой.РеквизитыБыстрогоОтбораНоменклатуры,  Источник.Ссылка, "Свойство");
				УдалитьВхожденияЭлементаИзТабличнойЧасти(ОбъектССсылкой.РеквизитыБыстрогоОтбораХарактеристик, Источник.Ссылка, "Свойство");
				
				ОбъектССсылкой.Записать();
				
			КонецЦикла;
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			ОписаниеОшибки = ОписаниеОшибки();
			ВызватьИсключение ОписаниеОшибки;
			
		КонецПопытки;
	//++ НЕ УТ
	ИначеЕсли ТипИсточника = Тип("ДокументОбъект.ИзменениеПараметровНМА2_4") 
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ИзменениеПараметровОС2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.МодернизацияОС2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ПереоценкаНМА2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ПереоценкаОС2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ПринятиеКУчетуНМА2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ПринятиеКУчетуОС2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ПринятиеКУчетуУзловКомпонентовАмортизации")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.РазукомплектацияОС")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.ОбъединениеОС")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.СписаниеНМА2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.СписаниеОС2_4")
		ИЛИ ТипИсточника = Тип("ДокументОбъект.УлучшениеНМА") Тогда
		
		УстановитьПривилегированныйРежим(Истина);
		
		ИмяТаблицы = ОбщегоНазначения.ИмяТаблицыПоСсылке(Источник.Ссылка);
		
		ТекстЗапроса = 
		"ВЫБРАТЬ
		|	ДанныеДокумента.Ссылка КАК Ссылка
		|ИЗ
		|	&Таблица КАК ДанныеДокумента
		|ГДЕ
		|	ДанныеДокумента.ДокументВДругомУчете = &УдаляемыйОбъект";
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&Таблица", ИмяТаблицы);
		
		Запрос = Новый Запрос(ТекстЗапроса);
		Запрос.УстановитьПараметр("УдаляемыйОбъект", Источник.Ссылка);
		
		Результат = Запрос.Выполнить();
		Выборка = Результат.Выбрать();
		
		НачатьТранзакцию();
		Попытка
		
			Пока Выборка.Следующий() Цикл
			
				Блокировка = Новый БлокировкаДанных;
				ЭлементБлокировки = Блокировка.Добавить(ИмяТаблицы);
				ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
				ЭлементБлокировки.УстановитьЗначение("Ссылка", Выборка.Ссылка);
				
				Блокировка.Заблокировать();
				ЗаблокироватьДанныеДляРедактирования(Выборка.Ссылка);
				
				ОбъектССсылкой = Выборка.Ссылка.ПолучитьОбъект(); // ДокументОбъект - 
				ОбъектССсылкой.ДокументВДругомУчете = Неопределено;
				ОбъектССсылкой.Записать();
			
			КонецЦикла;
			
			ЗафиксироватьТранзакцию();
		
		Исключение
			ОтменитьТранзакцию();
			
			ОписаниеОшибки = ОписаниеОшибки();
			ВызватьИсключение ОписаниеОшибки;
		КонецПопытки; 
		
	ИначеЕсли ТипИсточника = Тип("СправочникОбъект.СтатьиБюджетов") 
		ИЛИ ТипИсточника = Тип("СправочникОбъект.ПоказателиБюджетов") Тогда
		
		УстановитьПривилегированныйРежим(Истина);
		
		ТекстЗапроса = 
		"ВЫБРАТЬ
		|	ПравилаПолученияФактаПоПоказателямБюджетов.Ссылка КАК Ссылка
		|ИЗ
		|	Справочник.ПравилаПолученияФактаПоПоказателямБюджетов КАК ПравилаПолученияФактаПоПоказателямБюджетов
		|ГДЕ
		|	ПравилаПолученияФактаПоПоказателямБюджетов.ПоказательБюджетов = &УдаляемыйОбъект
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ
		|	ПравилаПолученияФактаПоСтатьямБюджетов.Ссылка
		|ИЗ
		|	Справочник.ПравилаПолученияФактаПоСтатьямБюджетов КАК ПравилаПолученияФактаПоСтатьямБюджетов
		|ГДЕ
		|	ПравилаПолученияФактаПоСтатьямБюджетов.СтатьяБюджетов = &УдаляемыйОбъект";
		
		Запрос = Новый Запрос(ТекстЗапроса);
		Запрос.УстановитьПараметр("УдаляемыйОбъект", Источник.Ссылка);
		
		Результат = Запрос.Выполнить();
		Выборка = Результат.Выбрать();
		
		НачатьТранзакцию();
		Попытка
		
			Пока Выборка.Следующий() Цикл
			
				Блокировка = Новый БлокировкаДанных;
				ИмяТаблицы = ОбщегоНазначения.ИмяТаблицыПоСсылке(Выборка.Ссылка);
		
				ЭлементБлокировки = Блокировка.Добавить(ИмяТаблицы);
				ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
				ЭлементБлокировки.УстановитьЗначение("Ссылка", Выборка.Ссылка);
				
				Блокировка.Заблокировать();
				ЗаблокироватьДанныеДляРедактирования(Выборка.Ссылка);
				
				ОбъектССсылкой = Выборка.Ссылка.ПолучитьОбъект();
				ОбъектССсылкой.Удалить();
			
			КонецЦикла;
			
			ЗафиксироватьТранзакцию();
		
		Исключение
			ОтменитьТранзакцию();
			
			ОписаниеОшибки = ОписаниеОшибки();
			ВызватьИсключение ОписаниеОшибки;
		КонецПопытки; 
		
	//-- НЕ УТ
	
	//++ НЕ УТКА
	ИначеЕсли ТипИсточника = Тип("СправочникОбъект.ТехнологическиеПроцессы") Тогда
		
		УстановитьПривилегированныйРежим(Истина);
		
		ТекстЗапроса = "
		|ВЫБРАТЬ
		|	ТехнологическиеОперации.Ссылка                  КАК Ссылка,
		|	ТехнологическиеОперации.Владелец                КАК Владелец,
		|	ТехнологическиеОперации.Основание.Представление КАК ОснованиеПредставление
		|ИЗ
		|	Справочник.ТехнологическиеОперации КАК ТехнологическиеОперации
		|ГДЕ
		|	ТехнологическиеОперации.Основание = &УдаляемыйОбъект";
		
		Запрос = Новый Запрос(ТекстЗапроса);
		Запрос.УстановитьПараметр("УдаляемыйОбъект", Источник.Ссылка);
		
		Результат = Запрос.Выполнить();
		Выборка = Результат.Выбрать();
		
		НачатьТранзакцию();
		Попытка
		
			Пока Выборка.Следующий() Цикл
			
				Блокировка = Новый БлокировкаДанных;
		
				ЭлементБлокировки = Блокировка.Добавить("Справочник.ТехнологическиеОперации");
				ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
				ЭлементБлокировки.УстановитьЗначение("Ссылка", Выборка.Ссылка);
				ЭлементБлокировки.УстановитьЗначение("Владелец", Выборка.Владелец);
				ЭлементБлокировки.УстановитьЗначение("Спецификация", Справочники.РесурсныеСпецификации.ПолучитьСсылку());
				
				Блокировка.Заблокировать();
				
				ОбъектССсылкой = Выборка.Ссылка.ПолучитьОбъект(); // СправочникОбъект.ТехнологическиеОперации
				ОбъектССсылкой.Основание = СтрШаблон("%1 (%2)", Выборка.ОснованиеПредставление, НСтр("ru = 'удален';
																									|en = 'deleted'"));
				ОбъектССсылкой.Записать();
			
			КонецЦикла;
			
			ЗафиксироватьТранзакцию();
		
		Исключение
			ОтменитьТранзакцию();
			
			ОписаниеОшибки = ОписаниеОшибки();
			ВызватьИсключение ОписаниеОшибки;
		КонецПопытки;
	//-- НЕ УТКА
	
	КонецЕсли;
	
КонецПроцедуры

Процедура ОчиститьОтветственногоВСправочникахОбработкаЗаполнения(Источник, ДанныеЗаполнения, ТекстЗаполнения, СтандартнаяОбработка) Экспорт
	
	Если Не ОбщегоНазначения.ДоступноИспользованиеРазделенныхДанных() Тогда
		Возврат;
	КонецЕсли;
	
	ОтветственныйВДокументах = ПолучитьФункциональнуюОпцию("ОтветственныйВДокументах");
	СтандартнаяСсылка 		 = Справочники.Пользователи.ПолучитьСсылку(Новый УникальныйИдентификатор("aa00559e-ad84-4494-88fd-f0826edc46f0"));
	ТекущийПользователь		 = Пользователи.АвторизованныйПользователь();
	МетаданныеДокумента 	 = Источник.Метаданные();
	
	Если Не ОтветственныйВДокументах ИЛИ (СтандартнаяСсылка = ТекущийПользователь 
		И ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ТекущийПользователь, "Служебный")) Тогда
		
		Если Не Источник.ЭтоГруппа Тогда 
			Если МетаданныеДокумента.Реквизиты.Найти("Ответственный") <> Неопределено Тогда
				Источник.Ответственный = Неопределено;
			КонецЕсли;
			
			Если МетаданныеДокумента.Реквизиты.Найти("Менеджер") <> Неопределено Тогда
				Источник.Менеджер = Неопределено;
			КонецЕсли;
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

