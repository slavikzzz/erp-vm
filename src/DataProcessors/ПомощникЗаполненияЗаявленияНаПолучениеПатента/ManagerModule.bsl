		ДокументОбъект.Записать();
		
		ЗафиксироватьТранзакцию();
		
	Исключение
		ОтменитьТранзакцию();
		ИмяСобытия = НСтр("ru = 'Формирование заявления на получение патента.';
							|en = 'Generating an application for a patent.'", ОбщегоНазначения.КодОсновногоЯзыка());
		ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, ДокументСсылка.Метаданные(), ДокументСсылка, ИнформацияОбОшибке());
	КонецПопытки;
	
