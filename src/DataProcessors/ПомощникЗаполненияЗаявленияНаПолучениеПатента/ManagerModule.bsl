		ДанныеЗаполнения = ДокументОбъект.ДанныеУведомления.Получить();
		
		Страницы = НаименованиеСтраниц(ИмяФормы);
		
		ЗаполнитьЗначенияСвойств(ДанныеЗаполнения.ДанныеУведомления[Страницы.Титульная], ПараметрыЗаявления.Стр01);
