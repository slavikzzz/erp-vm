	ТоварыКОтгрузке.Очистить();
	ТоварыОтобрано.Очистить();
	ТоварыОтгружено.Очистить();
	
	СтруктураОрдера = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Ссылка, "Склад, Комментарий, Помещение, ЗонаОтгрузки, Статус");
	
