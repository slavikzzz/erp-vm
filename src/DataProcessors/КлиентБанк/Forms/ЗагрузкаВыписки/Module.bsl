			КонецЕсли;
		Иначе
			Возврат НСтр("ru = '<Файл не содержит сведений о расчетных счетах>';
						|en = '<The file does not contain information on current accounts>'");
		КонецЕсли;
		
		Если ДанныеВыписки.Свойство("Заголовок", ДанныеЗаголовкаВыписки) Тогда
			ТекстЗаголовка = "
			|" + НСтр("ru = 'Отправитель';
						|en = 'Sender'") + "              " + ДанныеЗаголовкаВыписки["Отправитель"] + "
