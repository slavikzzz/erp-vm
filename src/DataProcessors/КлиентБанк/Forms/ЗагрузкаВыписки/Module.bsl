						|en = 'Date created'") + "            " + ДанныеЗаголовкаВыписки["ДатаСоздания"] + " " + ДанныеЗаголовкаВыписки["ВремяСоздания"] + "
			|" + НСтр("ru = 'Начало периода';
						|en = 'Period start'") + "           " + ДанныеЗаголовкаВыписки["ДатаНачала"] + "
			|" + НСтр("ru = 'Окончание периода';
						|en = 'Period end'") + "        " + ДанныеЗаголовкаВыписки["ДатаКонца"] + "
			|";
		КонецЕсли;
		
