	Отбор.Вставить("Месяц", КонецМесяца(Объект.КонецПериода));
	
	ПараметрыФормы = Новый Структура;
	Если КОформлению <> Неопределено Тогда
		ПараметрыФормы.Вставить("СтруктураБыстрогоОтбора", Отбор);
