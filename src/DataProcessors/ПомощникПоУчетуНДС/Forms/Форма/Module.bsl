	ПараметрыОткрытия.Вставить("ВидОтчета", ВидОтчета);
	ПараметрыОткрытия.Вставить("Организация", Организация);
	
	Форма = ОткрытьФорму("ОбщаяФорма.РегламентированнаяОтчетность", ПараметрыОткрытия, , "1С-Отчетность");
