	ВидыПродукцииВДокументе = ПараметрыОбработки.ДанныеШтрихкодов.ВидыПродукцииВДокументе;
		
	Если ПроверкаОрганизации Тогда
		ОткрытыеТоварныеГруппы = ТоварныеГруппыИзДанныхСервиса(ВидыПродукцииВДокументе,
			ПараметрыОбработки.ТоварныеГруппыОрганизацииПоДаннымСервиса);
		ИдентификаторПроверки = ПараметрыОбработки.ИдентификаторыПроверок.НаличиеТоварныхГруппУОрганизации;
		СтрокаОбращение = НСтр("ru = 'У организации';
								|en = 'У организации'");
		КонтрагентОрганизация = ПараметрыОбработки.РеквизитыДокумента.Организация;
	Иначе
		ОткрытыеТоварныеГруппы = ТоварныеГруппыИзДанныхСервиса(ВидыПродукцииВДокументе,
			ПараметрыОбработки.ТоварныеГруппыКонтрагентаПоДаннымСервиса);
		ИдентификаторПроверки = ПараметрыОбработки.ИдентификаторыПроверок.НаличиеТоварныхГруппУКонтрагента;
		СтрокаОбращение = НСтр("ru = 'У контрагента';
								|en = 'У контрагента'");
		КонтрагентОрганизация = ПараметрыОбработки.РеквизитыДокумента.Контрагент;
	КонецЕсли;
		
	РезультатПроверки = РезультатПроверки();
	РезультатПроверки.ТекущаяПроверка = ИдентификаторПроверки;
	ПараметрыОбработки.РезультатыПроверок[РезультатПроверки.ТекущаяПроверка] = РезультатПроверки;
	
	Если ВидыПродукцииВДокументе.Количество() = 0 Тогда
		Возврат РезультатПроверки;
	КонецЕсли;
	
	РезультатПроверки.СостояниеОшибки = НСтр("ru = 'Товарная группа закрыта';
											|en = 'Товарная группа закрыта'");
	
	ТоварныеГруппы = Новый Массив;
	
	Для Каждого ВидПродукции Из ВидыПродукцииВДокументе Цикл
		Если ОткрытыеТоварныеГруппы.Найти(ВидПродукции) = Неопределено Тогда
			ТоварныеГруппы.Добавить(ВидПродукции);
		КонецЕсли;
	КонецЦикла;
	
	Если ТоварныеГруппы.Количество() = 0 Тогда
		Возврат РезультатПроверки;
	КонецЕсли;
	
	РезультатПроверки.ЕстьОшибки  = Истина;
	РезультатПроверки.ТекстОшибки = СформироватьПредставлениеОшибкиНаличиеТоварныхГруппУКонтрагента(СтрокаОбращение,
		КонтрагентОрганизация, ТоварныеГруппы);
	
	РезультатПроверки.Данные = РезультатПроверки.ТекстОшибки;
	
	Возврат РезультатПроверки;
	
КонецФункции

Функция НаличиеЗарегистрированногоМОДаОрганизации(ПараметрыОбработки)
	
	РезультатПроверки = РезультатПроверки();
	РезультатПроверки.ТекущаяПроверка = ПараметрыОбработки.ИдентификаторыПроверок.ПроверкаМестОсуществленияДеятельностиОрганизации;
	
	СтруктураОписанияОшибок = Новый Структура();
	СтруктураОписанияОшибок.Вставить("Организация",      ПараметрыОбработки.РеквизитыДокумента.Организация);
	СтруктураОписанияОшибок.Вставить("Грузоотправитель", ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.УполномоченноеЛицоЗаПоставкуГруза);
	СтруктураОписанияОшибок.Вставить("АдресМОД",         "");
	СтруктураОписанияОшибок.Вставить("ШаблонОшибки",     "");
	
	РезультатПроверки.Данные = СтруктураОписанияОшибок;
	ПараметрыОбработки.РезультатыПроверок[РезультатПроверки.ТекущаяПроверка] = РезультатПроверки;
	
	Если Не ПараметрыОбработки.ПередачаПивнойПродукции Тогда
		Возврат РезультатПроверки;
	КонецЕсли;
	
	// для юридических лиц - если Грузоотправитель ОнЖе, тогда МОД проверка по ИНН/КПП организации, 
	// иначе по ИНН/КПП Грузоотправителя
	ИНН_ВладельцаМОДПродавца = "";
	КПП_ВладельцаМОДПродавца = "";
	ОбъектПродавец           = Неопределено;
		
	Если ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.УполномоченноеЛицоЗаПоставкуГруза) Тогда
		
		ОбъектПродавец                   = ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.УполномоченноеЛицоЗаПоставкуГруза;
		ЭтоИндивидуальныйПредприниматель = ОбщегоНазначенияИСВызовСервера.ПартнерОрганизацияЭтоИндивидуальныйПредприниматель(ОбъектПродавец);
		
		ИНН_ВладельцаМОДПродавца = ПараметрыОбработки.РеквизитыДокумента.ГрузоотправительИНН;
		КПП_ВладельцаМОДПродавца = ПараметрыОбработки.РеквизитыДокумента.ГрузоотправительКПП;
		
		Если Не ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ГрузоотправительИНН) Тогда
			
			РезультатПроверки.ЕстьОшибки          = Истина;
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не заполнен ИНН грузоотправителя';
														|en = 'Не заполнен ИНН грузоотправителя'");
			РезультатПроверки.Данные.ШаблонОшибки = "НетИННГрузоотправителя";
			
			Возврат РезультатПроверки;
			
		КонецЕсли;
		
		Если Не ЭтоИндивидуальныйПредприниматель И Не ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ГрузоотправительКПП) Тогда
			
			РезультатПроверки.ЕстьОшибки          = Истина;
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не заполнен КПП грузоотправителя';
														|en = 'Не заполнен КПП грузоотправителя'"); 
			РезультатПроверки.Данные.ШаблонОшибки = "НетКППГрузоотправителя";
			
			Возврат РезультатПроверки;
			
		КонецЕсли;
		
		Если ЭтоИндивидуальныйПредприниматель И ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.АдресСтрокой) Тогда
			
			РезультатПроверки.Данные.АдресМОД     = ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.АдресСтрокой;
			РезультатПроверки.Данные.ШаблонОшибки = "НетМОДГрузоотправителяПоАдресу";
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не найден МОД грузоотправителя';
														|en = 'Не найден МОД грузоотправителя'");
			
		Иначе
			РезультатПроверки.Данные.ШаблонОшибки = "НетМОДГрузоотправителя";
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не заполнен адрес МОД грузоотправителя';
														|en = 'Не заполнен адрес МОД грузоотправителя'");
		КонецЕсли;
		
	Иначе
		
		ОбъектПродавец                   = ПараметрыОбработки.РеквизитыДокумента.Организация;
		ЭтоИндивидуальныйПредприниматель = ОбщегоНазначенияИСВызовСервера.ПартнерОрганизацияЭтоИндивидуальныйПредприниматель(ОбъектПродавец);
		
		ИНН_ВладельцаМОДПродавца = ПараметрыОбработки.РеквизитыДокумента.ОрганизацияИНН;
		КПП_ВладельцаМОДПродавца = ПараметрыОбработки.РеквизитыДокумента.ОрганизацияКПП;
		
		Если Не ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ОрганизацияИНН) Тогда
			
			РезультатПроверки.ЕстьОшибки          = Истина;
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не заполнен ИНН организации';
														|en = 'Не заполнен ИНН организации'"); 
			РезультатПроверки.Данные.ШаблонОшибки = "НетИННОрганизации";
			
			Возврат РезультатПроверки;
			
		КонецЕсли;
		
		Если Не ЭтоИндивидуальныйПредприниматель И Не ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ОрганизацияКПП) Тогда
			
			РезультатПроверки.ЕстьОшибки          = Истина;
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не заполнен КПП организации';
														|en = 'Не заполнен КПП организации'");
			РезультатПроверки.Данные.ШаблонОшибки = "НетКППОрганизации";
			
			Возврат РезультатПроверки;
			
		КонецЕсли;
		
		Если ЭтоИндивидуальныйПредприниматель И ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.АдресСтрокой) Тогда
		
			РезультатПроверки.Данные.АдресМОД     = ПараметрыОбработки.РеквизитыДокумента.ДанныеПродавца.АдресСтрокой;
			РезультатПроверки.Данные.ШаблонОшибки = "НетМОДОрганизацииПоАдресу";
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не найден МОД организации';
														|en = 'Не найден МОД организации'");
			
		Иначе
			РезультатПроверки.Данные.ШаблонОшибки = "НетМОДОрганизации";
			РезультатПроверки.СостояниеОшибки     = НСтр("ru = 'Не заполнен адрес МОД организации';
														|en = 'Не заполнен адрес МОД организации'");
		КонецЕсли;
		
	КонецЕсли;
	
	Если ЭтоИндивидуальныйПредприниматель
		И Не ЗначениеЗаполнено(ПараметрыОбработки.РеквизитыДокумента.ИдентификаторГАР_МОД_Отправителя) Тогда
		
		РезультатПроверки.ЕстьОшибки  = Истина;
		Возврат РезультатПроверки;
		
	КонецЕсли;
	
	Если ЭтоИндивидуальныйПредприниматель
		И (РезультатПроверки.Данные.ШаблонОшибки = "НетМОДОрганизацииПоАдресу"
		Или РезультатПроверки.Данные.ШаблонОшибки = "НетМОДГрузоотправителяПоАдресу") Тогда
		РезультатПроверки.Данные.Вставить("ВладелецМОД", ОбъектПродавец);
		РезультатПроверки.Данные.Вставить("ИНН_МОД", ИНН_ВладельцаМОДПродавца);
		РезультатПроверки.Данные.Вставить("КодФИАСв1С", ПараметрыОбработки.РеквизитыДокумента.ИдентификаторГАР_МОД_Отправителя);
	КонецЕсли;
	
	РезультатЗапроса = ЗапроситьСтатусМОД_ОрганизацииКонтрагента(
		ПараметрыОбработки.Организация,
		ИНН_ВладельцаМОДПродавца,
		КПП_ВладельцаМОДПродавца,
		ПараметрыОбработки.РеквизитыДокумента.ИдентификаторГАР_МОД_Отправителя);
	
	РезультатПроверки.ОшибкаСервиса = РезультатЗапроса.ОшибкаСервиса;
	
	Если РезультатЗапроса.ТребуетсяОбновлениеКлючаСессии Тогда
		
		РезультатПроверки.ТребуетсяОбновлениеКлючаСессии = Истина;
		
	ИначеЕсли Не РезультатЗапроса.МОДНайден Тогда
		
		РезультатПроверки.ЕстьОшибки      = Истина;
		РезультатПроверки.СостояниеОшибки = НСтр("ru = 'Не найден МОД организации';
												|en = 'Не найден МОД организации'");
		РезультатПроверки.ТекстОшибки     = РезультатЗапроса.ТекстОшибки;
		
	КонецЕсли;
	
	Возврат РезультатПроверки;
	
