&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяСтраницыПанели = "", ОбластьИмя = "")
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	мФормаОтчета = Форма.ПолеТабличногоДокументаФормаОтчета;
	
	ТекГрафа  = "";
	ТекСтрока = "";
	СтрРассчитатьГрафы = "";
	
	Если Лев(ОбластьИмя, 1) = "П" И СтрДлина(ОбластьИмя) = 13 Тогда
		ТекГрафа  = Прав(ОбластьИмя, 2);
		ТекСтрока = Сред(ОбластьИмя, 10, 2);
		Если НЕ Форма.СтруктураЗависимыхЯчеекДляАвторасчета.Свойство("_" + ТекГрафа, СтрРассчитатьГрафы) Тогда
			СтрРассчитатьГрафы = ТекГрафа;
		КонецЕсли;
	ИначеЕсли НЕ ПустаяСтрока(ОбластьИмя) Тогда
		Возврат;
	КонецЕсли;
	
	КвоСтр = 13;
	КвоКол = 11;
	НомСтрокИскл = "07,08,09,10";
	НомГрафИскл  = "07,10";
	
	Для ИндКол = 0 По КвоКол - 1 Цикл
		
		СтрНомКол = Формат(КвоКол - ИндКол, "ЧЦ=2; ЧВН=; ЧГ=");
		
		Если СтрНайти(НомГрафИскл, СтрНомКол) > 0 Тогда
		
			Продолжить;
		
		КонецЕсли;
		
		Если ТекГрафа = "" ИЛИ СтрНайти(СтрРассчитатьГрафы, СтрНомКол) > 0 Тогда
		
			СуммаПоГрафе = 0;
			
			Для ИндСтр = 0 По КвоСтр - 2 Цикл // без первой строки
				
				СтрНомСтр = Формат(КвоСтр - ИндСтр, "ЧЦ=2; ЧВН=; ЧГ=");
				
				Если ТекСтрока = "" ИЛИ СтрНомСтр = ТекСтрока Тогда
					Если СтрНомКол = "05" Тогда // расчет: графа 5 = сумме граф 9-11 по текущей строке
						мФормаОтчета.Области["П00000000" + СтрНомСтр + СтрНомКол].Значение
							= мФормаОтчета.Области["П00000000" + СтрНомСтр + "09"].Значение
							+ мФормаОтчета.Области["П00000000" + СтрНомСтр + "11"].Значение;
					ИначеЕсли СтрНомКол = "03" Тогда // расчет: графа 3 = сумме граф 6-8 по текущей строке
						мФормаОтчета.Области["П00000000" + СтрНомСтр + СтрНомКол].Значение
							= мФормаОтчета.Области["П00000000" + СтрНомСтр + "06"].Значение
							+ мФормаОтчета.Области["П00000000" + СтрНомСтр + "08"].Значение;
					КонецЕсли;
				КонецЕсли;
				
				Если СтрНайти(НомСтрокИскл, СтрНомСтр) = 0 Тогда
				
					СуммаПоГрафе = СуммаПоГрафе + мФормаОтчета.Области["П00000000" + СтрНомСтр + СтрНомКол].Значение;
				
				КонецЕсли;
				
			КонецЦикла;
			
			//Расчет: стр.01 = сумме строк  02-06, 11-13 по всем графам
			мФормаОтчета.Области["П0000000001" + СтрНомКол].Значение = СуммаПоГрафе;
		
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

