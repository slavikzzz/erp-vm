&НаСервере
Функция НомерГруппы(ОТЧ, Данные)
	Результат = Неопределено;
	ВременнаяСтрока = "";
	Для Инд = 1 по СтрДлина(Данные) Цикл 
		ТекСимвол = Сред(Данные, Инд, 1);
		Если СтроковыеФункцииКлиентСервер.ТолькоЦифрыВСтроке(ТекСимвол) Тогда
			Если ЗначениеЗаполнено(Результат) Тогда 
				Возврат Неопределено;
			Иначе
				ВременнаяСтрока = ВременнаяСтрока + ТекСимвол;
			КонецЕсли;
		Иначе
			Если ЗначениеЗаполнено(ВременнаяСтрока) Тогда 
				Результат = ОТЧ.ПривестиЗначение(ВременнаяСтрока);
			КонецЕсли;
			ВременнаяСтрока = "";
		КонецЕсли;
	КонецЦикла;
	
	Возврат ?(ЗначениеЗаполнено(Результат), Результат, ОТЧ.ПривестиЗначение(ВременнаяСтрока));
КонецФункции

&НаСервере
Процедура ЗаполнитьТовары(Узел)
	ОТЧ = Новый ОписаниеТипов("Число");
	Если мГруппыПоКлассификатору.Количество() = 0 Тогда 
		ЗагрузитьПоказателиИзМакета("ГруппыПоКлассификатору");
	КонецЕсли;
	
	Узел_product = РегламентированнаяОтчетность.ПолучитьПодчиненныйЭлемент(Узел, "product");
	Для Каждого Стр Из ТаблицаСтраницыТовары Цикл 
		Данные = Стр.Данные[0].Значение;
		ДанныеДопСтрок = Стр.ДанныеДопСтрок[0].Значение.П11000;
		П100 = НомерГруппы(ОТЧ, Данные.П100);
		Если Не ЗначениеЗаполнено(П100) Тогда 
			Продолжить;
		КонецЕсли;
		
		ИмяГруппы = мГруппыПоКлассификатору.НайтиСтроки(Новый Структура("Код", Данные.П100));
		Если ИмяГруппы.Количество() = 1 Тогда 
			ИмяГруппы = ИмяГруппы[0].Название;
		Иначе
			ИмяГруппы = "";
		КонецЕсли;
		
		Для Каждого Стр2 Из ДанныеДопСтрок Цикл 
			НовУзел_product = РегламентированнаяОтчетность.НовыйУзелИзПрототипа(Узел_product);
			product_group = РегламентированнаяОтчетность.ПолучитьПодчиненныйЭлемент(НовУзел_product, "product_group");
			РегламентированнаяОтчетность.УстановитьЗначениеЭлемента(product_group, "number", П100);
			РегламентированнаяОтчетность.УстановитьЗначениеЭлемента(product_group, "group_name", ИмяГруппы);
			
			okpd2 = РегламентированнаяОтчетность.ПолучитьПодчиненныйЭлемент(НовУзел_product, "okpd2");
			Если ЗначениеЗаполнено(Стр2.П1100003) Тогда 
