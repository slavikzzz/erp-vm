	Обл1 = ТабДок.ПолучитьОбласть("ЗаголовокРаздел2");
	ПечатнаяФорма.Вывести(Обл1);
	Обл1 = ТабДок.ПолучитьОбласть("ЗаголовокТЧТовары");
