	ТабДок = Отчеты[Сред(Лев(ИмяФормы, СтрНайти(ИмяФормы, ".Форма.") - 1), 7)].ПолучитьМакет("ФормаОтчета2016Кв1_ПФ");
	
	ПечатнаяФорма = РегламентированнаяОтчетность.НоваяСтраница();
