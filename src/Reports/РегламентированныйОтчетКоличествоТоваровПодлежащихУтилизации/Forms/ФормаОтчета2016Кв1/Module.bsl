	ПараметрыВыгрузки.Вставить("is_non_resident_en", ?(СтруктураДанныхТитульный.is_non_resident = Истина, "true", "false"));
	ПараметрыВыгрузки.Вставить("is_producer_of_goods_en", ?(СтруктураДанныхТитульный.is_producer_of_goods = Истина, "true", "false"));
