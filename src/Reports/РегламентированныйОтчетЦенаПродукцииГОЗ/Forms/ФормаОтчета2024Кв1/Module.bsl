	РезультатВыгрузки.Вставить("ДатаСоставленияОтчета",  ПараметрыВыгрузки.ReportDateParamContainer);
	РезультатВыгрузки.Вставить("ДатаФормированияОтчета", ПараметрыВыгрузки.CreateDateParamContainer);
	РезультатВыгрузки.Вставить("UID", ПараметрыВыгрузки.UID);
