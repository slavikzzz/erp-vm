	ПараметрыВыгрузки.Вставить("CreateDateParam", XMLСтрока(ТекущаяДатаСеанса()) + Постфикс);
	ПараметрыВыгрузки.Вставить("ReportDateParam", XMLСтрока(Титульный.ReportDate) + Постфикс);
	ПараметрыВыгрузки.Вставить("ВерсПрог", РегламентированнаяОтчетность.НазваниеИВерсияПрограммы());
	ПараметрыВыгрузки.Вставить("ИмяКлючевогоУзлаСодержательнойЧасти", "Form");
	ПараметрыВыгрузки.Вставить("ИдФайл", ИдентификаторФайлаВыгрузки());
	ПараметрыВыгрузки.Вставить("CreateDateParamContainer", ТекущаяДатаСеанса());
	ПараметрыВыгрузки.Вставить("ReportDateParamContainer", Титульный.ReportDate);
	ПараметрыВыгрузки.Вставить("Type", Титульный.Type);
	
	Возврат ПараметрыВыгрузки;
КонецФункции

&НаСервере
Функция ИзвлечьСтруктуруXML(ИмяМакета)
	
	ДеревоСтруктуры = Новый ДеревоЗначений;
	ДеревоСтруктуры.Колонки.Добавить("Код");
	ДеревоСтруктуры.Колонки.Добавить("Тип");
	ДеревоСтруктуры.Колонки.Добавить("Формат");
	ДеревоСтруктуры.Колонки.Добавить("МинРазмерность");
	ДеревоСтруктуры.Колонки.Добавить("МаксРазмерность");
	ДеревоСтруктуры.Колонки.Добавить("Обязательность");
	ДеревоСтруктуры.Колонки.Добавить("Многостраничность");
	ДеревоСтруктуры.Колонки.Добавить("Многострочность");
	ДеревоСтруктуры.Колонки.Добавить("Раздел");
	ДеревоСтруктуры.Колонки.Добавить("Ключ");
	ДеревоСтруктуры.Колонки.Добавить("Условие");
	ДеревоСтруктуры.Колонки.Добавить("ЗначениеПоУмолчанию");
	ДеревоСтруктуры.Колонки.Добавить("Значение");
	ДеревоСтруктуры.Колонки.Добавить("Представление");
	ДеревоСтруктуры.Колонки.Добавить("Показатели");
	
	Макет = ОбъектОтчета(ИмяФормы).ПолучитьМакет(ИмяМакета);
	
	ВысотаТаблицы = Макет.ВысотаТаблицы;
	
	УчтенныеГруппы = Новый Соответствие;
	
	Для Уровень = 0 По Макет.КоличествоУровнейГруппировокСтрок() - 1 Цикл
		Макет.ПоказатьУровеньГруппировокСтрок(Уровень);
		Для НомерСтроки = 2 По ВысотаТаблицы Цикл
			НомСтр = ВысотаТаблицы - НомерСтроки + 2;
			Если Макет.Область(НомСтр, 0, НомСтр, 0).Видимость И УчтенныеГруппы.Получить(НомСтр) = Неопределено Тогда
				
				РодительскийУзел = ДеревоСтруктуры;
				Если Уровень <> 0 Тогда
					Для Инд = 1 По НомСтр - 2 Цикл
						Узел = УчтенныеГруппы.Получить(НомСтр - Инд);
						Если Узел <> Неопределено Тогда
							РодительскийУзел = Узел;
							Прервать;
						КонецЕсли;
					КонецЦикла;
				КонецЕсли;
				
				НовСтр = РодительскийУзел.Строки.Вставить(0);
				НовСтр.Код = СокрЛП(Макет.Область(НомСтр, 1, НомСтр, 1).Текст);
				НовСтр.Раздел = СокрЛП(Макет.Область(НомСтр, 2, НомСтр, 2).Текст);
				НовСтр.Ключ = СокрЛП(Макет.Область(НомСтр, 3, НомСтр, 3).Текст);
				НовСтр.Тип = СокрЛП(Макет.Область(НомСтр, 4, НомСтр, 4).Текст);
				НовСтр.Формат = СокрЛП(Макет.Область(НомСтр, 5, НомСтр, 5).Текст);
				МинРазмерность = СокрЛП(Макет.Область(НомСтр, 6, НомСтр, 6).Текст);
				НовСтр.МинРазмерность = ?(ПустаяСтрока(МинРазмерность), ?(НовСтр.Формат = "N", 99999, 0), Число(МинРазмерность));
				МаксРазмерность = СокрЛП(Макет.Область(НомСтр, 7, НомСтр, 7).Текст);
				НовСтр.МаксРазмерность = ?(ПустаяСтрока(МаксРазмерность), 99999, Число(МаксРазмерность));
				НовСтр.Обязательность = СокрЛП(Макет.Область(НомСтр, 8, НомСтр, 8).Текст);
				НовСтр.Многостраничность = НЕ ПустаяСтрока(Макет.Область(НомСтр, 9, НомСтр, 9).Текст);
				НовСтр.Многострочность = НЕ ПустаяСтрока(Макет.Область(НомСтр, 10, НомСтр, 10).Текст);
				НовСтр.Условие = СокрЛП(Макет.Область(НомСтр, 11, НомСтр, 11).Текст);
				НовСтр.ЗначениеПоУмолчанию = СокрЛП(Макет.Область(НомСтр, 12, НомСтр, 12).Текст);
				НовСтр.Представление = СокрЛП(Макет.Область(НомСтр, 13, НомСтр, 13).Текст);
				
				УчтенныеГруппы.Вставить(НомСтр, НовСтр);
				
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	
	Возврат ДеревоСтруктуры;
	
КонецФункции

&НаСервере
Функция ПроверитьВозможностьВыгрузки(ПараметрыВыгрузки, ДеревоВыгрузки)
	СтатусПроверки = Истина;
	
	ДанныеМногоуровневыхРазделов = Новый Структура;
	СохрСтруктура = СохраненныеДанныеОтчета();
	Для каждого ЭлементСтруктуры Из СохрСтруктура.ДанныеМногоуровневыхРазделов Цикл
		ДанныеМногоуровневыхРазделов.Вставить(ЭлементСтруктуры.Ключ, ЭлементСтруктуры.Значение);
	КонецЦикла;
	
	Титульный = СохрСтруктура.ПоказателиОтчета.ПолеТабличногоДокументаТитульный;
	Калькуляции = СохрСтруктура.ДанныеМногоуровневыхРазделов.Калькуляция;
	Если Не РегламентированныеДанныеКлиентСервер.ИННСоответствуетТребованиям(Титульный.INN, Истина, "")
		Или Не СтрПодобнаПоРегулярномуВыражению(Титульный.INN, "(([0-9][1-9]|[1-9][0-9])[0-9]{8})") Тогда 
		СообщитьВТС("Не указан / неправильно указан ИНН.", "Титульный", "INN");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если Не РегламентированныеДанныеКлиентСервер.КППСоответствуетТребованиям(Титульный.KPP, "")
		Или Не СтрПодобнаПоРегулярномуВыражению(Титульный.KPP, "(0[1-9]|[1-9]\d)\d{2}(0\d|[1-4]\d|[6-9]\d|\d[1-9])\d{3}") Тогда 
		СообщитьВТС("Не указан / неправильно указан КПП (Для крупнейшего налогоплательщика необходимо указать КПП по месту регистрации).", "Титульный", "KPP");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Титульный.ReportDate) Тогда 
		СообщитьВТС("Не указана составления кассового плана.", "Титульный", "ReportDate");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если СтрДлина(СокрЛП(Титульный.GOZUID)) <> 25 Тогда 
		СообщитьВТС("Не указан / неправильно указан идентификатор контракта.", "Титульный", "GOZUID");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Титульный.PreviousUID) Тогда 
		СообщитьВТС("Не указан идентификатор предыдущего сообщения.", "Титульный", "PreviousUID");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Титульный.Type) Тогда 
		СообщитьВТС("Не указан тип сведений.", "Титульный", "Type");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ПараметрыВыгрузки.Type = "05" Тогда 
		Если Не ЗначениеЗаполнено(Титульный.Stage) Тогда 
			СообщитьВТС("Не указан номер партии/этапа.", "Титульный", "Stage");
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Титульный.StageDate) Тогда 
			СообщитьВТС("Не указана дата партии/этапа.", "Титульный", "StageDate");
			СтатусПроверки = Ложь;
		КонецЕсли;
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Титульный.Code) Тогда 
		СообщитьВТС("Не указан код товара (работы, услуги) по классификатору Организации.", "Титульный", "Code");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Титульный.ProductName) Тогда 
		СообщитьВТС("Не указано наименование товара, работы, услуги.", "Титульный", "ProductName");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если СтрДлина(СокрЛП(Титульный.OKPD2)) <> 9 Тогда 
		СообщитьВТС("Не указан/неправильно указан код по ОКПД2 (шифр).", "Титульный", "OKPD2");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если Не ЗначениеЗаполнено(Титульный.Unit) Тогда 
		СообщитьВТС("Не указано код калькуляционной единицы (тип).", "Титульный", "Unit");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ЗначениеЗаполнено(Титульный.OKP) И СтрДлина(СокрЛП(Титульный.OKP)) <> 6 Тогда 
		СообщитьВТС("Неправильно указан код по ОКП (шифр).", "Титульный", "OKP");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если Титульный.Type = "05" Тогда 
		Если Не ЗначениеЗаполнено(Титульный.InvoiceNum) Тогда 
			СообщитьВТС("Не указан номер ТТН", "Титульный", "InvoiceNum");
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Титульный.InvoiceDate) Тогда 
			СообщитьВТС("Не указана дата ТТН", "Титульный", "InvoiceDate");
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Титульный.BillNum) Тогда 
			СообщитьВТС("Не указан номер СФ", "Титульный", "BillNum");
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Титульный.BillDate) Тогда 
			СообщитьВТС("Не указана дата СФ", "Титульный", "BillDate");
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Титульный.ActNum) Тогда 
			СообщитьВТС("Не указан номер приема-передачи", "Титульный", "ActNum");
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Титульный.ActDate) Тогда 
			СообщитьВТС("Не указана дата акта приема-передачи", "Титульный", "ActDate");
			СтатусПроверки = Ложь;
		КонецЕсли;
	КонецЕсли;
	
	Для Каждого Стр Из Калькуляции.Строки Цикл 
		Данные = Стр.Данные;
		Если Не ЗначениеЗаполнено(Данные.GUIDForm) Тогда 
			СообщитьВТС("Не указан уникальный идентификатор.", "Калькуляция", "GUIDForm", Калькуляции.Строки.Индекс(Стр) + 1);
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Данные.ReportDate) Тогда 
			СообщитьВТС("Не указана дата формирования.", "Калькуляция", "ReportDate", Калькуляции.Строки.Индекс(Стр) + 1);
			СтатусПроверки = Ложь;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(Данные.LaborType) Тогда 
			СообщитьВТС("Не указана трудоемкость.", "Калькуляция", "LaborType", Калькуляции.Строки.Индекс(Стр) + 1);
			СтатусПроверки = Ложь;
		КонецЕсли;
	КонецЦикла;
	
	Возврат СтатусПроверки;
КонецФункции

&НаСервере
Процедура СообщитьВТС(Описание, Раздел, ИмяЯчейки, ФИО = "")
	
	РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтотОбъект, Описание, Раздел, ИмяЯчейки, ФИО);
	
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьДанными(ПараметрыВыгрузки, ДеревоВыгрузки)
	ОбработатьУсловныеЭлементы(ПараметрыВыгрузки, ДеревоВыгрузки);
	ЗаполнитьДаннымиУзел(ПараметрыВыгрузки, ДеревоВыгрузки);
	ОтсечьНезаполненныеНеобязательныеУзлы(ДеревоВыгрузки);
КонецПроцедуры

&НаСервере
Процедура ОбработатьУсловныеЭлементы(Знач ПараметрыВыгрузки, Узел)
	
	Если ТипЗнч(Узел) <> Тип("ДеревоЗначений") Тогда
		Если Узел.Код = ПараметрыВыгрузки.ИмяКлючевогоУзлаСодержательнойЧасти Тогда
			Возврат;
		КонецЕсли;
		РегламентированнаяОтчетность.ДополнитьСтруктуруПараметров(мДанныеОтчета, ПараметрыВыгрузки, Узел);
	КонецЕсли;
	КоличествоСтрок = Узел.Строки.Количество();
	Для Инд = 1 По КоличествоСтрок Цикл
		ТекСтр = Узел.Строки.Получить(КоличествоСтрок - Инд);
		Если НЕ ПустаяСтрока(ТекСтр.Условие) Тогда
			Если НЕ РегламентированнаяОтчетность.УсловиеВыполнено(ЭтотОбъект, ПараметрыВыгрузки, ТекСтр.Условие) Тогда
				Узел.Строки.Удалить(ТекСтр);
				Продолжить;
			КонецЕсли;
		КонецЕсли;
		ОбработатьУсловныеЭлементы(ПараметрыВыгрузки, ТекСтр);
	КонецЦикла;
	
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьДаннымиУзел(ПараметрыВыгрузки, Узел, НомерСтроки = Неопределено)
	Если ТипЗнч(Узел) = Тип("СтрокаДереваЗначений") И (Узел.Тип = "С" ИЛИ Узел.Тип = "C") Тогда
		Если Узел.Многостраничность = Истина Тогда 
			ЗаполнитьСодержательнуюЧасть(Узел, ПараметрыВыгрузки);
			РегламентированнаяОтчетность.УдалитьУзел(Узел);
			Возврат;
		КонецЕсли;
	КонецЕсли;
	
	СтрокиУзла = Новый Массив;
	Для Каждого Стр Из Узел.Строки Цикл
		СтрокиУзла.Добавить(Стр);
	КонецЦикла;
	
	Для Каждого Стр из СтрокиУзла Цикл
		Если Стр.Тип = "С" ИЛИ Стр.Тип = "C" Тогда
			ЗаполнитьДаннымиУзел(ПараметрыВыгрузки, Стр, НомерСтроки);
		Иначе
			Если ПустаяСтрока(Стр.ЗначениеПоУмолчанию) Тогда
				Если НЕ ПустаяСтрока(Стр.Ключ) Тогда
					ПолныйКодПоказателя = Стр.Ключ + ?(ЗначениеЗаполнено(НомерСтроки), "_" + Формат(НомерСтроки, "ЧГ="), "");
					ЗначениеПоказателя = Неопределено;
					Если ПараметрыВыгрузки.Свойство(ПолныйКодПоказателя, ЗначениеПоказателя) Тогда
						ВывестиПоказательВXML(Стр, ЗначениеПоказателя);
					Иначе
						ВывестиПоказательВXML(Стр, "");
					КонецЕсли;
				Иначе
					Стр.Значение = "";
				КонецЕсли;
			ИначеЕсли Лев(Стр.ЗначениеПоУмолчанию, 1) = "&" Тогда
				ВывестиПоказательВXML(Стр, ПараметрыВыгрузки[Сред(Стр.ЗначениеПоУмолчанию, 2)]);
			Иначе
				Стр.Значение = Стр.ЗначениеПоУмолчанию;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
КонецПроцедуры

