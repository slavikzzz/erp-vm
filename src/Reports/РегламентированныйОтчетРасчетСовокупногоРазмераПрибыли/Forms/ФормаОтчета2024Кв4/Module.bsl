		ИЛИ Область.Имя = "П000010001401" ИЛИ Область.Имя = "П000010001501" ИЛИ Область.Имя = "П000010001601"
		ИЛИ Область.Имя = "П000010001701" ИЛИ Область.Имя = "П000010001801" ИЛИ Область.Имя = "П000010001901"
		ИЛИ Область.Имя = "П000010003001" ИЛИ Область.Имя = "П000010003002") Тогда
		
		СтандартнаяОбработка = Ложь;
		
		СписокГодов = Новый СписокЗначений;
		СтруктураПараметров = Новый Структура;
