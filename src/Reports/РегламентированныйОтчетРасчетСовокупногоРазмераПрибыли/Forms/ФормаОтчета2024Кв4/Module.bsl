		Показатели.Удалить(НайденноеЗначение);
	КонецЕсли;
	ИНН = "";
	Для Ном = 0 По 9 Цикл
		ИНН = ИНН + ОбщиеРеквизитыРазделов.ИНН[Ном];
	КонецЦикла;
	
	// Особая обработка ИНН.
	Если ЗначениеЗаполнено(ИНН) Тогда
		ИНН = СтроковыеФункцииКлиентСервер.ДополнитьСтроку(ИНН, 12, "-", "Справа");
