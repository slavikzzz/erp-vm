	Перем СтруктураГруппы;
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат; // отключен режим авторасчета
	КонецЕсли;
	
	Области = Форма.ПолеТабличногоДокументаФормаОтчета.Области;
	
	ТаблицаВариантовЗаполнения =
		Форма.ТаблицаВариантыЗаполненияПолеТабличногоДокументаФормаОтчета[0].ТаблицаВариантовЗаполнения;
	
	Форма.мСтруктураМногострочныхРазделов.Свойство("П0002021", СтруктураГруппы);
	
	Сумма1 = 0;
	
	Для НомСтр = 1 По Форма.П0002021.Количество() Цикл
		Сумма1 = Сумма1
			+ РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Области["П000202104_" + НомСтр].Значение);
	КонецЦикла;
	
	ВариантыЗаполненияПоказателя = ТаблицаВариантовЗаполнения.НайтиСтроки(Новый Структура("КодПоказателя", "П000100103"));
	Если ТаблицаВариантовЗаполнения.Количество() > 0 И ТаблицаВариантовЗаполнения[0].ВариантЗаполнения = 4 Тогда
		Области["П000100103"].Значение = Сумма1;
	КонецЕсли;
	
