	ПоляДляОчистки = ДополнительныеПараметры.ПоляДляОчистки;
	
	РезультатКод = РезультатВыбора["Код"];
	РезультатНаименование = ?(ЗначениеЗаполнено(РезультатКод), РезультатВыбора["Название"], "");
	
	Если ОбластьНаим = Неопределено Тогда
		ОбластьКод.Значение = РезультатКод;
	Иначе
		ОбластьКод.Значение = РезультатКод;
		ОбластьНаим.Значение = РезультатНаименование;
	КонецЕсли;
	
	Если ПоляДляОчистки <> Неопределено Тогда
		Для Каждого Поле Из ПоляДляОчистки Цикл
			Поле.Значение = Неопределено;
		КонецЦикла;
	КонецЕсли;
	
