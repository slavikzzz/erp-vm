	СтрокиАвторасчета = "1010;1030;1040;1050;1071;1072;1080;1083;1090;1100;1110;1150;1165;1170;1171;1180;1181;1230;1240;
	|1241;1250;1270;1280;1290;1310;1311;1320;1330;1340;1350;1360;1370;1380;1390;1400;1410;1420;1430;1440;1460;1480;1490;
	|1500;1580;1581;1582;1583;1620;1630;1632;1640;1660;1670;1690;1700;1720;1730;1731;1732;1780;";
	СтрокиАвторасчета = СтрокиАвторасчета + "1750";
	
	МассивСтрокАвторасчета = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(СтрокиАвторасчета, ";", ,Истина);
	
	Для Каждого ЭлМасс Из МассивСтрокАвторасчета Цикл
