		Пф = Сред(ТекОбластьИмя, 1 + СтрНайти(ТекОбластьИмя,"_"));
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000100002_" + Пф].Значение = Оз;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000200002_" + Пф].Значение = Оз;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000300002_" + Пф].Значение = Оз;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000400002_" + Пф].Значение = Оз;
	КонецЕсли;
	
	Если ПослеВыбораИзСписка = Истина Тогда
		Пф = Сред(ТекОбластьИмя, 1 + СтрНайти(ТекОбластьИмя,"_"));
		ТекОбластьИмя1 = СтрЗаменить(ТекОбластьИмя, "2_", "1_");
		ТекОбластьИмя2 = СтрЗаменить(ТекОбластьИмя, "1_", "2_");
		Оз1 = Форма.ПолеТабличногоДокументаФормаОтчета.Области[ТекОбластьИмя1].Значение;
		Оз2 = Форма.ПолеТабличногоДокументаФормаОтчета.Области[ТекОбластьИмя2].Значение;
		
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000100001_" + Пф].Значение = Оз1;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000200001_" + Пф].Значение = Оз1;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000300001_" + Пф].Значение = Оз1;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000400001_" + Пф].Значение = Оз1;
		
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000100002_" + Пф].Значение = Оз2;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000200002_" + Пф].Значение = Оз2;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000300002_" + Пф].Значение = Оз2;
		Форма.ПолеТабличногоДокументаФормаОтчета.Области["П003000400002_" + Пф].Значение = Оз2;
