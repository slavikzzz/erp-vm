&НаКлиенте
Процедура ПолеТабличногоДокументаФормаОтчетаВыбор(Элемент, Область, СтандартнаяОбработка)
	
	// ПроцессыОбработкиДокументов
	//
	Если Элементы.ПолеТабличногоДокументаФормаОтчета.Защита Тогда
		
		Возврат;
		
	КонецЕсли;
	//
	// ПроцессыОбработкиДокументов
	
	Если Найти(Область.Имя, ":") > 0
	 Или (Лев(Область.Имя, 1) = "П"
	   И (Лев(Область.Имя, 8) = "П0030001" И (Сред(Область.Имя, 13, 1) = "3" Или Сред(Область.Имя, 13, 1) = "4"))) Тогда
		СтандартнаяОбработка = Ложь;
		Возврат;
	КонецЕсли;
	
	РегламентированнаяОтчетностьКлиент.ОбработкаВыбораПоляОбособленныхПодразделений(ЭтотОбъект,
		Область, СтандартнаяОбработка);
	
	Если Область.Имя = "ОргАдрес" Тогда
		РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчетеJSON(
			ЭтотОбъект, Область, СтандартнаяОбработка);
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтроку") > 0 Тогда
		СтандартнаяОбработка = Ложь;
		ДобавитьСтроку("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтроку") > 0 Тогда
		УдалитьСтроку("");
	Иначе
		
		ЛевОбластьИмя = Лев(Область.Имя, 14);
		Если ЛевОбластьИмя = "П003000100001_" Или ЛевОбластьИмя = "П003000100002_" 
			Или ЛевОбластьИмя = "П003000200001_" Или ЛевОбластьИмя = "П003000200002_" 
			Или ЛевОбластьИмя = "П003000300001_" Или ЛевОбластьИмя = "П003000300002_" 
			Или ЛевОбластьИмя = "П003000400001_" Или ЛевОбластьИмя = "П003000400002_" Тогда
			
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект,
				"ПереченьПродукции");
		КонецЕсли;
		
		Если ПараметрВводаПоля <> Неопределено И ПараметрВводаПоля.ТаблицаЗначений <> Неопределено Тогда
			КолонкаПоиска = "Код";
			КодПоказателя = ПараметрВводаПоля.Показатель;
			КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
			ВвестиПоказатель(Элемент, Область, КодПоказателя, Ложь,
				ПараметрВводаПоля.ТекстПриВыборе, ТЗВыбора, СтандартнаяОбработка, КолонкаПоиска);
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

