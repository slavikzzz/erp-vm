	Области.П001001116103.Значение = Области.П001001162103.Значение + Области.П001001163103.Значение;
	Области.П001001116104.Значение = Области.П001001162104.Значение + Области.П001001163104.Значение;
	
	Для Гр = 1 По 12 Цикл
		Если Гр = 5 Или Гр = 10 Или Гр = 11 Тогда
			Продолжить;
		КонецЕсли;
		
		ГрСтр = Формат(Гр, "ЧЦ=2; ЧВН=; ЧГ=");
		Области["П0010011160" + ГрСтр].Значение = Области["П0010011620" + ГрСтр].Значение
