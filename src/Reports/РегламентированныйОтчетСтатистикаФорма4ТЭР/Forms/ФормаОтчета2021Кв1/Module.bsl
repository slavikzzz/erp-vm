			Графа = Формат(Гр, "ЧЦ=2; ЧВН=");
			Обл = Области.Найти("П001001" + ЭлМас + Графа);
			Если Обл <> Неопределено Тогда
				Сумм = Сумм + Обл.Значение;
			КонецЕсли;
		КонецЦикла;
		Области.Найти("П001001" + ЭлМас + "03").Значение = Сумм;
	КонецЦикла;
	
КонецПроцедуры

