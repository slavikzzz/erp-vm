&НаКлиенте
Процедура ВвестиПоказатель(Элемент, Область, КодПоказателя, Знач ЭтоСумма, Знач ТекстВыбора, ТаблицаВыбора, СтандартнаяОбработка, КолонкаПоиска = "Код") Экспорт
	
	Если ТаблицаВыбора = Неопределено Или СтруктураРеквизитовФормы.мАвтоВыборКодов Тогда
		Возврат;
	КонецЕсли;
	
	СтандартнаяОбработка = Ложь;
	
	Если Область.Имя = КодПоказателя Тогда
		ИсходноеЗначение = ?(ТипЗнч(Область.Значение) = Тип("Строка"), СокрЛП(Область.Значение), Область.Значение);
	Иначе
		Разделитель = ?(Лев(Область.Имя, СтрДлина(КодПоказателя) + 1) = КодПоказателя + "_", "_", "");
		ИндексОбласти = 1;
		ИсходноеЗначение = "";
		Пока ЭтотОбъект[ТекущийЭлемент.Имя].Области.Найти(КодПоказателя + Разделитель + Формат(ИндексОбласти, "ЧГ=")) <> Неопределено Цикл
			ИсходноеЗначение = ИсходноеЗначение + Строка(
				ЭтотОбъект[ТекущийЭлемент.Имя].Области[КодПоказателя + Разделитель + Формат(ИндексОбласти, "ЧГ=")].Значение);
			ИндексОбласти = ИндексОбласти + 1;
		КонецЦикла;
		ИсходноеЗначение = СокрЛП(ИсходноеЗначение);
	КонецЕсли;
	
	ПараметрыФормы = Новый Структура;
	ПараметрыФормы.Вставить("Заголовок",          ТекстВыбора);
	ПараметрыФормы.Вставить("ТаблицаЗначений",    ТаблицаВыбора);
	
	Если СтрНайти(Область.Имя, "П00000200") > 0 И СтрНайти(Область.Имя, "04") = 0  И СтрНайти(Область.Имя, "05") = 0 Тогда
		Для Каждого СтрокаВыбора Из ТаблицаВыбора Цикл
			СтрокаВыбора.Кратко = СтрокаВыбора.ЕдиницаИзмерения;
		КонецЦикла;
		
		ПараметрыФормы.Вставить("СтруктураДляПоиска", Новый Структура(
			КолонкаПоиска,
			ЭтотОбъект[ТекущийЭлемент.Имя].Области["П000002" + Сред(Область.Имя, 8, 4) + "03" + Сред(Область.Имя, 14)].Значение));
	Иначе
		ИсходноеЗначение = ?(ТипЗнч(Область.Значение) = Тип("Строка"), СокрЛП(Область.Значение), Формат(Область.Значение, "ЧГ="));
		ПараметрыФормы.Вставить("СтруктураДляПоиска", Новый Структура(КолонкаПоиска, ИсходноеЗначение));
	КонецЕсли;
	ПараметрыФормы.Вставить("ВключитьВидимостьНадписиРосстат", Истина);
	
	ДополнительныеПараметры = Новый Структура("Область, Элемент", Область, Элемент);
	ОписаниеОповещения = Новый ОписаниеОповещения("ВвестиПоказательЗавершение", ЭтотОбъект, ДополнительныеПараметры);
	
	ОткрытьФорму("Обработка.ОбщиеОбъектыРеглОтчетности.Форма.ФормаВыбораЗначенияИзТаблицы",
		ПараметрыФормы, ЭтотОбъект, , , , ОписаниеОповещения, РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
	
КонецПроцедуры

&НаКлиенте
Процедура ВвестиПоказательЗавершение(РезультатВыбора, ДополнительныеПараметры) Экспорт
	
	Область = ДополнительныеПараметры.Область;
	Элемент = ДополнительныеПараметры.Элемент;
	
	Если РезультатВыбора = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	// раздел 1
	// колонки 3, 4
	Если СтрНайти(Область.Имя, "П00000100") > 0 Тогда 
		// колонка 3
		Если Сред(Область.Имя, 12, 2) = "03" Тогда
			ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение = Строка(РезультатВыбора["Код"]);
		КонецЕсли;
		// колонка 4
		Если Сред(Область.Имя, 12, 2) = "04" Тогда
			ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение = Строка(РезультатВыбора["Код"]);
		КонецЕсли;
	КонецЕсли;
	
	// раздел 2
	// колонки 1, 3, 4, 5
	Если СтрНайти(Область.Имя, "П00000200") > 0 Тогда
		Если Сред(Область.Имя, 12, 2) = "01" Тогда
			ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение
			= ?(ЗначениеЗаполнено(РезультатВыбора["Код"]), Строка(РезультатВыбора["Название"]), "");
			Если ЭтотОбъект[ТекущийЭлемент.Имя].Области[Лев(Область.Имя, 11) + "03" + Сред(Область.Имя, 14)].Значение
				<> Строка(РезультатВыбора["Код"]) Тогда
				ЭтотОбъект[ТекущийЭлемент.Имя].Области[Лев(Область.Имя, 11) + "03" + Сред(Область.Имя, 14)].Значение
				= Строка(РезультатВыбора["Код"]);
				ЭтотОбъект[ТекущийЭлемент.Имя].Области[Лев(Область.Имя, 11) + "05" + Сред(Область.Имя, 14)].Значение = "";
			КонецЕсли;
		КонецЕсли;
		Если Сред(Область.Имя, 12, 2) = "03" Тогда
			Если ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение <> Строка(РезультатВыбора["Код"]) Тогда
				ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение = Строка(РезультатВыбора["Код"]);
				ЭтотОбъект[ТекущийЭлемент.Имя].Области[Лев(Область.Имя, 11) + "05" + Сред(Область.Имя, 14)].Значение = "";
			КонецЕсли;
			ЭтотОбъект[ТекущийЭлемент.Имя].Области[Лев(Область.Имя, 11) + "01" + Сред(Область.Имя, 14)].Значение
			= ?(ЗначениеЗаполнено(РезультатВыбора["Код"]), Строка(РезультатВыбора["Название"]), "");
		КонецЕсли;
		// колонка 4
		Если Сред(Область.Имя, 12, 2) = "04" Тогда
			ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение = Строка(РезультатВыбора["Код"]);
		КонецЕсли;
		// колонка 5
		Если Сред(Область.Имя, 12, 2) = "05" Тогда
			ЭтотОбъект[ТекущийЭлемент.Имя].Области[Область.Имя].Значение = Строка(РезультатВыбора["Код"]);
		КонецЕсли;
	КонецЕсли;
	
	Модифицированность = Истина;
	
	ОбластьИмя = Элемент.ТекущаяОбласть.Имя;
	
КонецПроцедуры

