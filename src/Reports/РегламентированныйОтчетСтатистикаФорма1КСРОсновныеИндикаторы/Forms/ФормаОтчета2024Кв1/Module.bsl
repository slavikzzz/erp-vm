	СтруктураРеквизитовФормы.мПечатныеФормы.Добавить(ПечатнаяФорма, "Форма 1-КСР (основные индикаторы)");
	
	ПечатнаяФорма = РегламентированнаяОтчетность.НоваяСтраница();
	ПечатнаяФорма.Вывести(ТабДок.ПолучитьОбласть("ОсновнаяЧасть2"));
	СтруктураРеквизитовФормы.мПечатныеФормы.Добавить(ПечатнаяФорма, "Форма 1-КСР (основные индикаторы)");
	
	ПечатнаяФорма = РегламентированнаяОтчетность.НоваяСтраница();
	ПечатнаяФорма.Вывести(ТабДок.ПолучитьОбласть("ОсновнаяЧасть3"));
	СтруктураРеквизитовФормы.мПечатныеФормы.Добавить(ПечатнаяФорма, "Форма 1-КСР (основные индикаторы)");
	
	ПечатнаяФорма = РегламентированнаяОтчетность.НоваяСтраница();
	ПечатнаяФорма.Вывести(ТабДок.ПолучитьОбласть("ОсновнаяЧасть4"));
	ПечатнаяФорма.Вывести(ТабДок.ПолучитьОбласть("ШапкаТаблицы"));
	Для Инд = 1 По 7 Цикл
		Секция = ТабДок.ПолучитьОбласть("Секция" + Инд);
		Если ПечатнаяФорма.ПроверитьВывод(Секция) Тогда
			ПечатнаяФорма.Вывести(Секция);
		Иначе
			СтруктураРеквизитовФормы.мПечатныеФормы.Добавить(ПечатнаяФорма, "Форма 1-КСР (основные индикаторы)");
			ПечатнаяФорма = РегламентированнаяОтчетность.НоваяСтраница();
			ПечатнаяФорма.Вывести(ТабДок.ПолучитьОбласть("ПустаяСтрока"));
			ПечатнаяФорма.Вывести(ТабДок.ПолучитьОбласть("ШапкаТаблицы"));
			ПечатнаяФорма.Вывести(Секция);
		КонецЕсли;
		
		ВерхМногострочнойЧасти = ПолеТабличногоДокументаФормаОтчета.Области["Секция" + Инд].Верх + 2;
		НизМногострочнойЧасти  = ПолеТабличногоДокументаФормаОтчета.Области["ДобавлениеСтроки" + Инд].Низ - 1;
		ТекущийВерх = ВерхМногострочнойЧасти;
		
		Пока ТекущийВерх <= НизМногострочнойЧасти Цикл
			ТекущаяОбластьМногострочнойЧасти = ТабДок.ПолучитьОбласть(ТекущийВерх,,ТекущийВерх,);
			Если ПечатнаяФорма.ПроверитьВывод(ТекущаяОбластьМногострочнойЧасти) Тогда
				ПечатнаяФорма.Вывести(ТекущаяОбластьМногострочнойЧасти);
			Иначе
				СтруктураРеквизитовФормы.мПечатныеФормы.Добавить(ПечатнаяФорма, "Форма 1-КСР (основные индикаторы)");
				ПечатнаяФорма = РегламентированнаяОтчетность.НоваяСтраница();
