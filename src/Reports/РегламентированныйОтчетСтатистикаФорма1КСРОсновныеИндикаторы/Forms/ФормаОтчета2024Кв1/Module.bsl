&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма)
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Области = Форма.ПолеТабличногоДокументаФормаОтчета.Области;
	
	//Строка 301 = строка 302 + строка 303;
	Области["П003001030101"].Значение
		= Области["П003001030201"].Значение
		+ Области["П003001030301"].Значение;
		
	//Строка 304 = строка 305 + строка 306;
	Области["П003001030401"].Значение
		= Области["П003001030501"].Значение
		+ Области["П003001030601"].Значение;
		
	//Строка 307 = строка 308 + строка 309;
	Области["П003001030701"].Значение
		= Области["П003001030801"].Значение
		+ Области["П003001030901"].Значение;
		
	//Строка 310 = строка 311 + строка 312;
	Области["П003001031001"].Значение
		= Области["П003001031101"].Значение
		+ Области["П003001031201"].Значение;
		
	Для Инд = 1 По 7 Цикл
		Для Гр = 3 По 10 Цикл
			ГрСтр = Формат(Гр, "ЧЦ=2; ЧВН=");
			НС = 0;
			Тот = 0;
			Пока Истина Цикл
				НС = НС + 1;
				Если Области.Найти("П04040" + Инд + "000002_" + НС) = Неопределено Тогда 
					Прервать;
				КонецЕсли;
				Тот = Тот + Области["П04040" + Инд + "0000" + ГрСтр + "_" + НС].Значение;
			КонецЦикла;
			Области["П04040" + Инд + ГрСтр].Значение = Тот;
		КонецЦикла;
	КонецЦикла;
	
	//Сумма строк 501, 502, 503, 504, 505, 506 по графе 1-8 = строке 507 гр. 1-8;
	Для Гр = 1 По 8 Цикл
		Графа = Формат(Гр, "ЧЦ=2; ЧВН=");
		Области["П0050010507" + Графа].Значение
			= Области["П0050010501" + Графа].Значение
			+ Области["П0050010502" + Графа].Значение
			+ Области["П0050010503" + Графа].Значение
			+ Области["П0050010504" + Графа].Значение
			+ Области["П0050010505" + Графа].Значение
			+ Области["П0050010506" + Графа].Значение;
	КонецЦикла;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура ПеренумерацияСтрокТаблицы(ЭтотОбъект)
	
	Области = ЭтотОбъект.ПолеТабличногоДокументаФормаОтчета.Области;
	
	Для НомСтроки = 1 По 7 Цикл
		Инд = 0;
		Пока Истина Цикл
			
			Инд = Инд + 1;
			
			ОблИмя1 = "П04040" + НомСтроки + "000001_" + Формат(Инд, "ЧГ=");
			Обл1 = Области.Найти(ОблИмя1);
			Если Обл1 = Неопределено Тогда
				Прервать;
			КонецЕсли;
			
			ОблИмя2 = "П04040" + НомСтроки + "000002_" + Формат(Инд, "ЧГ=");
			Обл2 = Области.Найти(ОблИмя2);
			Если Не ЗначениеЗаполнено(Области.Найти(ОблИмя2).Значение) Тогда
				Обл1.Значение = "страна гражданства";
			КонецЕсли;
			
		КонецЦикла;
		
		ОблИмя3 = "П04040" + НомСтроки + "000011_1";
		Обл3 = Области.Найти(ОблИмя3);
		Обл3.Значение = "40" + НомСтроки + "1";
		
	КонецЦикла;
	
	ОтрисоватьЗначкиУдаленияСтрок(ЭтотОбъект);
	
КонецПроцедуры

