				ЗаполнитьДаннымиУзел(СтрокаМнЧ3.Данные, ЭкзРасчСумАкцПТ);
			КонецЦикла;
			
		КонецЦикла;
		
	КонецЦикла;
	РегламентированнаяОтчетность.УдалитьУзел(СумАкцПТПУ);
	
	// Раздел 3.
	//
	СумАкцИсч = ПолучитьПодчиненныйЭлемент(УзелРодитель, "СумАкцИсч");
