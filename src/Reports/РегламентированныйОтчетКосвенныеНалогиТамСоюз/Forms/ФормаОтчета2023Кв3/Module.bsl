		Ном = 1;
		ОбластьМЧБ = МЧБ.Области.Найти(ИмяОбласти + "1");
		Пока ОбластьМЧБ <> Неопределено Цикл
			Если Ном = 1 И ЗначениеЗаполнено(ОбластьМЧБ.Текст) Тогда
				Прервать;
			ИначеЕсли ОбластьМЧБ.Текст = "." Тогда
				Ном = Ном + 1;
				ОбластьМЧБ = МЧБ.Области.Найти(ИмяОбласти + Формат(Ном, "ЧГ="));
				Продолжить;
			КонецЕсли;
			ОбластьМЧБ.Текст = "-";
			Ном = Ном + 1;
			ОбластьМЧБ = МЧБ.Области.Найти(ИмяОбласти + Формат(Ном, "ЧГ="));
		КонецЦикла;
		
	КонецЦикла;
	
