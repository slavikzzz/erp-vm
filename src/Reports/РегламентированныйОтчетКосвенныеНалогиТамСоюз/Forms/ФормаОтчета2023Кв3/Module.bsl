&НаСервере
Процедура УстановитьФорматВыводаНаСервере(ИмяРаздела)
	
	Если СтруктураРеквизитовФормы.ЕдиницаИзмерения = ПорядкиОкругленияОтчетности.ПеречислениеПорядкиОкругленияОтчетностиОкр1 Тогда
		СтруктураРеквизитовФормы.мСтрокаФормата = "; ЧДЦ = " + СтруктураРеквизитовФормы.ТочностьЕдиницыИзмерения + "; ЧРД=,; ЧН=-; ЧС = 0";
	ИначеЕсли СтруктураРеквизитовФормы.ЕдиницаИзмерения = ПорядкиОкругленияОтчетности.ПеречислениеПорядкиОкругленияОтчетностиОкр1000 Тогда
		СтруктураРеквизитовФормы.мСтрокаФормата = "; ЧДЦ = " + СтруктураРеквизитовФормы.ТочностьЕдиницыИзмерения + "; ЧРД=,; ЧН=-; ЧС = 3";
	ИначеЕсли СтруктураРеквизитовФормы.ЕдиницаИзмерения = ПорядкиОкругленияОтчетности.ПеречислениеПорядкиОкругленияОтчетностиОкр1000000 Тогда
		СтруктураРеквизитовФормы.мСтрокаФормата = "; ЧДЦ = " + СтруктураРеквизитовФормы.ТочностьЕдиницыИзмерения + "; ЧРД=,; ЧН=-; ЧС = 6";
	КонецЕсли;
	
	ИменаМногострочныхПоказателей   = Новый Массив;
	ИменаНемногострочныхПоказателей = Новый Массив;
	
	Если ИмяРаздела = "Раздел1" Тогда
		ИменаНемногострочныхПоказателей.Добавить("П000010003003");
		ИменаНемногострочныхПоказателей.Добавить("П000010003103");
		ИменаНемногострочныхПоказателей.Добавить("П000010003203");
		ИменаНемногострочныхПоказателей.Добавить("П000010003303");
		ИменаНемногострочныхПоказателей.Добавить("П000010003403");
		ИменаНемногострочныхПоказателей.Добавить("П000010003503");
		ИменаНемногострочныхПоказателей.Добавить("П000010004003");
		ИменаНемногострочныхПоказателей.Добавить("П000010005003");
	ИначеЕсли ИмяРаздела = "Раздел11" Тогда
		ИменаМногострочныхПоказателей.Добавить("П00011М105000");
		ИменаМногострочныхПоказателей.Добавить("П00011М106000");
		ИменаМногострочныхПоказателей.Добавить("П00011М107000");
		ИменаМногострочныхПоказателей.Добавить("П00011М108000");
	ИначеЕсли ИмяРаздела = "Раздел2" Тогда
		ИменаМногострочныхПоказателей.Добавить("П00002М103000");
		ИменаМногострочныхПоказателей.Добавить("П00002М305000");
	ИначеЕсли ИмяРаздела = "Раздел3" Тогда
		ИменаМногострочныхПоказателей.Добавить("П00003М103000");
		ИменаМногострочныхПоказателей.Добавить("П00003М405000");
	КонецЕсли;
	
	Для каждого ИмяПоказателя Из ИменаНемногострочныхПоказателей Цикл
		ЧислоЕЗнак = Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(17, 2));
		ФорматируемаяОбласть = ТабличныйДокумент.Области[ИмяПоказателя];
		ДопустимыйЗнакПоказателя = ФорматируемаяОбласть.ТипЗначения.КвалификаторыЧисла.ДопустимыйЗнак;
		Если ДопустимыйЗнакПоказателя = ДопустимыйЗнак.Неотрицательный Тогда
			ЧислоЕЗнак = Новый ОписаниеТипов("Число",
			Новый КвалификаторыЧисла(ЧислоЕЗнак.КвалификаторыЧисла.Разрядность,
			ЧислоЕЗнак.КвалификаторыЧисла.РазрядностьДробнойЧасти, ДопустимыйЗнакПоказателя));
		КонецЕсли;
		ФорматируемаяОбласть.ТипЗначения = ЧислоЕЗнак;
		ФорматируемаяОбласть.Формат = "ЧЦ = " + ЧислоЕЗнак.КвалификаторыЧисла.Разрядность + СтруктураРеквизитовФормы.мСтрокаФормата;
	КонецЦикла;
	
	Если ИменаМногострочныхПоказателей.Количество() > 0 Тогда
		Для каждого Обл Из ТабличныйДокумент.Области Цикл
			Если ИменаМногострочныхПоказателей.Найти(Лев(Обл.Имя, СтруктураРеквизитовФормы.ДлинаИмениГрафы)) <> Неопределено Тогда
				ЧислоЕЗнак = Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(17, 2));
				ДопустимыйЗнакПоказателя = Обл.ТипЗначения.КвалификаторыЧисла.ДопустимыйЗнак;
				Если ДопустимыйЗнакПоказателя = ДопустимыйЗнак.Неотрицательный Тогда
					ЧислоЕЗнак = Новый ОписаниеТипов("Число",
					Новый КвалификаторыЧисла(ЧислоЕЗнак.КвалификаторыЧисла.Разрядность,
					ЧислоЕЗнак.КвалификаторыЧисла.РазрядностьДробнойЧасти, ДопустимыйЗнакПоказателя));
				КонецЕсли;
				Обл.ТипЗначения = ЧислоЕЗнак;
				Обл.Формат = "ЧЦ = " + ЧислоЕЗнак.КвалификаторыЧисла.Разрядность + СтруктураРеквизитовФормы.мСтрокаФормата;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
КонецПроцедуры

