			КонецЦикла;
			
			// Многострочная часть уровня 2.
			СпИмпПерПП = ПолучитьПодчиненныйЭлемент(ЭкзСпИмпПер, "СпИмпПерПП");
			ДеревоМнЧ3 = СтрокаМнЧ2.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппы3М3];
			Для каждого СтрокаМнЧ3 Из ДеревоМнЧ3.Строки Цикл
				ЭкзСпИмпПерПП = СкопироватьУзел(ЭкзСпИмпПер, СпИмпПерПП, ЭкзСпИмпПер.Строки.Количество() - 1);
				Для каждого Эл Из ЭкзСпИмпПерПП.Строки Цикл
					Если Эл.Строки.Количество() = 0 Тогда
						ВывестиПоказательВXML(Эл, СтрокаМнЧ3.Данные[Эл.Ключ]);
					КонецЕсли;
				КонецЦикла;
				
				// Многострочная часть уровня 3.
				СвСумАкц = ПолучитьПодчиненныйЭлемент(ЭкзСпИмпПерПП, "СвСумАкц");
				ДеревоМнЧ4 = СтрокаМнЧ3.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппы3М4];
				Для каждого СтрокаМнЧ4 Из ДеревоМнЧ4.Строки Цикл
					ЭкзСвСумАкц = СкопироватьУзел(ЭкзСпИмпПерПП, СвСумАкц, ЭкзСпИмпПерПП.Строки.Количество() - 1);
