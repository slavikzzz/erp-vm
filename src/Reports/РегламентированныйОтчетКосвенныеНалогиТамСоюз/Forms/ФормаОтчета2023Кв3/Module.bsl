&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяРаздела = "", ОбластьИмя = "") Экспорт
	
	Перем ТаблицаБлока;
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Если ИмяРаздела = "Раздел1" ИЛИ ИмяРаздела = "Раздел11" Тогда
		
		РасчетВДеревеЗначений(Форма, ИмяРаздела);
		
	ИначеЕсли ИмяРаздела = "Раздел2" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				СтруктЗависимыхЯчеек = Форма.СтруктураЗависимыхЯчеекДляАвторасчета[ИмяРаздела];
				
				ИмяОбластиБезКоординат = Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы);
				
				_Координаты = Сред(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы + 1);
				
				// Варианты авторасчета графы 5:
				// 1) гр. 5 = гр. 3 х гр. 4 / 100, если гр. 2 = "831";
				// 2) гр. 5 = гр. 3 х гр. 4, если гр. 2 = "251".
				//
				// В остальных случаях для гр. 5 предусмотрен ввод значения вручную.
				//
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П00002М300005, ИмяОбластиБезКоординат) > 0 Тогда
					
					КодПоОКЕИ = СокрЛП(Форма.ТабличныйДокумент.Область("П00002М300002" + _Координаты).Значение);
					
					Графа3 = Форма.ТабличныйДокумент.Область("П00002М300003" + _Координаты).Значение;
					Графа4 = Форма.ТабличныйДокумент.Область("П00002М300004" + _Координаты).Значение;
					
					Если КодПоОКЕИ = "831" Тогда
						Форма.ТабличныйДокумент.Область("П00002М300005" + _Координаты).Значение = Графа3 * Графа4 / 100;
					ИначеЕсли КодПоОКЕИ = "251" Тогда
						Форма.ТабличныйДокумент.Область("П00002М300005" + _Координаты).Значение = Графа3 * Графа4;
					КонецЕсли;
					
				КонецЕсли;
				
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П00002М103000, ИмяОбластиБезКоординат) > 0 Тогда
					
					Стр030 = 0;
					_Индекс = "_" + СтрРазделить(ОбластьИмя, "_")[1];
					ПодстрокаПоиска = _Индекс + "_";
					Для каждого Обл Из Форма.ТабличныйДокумент.Области Цикл
						Если СтрНачинаетсяС(Обл.Имя, "П00002М305000" + ПодстрокаПоиска) Тогда
							Стр030 = Стр030 + РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Обл.Значение);
						КонецЕсли;
					КонецЦикла;
					Форма.ТабличныйДокумент.Области["П00002М103000" + _Индекс].Значение = Стр030;
					
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "Раздел3" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				СтруктЗависимыхЯчеек = Форма.СтруктураЗависимыхЯчеекДляАвторасчета[ИмяРаздела];
				
				ИмяОбластиБезКоординат = Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы);
				
				_Координаты = Сред(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы + 1);
				
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П00003М103000, ИмяОбластиБезКоординат) > 0 Тогда
					
					Стр030 = 0;
					_Индекс = "_" + СтрРазделить(ОбластьИмя, "_")[1];
					ПодстрокаПоиска = _Индекс + "_";
					Для каждого Обл Из Форма.ТабличныйДокумент.Области Цикл
						Если СтрНачинаетсяС(Обл.Имя, "П00003М405000" + ПодстрокаПоиска) Тогда
							Стр030 = Стр030 + РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Обл.Значение);
						КонецЕсли;
					КонецЦикла;
					Форма.ТабличныйДокумент.Области["П00003М103000" + _Индекс].Значение = Стр030;
					
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "" Тогда
		
		Для каждого Раздел Из Форма.СтруктураЗависимыхЯчеекДляАвторасчета Цикл
			Расчет(Форма, Раздел.Ключ);
		КонецЦикла;
		
	КонецЕсли;
	
	Форма.Модифицированность = Истина;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура РасчетВДеревеЗначений(Форма, ИмяРаздела)
	
	ИмяГлРаздела = ИмяРаздела;
	СтруктураРаздела = Форма.мСтруктураМногоуровневыхРазделов[ИмяРаздела];
	Если СтруктураРаздела.Свойство("ИмяГлавногоРаздела") Тогда
		ИмяГлРаздела = СтруктураРаздела["ИмяГлавногоРаздела"];
	КонецЕсли;
	
	ДеревоДанных = Неопределено;
	
	Если ИмяРаздела = "Раздел1" ИЛИ ИмяРаздела = "Раздел11" Тогда
		
		ДеревоР1 = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанныхРаздел1"]);
		ВеткаР1 = ДеревоР1.Строки[0];
		
		ДеревоР11 = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанныхРаздел11"]);
		ВеткаР11 = ДеревоР11.Строки[0];
		
		Р11_ИтогСтр070 = 0;
		ДеревоМнЧ = ВеткаР11.ДанныеМногострочныхЧастей[Форма.СтруктураРеквизитовФормы.мИдГруппы11М1];
		Для каждого СтрокаМнЧ Из ДеревоМнЧ.Строки Цикл
			Р11_ИтогСтр070 = Р11_ИтогСтр070 + РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(
			Форма, СтрокаМнЧ.Данные["П00011М107000"]);
		КонецЦикла;
		
		Р1_Стр030
		= РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, ВеткаР1.Данные["П000010003103"])
		+ РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, ВеткаР1.Данные["П000010003203"])
		+ РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, ВеткаР1.Данные["П000010003303"])
		+ РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, ВеткаР1.Данные["П000010003403"])
		+ РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, ВеткаР1.Данные["П000010003503"])
		+ Р11_ИтогСтр070;
		
		ВеткаР1.Данные.Вставить("П000010003003",
		РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Р1_Стр030));
		
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанныхРаздел1"]
		= ПоместитьВоВременноеХранилище(ДеревоР1, Форма.УникальныйИдентификатор);
		
	ИначеЕсли ИмяРаздела = "Раздел2" Тогда
		
		ДеревоДанных = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]);
		
		ИмяГруппыМнЧ1 = Форма.СтруктураРеквизитовФормы.мИдГруппы2М1;
		ИмяГруппыМнЧ2 = Форма.СтруктураРеквизитовФормы.мИдГруппы2М2;
		ИмяГруппыМнЧ3 = Форма.СтруктураРеквизитовФормы.мИдГруппы2М3;
		
		Для каждого ВеткаР2 Из ДеревоДанных.Строки Цикл
			
			ДеревоМнЧ1 = ВеткаР2.ДанныеМногострочныхЧастей[ИмяГруппыМнЧ1];
			
			Для каждого СтрокаМнЧ1 Из ДеревоМнЧ1.Строки Цикл
				
				Стр030 = 0;
				
				ИндСтрокиМнЧ1 = Формат(ДеревоМнЧ1.Строки.Индекс(СтрокаМнЧ1) + 1, "ЧГ=");
				
				ДеревоМнЧ2 = СтрокаМнЧ1.ДанныеМногострочныхЧастей[ИмяГруппыМнЧ2];
				
				Для каждого СтрокаМнЧ2 Из ДеревоМнЧ2.Строки Цикл
					
					ИндСтрокиМнЧ2 = Формат(ДеревоМнЧ2.Строки.Индекс(СтрокаМнЧ2) + 1, "ЧГ=");
					
					ДеревоМнЧ3 = СтрокаМнЧ2.ДанныеМногострочныхЧастей[ИмяГруппыМнЧ3];
					
					Для каждого СтрокаМнЧ3 Из ДеревоМнЧ3.Строки Цикл
						
						ИндСтрокиМнЧ3 = Формат(ДеревоМнЧ3.Строки.Индекс(СтрокаМнЧ3) + 1, "ЧГ=");
						
						КоординатыСтроки = "_" + ИндСтрокиМнЧ1 + "_" + ИндСтрокиМнЧ2 + "_" + ИндСтрокиМнЧ3;
						
						КодПоОКЕИ = СокрЛП(СтрокаМнЧ3.Данные["П00002М300002"]);
						Графа3 = СтрокаМнЧ3.Данные["П00002М300003"];
						Графа4 = СтрокаМнЧ3.Данные["П00002М300004"];
						Если КодПоОКЕИ = "831" Тогда
							СтрокаМнЧ3.Данные.Вставить("П00002М300005", Графа3 * Графа4 / 100);
						ИначеЕсли КодПоОКЕИ = "251" Тогда
							СтрокаМнЧ3.Данные.Вставить("П00002М300005", Графа3 * Графа4);
						КонецЕсли;
						
						Стр030 = Стр030 + РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(
						Форма, СтрокаМнЧ3.Данные["П00002М305000"]);
						
					КонецЦикла;
					
				КонецЦикла;
				
				СтрокаМнЧ1.Данные.Вставить("П00002М103000", Стр030);
				
			КонецЦикла;
			
		КонецЦикла;
		
	ИначеЕсли ИмяРаздела = "Раздел3" Тогда
		
		ДеревоДанных = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]);
		
		ИмяГруппыМнЧ1 = Форма.СтруктураРеквизитовФормы.мИдГруппы3М1;
		ИмяГруппыМнЧ2 = Форма.СтруктураРеквизитовФормы.мИдГруппы3М2;
		ИмяГруппыМнЧ3 = Форма.СтруктураРеквизитовФормы.мИдГруппы3М3;
		ИмяГруппыМнЧ4 = Форма.СтруктураРеквизитовФормы.мИдГруппы3М4;
		
