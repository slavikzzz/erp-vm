	КонецЕсли;
	
	// Получение данных из контейнера.
	СтруктураДанныхТитульный = Контейнер["Титульный"];
	Для каждого Раздел Из мСтруктураМногоуровневыхРазделов Цикл
		Если НЕ Раздел.Значение.Свойство("Подчиненность") Тогда
			
			Если Раздел.Ключ = "Раздел1" Тогда
				ДеревоРаздела1 = Контейнер[Раздел.Ключ];
				ДанныеСтраницыРаздела1 = ДеревоРаздела1.Строки[0].Данные;
				ДанныеСтраницыРаздела1.П000010001003 = СокрЛП(ДанныеСтраницыРаздела1.П000010001003);
			ИначеЕсли Раздел.Ключ = "Раздел2" Тогда
				ДеревоРаздела2 = Контейнер[Раздел.Ключ];
				ДанныеСтраницыРаздела2 = ДеревоРаздела2.Строки[0].Данные;
				ДанныеСтраницыРаздела2.П000020001003 = СокрЛП(ДанныеСтраницыРаздела2.П000020001003);
			ИначеЕсли Раздел.Ключ = "Раздел3" Тогда
				ДеревоРаздела3 = Контейнер[Раздел.Ключ];
