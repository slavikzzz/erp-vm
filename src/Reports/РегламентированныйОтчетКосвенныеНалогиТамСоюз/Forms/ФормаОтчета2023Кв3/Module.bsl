&НаКлиенте
Процедура ПоказатьБланк(Команда)
	
	Отказ = Ложь;
	
	ДополнительныеПараметры = Новый Структура();
	ДополнительныеПараметры.Вставить("Команда", Команда);
	ОписаниеОповещения = Новый ОписаниеОповещения("ПоказатьБланкЗавершение", ЭтотОбъект, ДополнительныеПараметры);
	
	ОнлайнСервисыРегламентированнойОтчетностиКлиент.ПередПечатьюРегламентированногоОтчета(ОписаниеОповещения, ЭтотОбъект, Отказ);
	
КонецПроцедуры

&НаКлиенте
Процедура ПоказатьБланкЗавершение(Отказ, ДополнительныеПараметры) Экспорт
	
	Если Отказ Тогда
		Возврат;
	КонецЕсли;
	
	Команда = ДополнительныеПараметры.Команда;
	
	Печать(Команда.Имя);
	
КонецПроцедуры

&НаКлиенте
Процедура Печать(ВидПечати, НеИзФормыОтчета = Ложь) Экспорт
	
	Состояние(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(НСтр(
		"ru = '%1. Формируется печатная форма...';
		|en = '%1. Формируется печатная форма...'"), Заголовок), , , БиблиотекаКартинок.Печать);
	
	Если СтруктураРеквизитовФормы.мПроверятьСоотношенияПриПечатиИВыгрузки = Истина Тогда // возможны 3 состояния
		РегламентированнаяОтчетностьКлиент.ПроверитьКонтрольныеСоотношения_СКП(ЭтаФорма, Новый Структура);
	КонецЕсли;
	
	Если НЕ ПечатьНаСервере(ВидПечати) Тогда
		Возврат;
	КонецЕсли;
	
	РегламентированнаяОтчетностьКлиент.ОткрытьФормуПредварительногоПросмотра(
		ЭтаФорма, ВидПечати, , СтруктураРеквизитовФормы.СписокПечатаемыхЛистов);
	
	СтруктураРеквизитовФормы.мРежимПечати = Ложь;
	
КонецПроцедуры

&НаСервере
Функция ПечатьНаСервере(ВидПечати)
	
	Если НЕ РегламентированнаяОтчетность.ПринтерДоступен() Тогда
		
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = НСтр("ru = 'Перед формированием печатных форм необходимо определить в системе принтер и задать его в качестве используемого по умолчанию!';
								|en = 'Перед формированием печатных форм необходимо определить в системе принтер и задать его в качестве используемого по умолчанию!'");
		Сообщение.Сообщить();
		
		Возврат Ложь;
		
	КонецЕсли;
	
	Если СтруктураРеквизитовФормы.ЕдиницаИзмерения <> ПорядкиОкругленияОтчетности.ПеречислениеПорядкиОкругленияОтчетностиОкр1
		ИЛИ СтруктураРеквизитовФормы.ТочностьЕдиницыИзмерения <> 0 Тогда
		
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = НСтр("ru = 'Печать возможна только при установленной единице измерения ""в рублях"" и точности ""0"".';
								|en = 'Печать возможна только при установленной единице измерения ""в рублях"" и точности ""0"".'");
		Сообщение.Сообщить();
		
		Возврат Ложь;
		
	КонецЕсли;
	
	Если ТипЗнч(мДеревоВыбранныхСтраниц) <> Тип("ДанныеФормыДерево") Тогда
		
		Возврат Ложь;
		
	КонецЕсли;
	
	СтруктураРеквизитовФормы.мПечатныеФормы.Очистить();
	СтруктураРеквизитовФормы.мРежимПечати = Истина;
	
	СохрТекОбл = Элементы.ТабличныйДокумент.ТекущаяОбласть;
	СохранитьДанныеРазделаИВыполнитьПолныйРасчет(СтруктураРеквизитовФормы.НаимТекущегоРаздела);
	Элементы.ТабличныйДокумент.ТекущаяОбласть = СохрТекОбл;
	
	сохрТаблДок = ТабличныйДокумент.ПолучитьОбласть();
	
	сохрНомераСтрокМногоуровнегоРаздела = СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела;
	
	СтрПоля = "ПолеСверху, ПолеСправа, ПолеСнизу, ПолеСлева";
	ВремПоля = Новый Структура(СтрПоля);
	
	ЗаполнитьЗначенияСвойств(ВремПоля, ТабличныйДокумент, СтрПоля);
	ВывестиДанныеВТабличныйДокумент("Титульный");
	
	ОбщиеРеквизитыРазделов = ПолучитьОбщиеРеквизитыСТитульногоЛиста();
	
	ИменаЦелочисленныхСуммовыхПоказателей = Новый Массив;
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010003003");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010003103");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010003203");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010003303");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010003403");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010003503");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010004003");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П000010005003");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00011М105000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00011М106000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00011М107000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00011М108000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00002М103000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00002М305000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00003М103000");
	ИменаЦелочисленныхСуммовыхПоказателей.Добавить("П00003М405000");
	
	СтруктураРеквизитовФормы.Вставить("ИменаЦелочисленныхСуммовыхПоказателей", ИменаЦелочисленныхСуммовыхПоказателей);
	
	Для Каждого СтрокаУровня1 Из мДеревоВыбранныхСтраниц.ПолучитьЭлементы() Цикл
		
		Если СтрокаУровня1.ВыводНаПечать = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		СтруктураПараметров = Новый Структура;
		СтруктураПараметров.Вставить("НаименованиеЛиста",  СтрокаУровня1.Представление);
		СтруктураПараметров.Вставить("ОриентацияЛиста",    СтрокаУровня1.ОриентацияСтраницы);
		СтруктураПараметров.Вставить("ИмяСтраницы",        СтрокаУровня1.ИмяСтраницы);
		Структурапараметров.Вставить("ИмяОбластиТаблПоля", СтрокаУровня1.ИмяОбластиТабличногоПоля);
		СтруктураПараметров.Вставить("ВидПечати",          ВидПечати);
		
		Если мСтруктураМногоуровневыхРазделов.Свойство(СтрокаУровня1.ИмяСтраницы) Тогда
			
			ВывестиНаПечатьДанныеМногоуровневогоРаздела(СтруктураПараметров, ОбщиеРеквизитыРазделов, СтрПоля);
			
		Иначе
			
			ВывестиДанныеВТабличныйДокумент(СтрокаУровня1.ИмяСтраницы);
			ВывестиНаПечатьЛист(СтруктураПараметров, ОбщиеРеквизитыРазделов, СтрПоля);
			
		КонецЕсли;
		
	КонецЦикла;
	
	СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела = сохрНомераСтрокМногоуровнегоРаздела;
	
	ТабличныйДокумент.Очистить();
	ТабличныйДокумент.Вывести(сохрТаблДок);
	ЗаполнитьЗначенияСвойств(ТабличныйДокумент, ВремПоля, СтрПоля);
	
	РегламентированнаяОтчетностьКлиентСервер.ПроставлениеНомеровЛистов(ЭтаФорма, , СтруктураРеквизитовФормы.СписокПечатаемыхЛистов);
	КопироватьДанныеФормы(мДеревоВыбранныхСтраниц, мДеревоСтраницОтчета);
	
	Возврат Истина;
	
КонецФункции

&НаСервере
Процедура ВывестиНаПечатьДанныеМногоуровневогоРаздела(СтруктураПараметров, ОбщиеРеквизитыРазделов, СтрПоля)
	
	ИмяТекРаздела = СтруктураПараметров.ИмяСтраницы;
	
	ДеревоДанныхРаздела = ПолучитьИзВременногоХранилища(
	СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяТекРаздела]);
	
	ПрефиксИменМакетов = "ПечатныйБланк2023Кв3_";
	
	Если ИмяТекРаздела = "Раздел1"
		ИЛИ ИмяТекРаздела = "Раздел11"
		ИЛИ ИмяТекРаздела = "Раздел2"
		ИЛИ ИмяТекРаздела = "Раздел3" Тогда
		
		МЧБ = ОбъектОтчета(ИмяФормы).ПолучитьМакет(ПрефиксИменМакетов + ИмяТекРаздела);
		МЧБ.ПолеСверху = 5;
		МЧБ.ПолеСправа = 5;
		МЧБ.ПолеСнизу  = 5;
		МЧБ.ПолеСлева  = 5;
		
		ИменаПервыхЯчеекПоказателейМЧБ = Новый Массив;
		ИменаПервыхЯчеекПоказателейМЧБ.Добавить("ИНН_");
		ИменаПервыхЯчеекПоказателейМЧБ.Добавить("КПП_");
		Для каждого ОбластьМЧБ Из МЧБ.Области Цикл
			Если СтрНачинаетсяС(ОбластьМЧБ.Имя, "П0") И СтрЗаканчиваетсяНа(ОбластьМЧБ.Имя, "_1") Тогда
				ИменаПервыхЯчеекПоказателейМЧБ.Добавить(Лев(ОбластьМЧБ.Имя, СтрДлина(ОбластьМЧБ.Имя) - 1));
			КонецЕсли;
		КонецЦикла;
		СтруктураПараметров.Вставить("ИменаПервыхЯчеекПоказателейМЧБ", ИменаПервыхЯчеекПоказателейМЧБ);
		
		СтраницаРаздела = ДеревоДанныхРаздела.Строки[0];
		
		Для каждого Показатель Из СтраницаРаздела.Данные Цикл
			ЗаполнитьПоказательМЧБ(МЧБ, Показатель.Значение, Показатель.Ключ + "_");
		КонецЦикла;
		
		Если мСтруктураМногоуровневыхРазделов[ИмяТекРаздела].Свойство("ИменаГруппМнЧ") Тогда
			ИменаГруппМнЧ = мСтруктураМногоуровневыхРазделов[ИмяТекРаздела]["ИменаГруппМнЧ"];
			Для каждого ИмяГруппы Из ИменаГруппМнЧ Цикл
				ВывестиНаПечатьЛистМногоуровневогоРаздела(МЧБ, СтраницаРаздела, ИмяГруппы, СтруктураПараметров);
			КонецЦикла;
		КонецЕсли;
		
		ОбработатьПередВыводомЛистМЧБ(МЧБ, СтруктураПараметров);
		
		СтруктураПараметровРаздела = ОбщегоНазначения.СкопироватьРекурсивно(СтруктураПараметров);
		РегламентированнаяОтчетность.ВывестиНаПечатьЛистОбщая(Заголовок,
		СтруктураПараметровРаздела, МЧБ, СтруктураРеквизитовФормы.мПечатныеФормы);
		
	КонецЕсли;
	
	ДеревоДанныхРаздела = Неопределено;
	
КонецПроцедуры

&НаСервере
Процедура ВывестиНаПечатьЛистМногоуровневогоРаздела(МЧБ, Ветка, ИмяГруппы, СтруктураПараметров, Знач КоординатыРодителя = "_")
	
	ДеревоМнЧ = Ветка.ДанныеМногострочныхЧастей[ИмяГруппы];
	
	СтрокНаЛисте = 1;
	СтрокВБлоке = 1;
	Если ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы2М3 Тогда
		СтрокНаЛисте = 6;
		СтрокВБлоке = 6;
	ИначеЕсли ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М3 Тогда
		СтрокНаЛисте = 2;
		СтрокВБлоке = 2;
	ИначеЕсли ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М4 Тогда
		СтрокНаЛисте = 4;
		СтрокВБлоке = 2;
	КонецЕсли;
	
	Для Каждого СтрокаМнЧ Из ДеревоМнЧ.Строки Цикл
		
		ТребуетсяВыводЛиста = Ложь;
		
		Если ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М2 Тогда
			НомерСтроки3М3ПриПечатиМЧБ = 0;
		ИначеЕсли ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М3 Тогда
			НомерСтроки3М4ПриПечатиМЧБ = 0;
		КонецЕсли;
		
		НомерСтрокиМнЧ = ДеревоМнЧ.Строки.Индекс(СтрокаМнЧ) + 1;
		
		Если ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М3 Тогда
			
			НомерРодителяНаМЧБ = 1;
			НомерСтрокиНаМЧБ   = НомерСтроки3М3ПриПечатиМЧБ + 1;
			
		ИначеЕсли ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М4 Тогда
			
			НомерРодителяНаМЧБ = НомерСтроки3М3ПриПечатиМЧБ;
			НомерСтрокиНаМЧБ   = НомерСтроки3М4ПриПечатиМЧБ + 1;
			
			Если НомерСтрокиНаМЧБ > СтрокВБлоке Тогда
				
				НомерРодителяНаМЧБ = НомерРодителяНаМЧБ + 1;
				НомерСтрокиНаМЧБ = 1;
				
			КонецЕсли;
			
		Иначе
			
			НомерРодителяНаМЧБ = Цел(НомерСтрокиМнЧ / СтрокВБлоке) + ?(НомерСтрокиМнЧ % СтрокВБлоке > 0, 1, 0);
			НомерСтрокиНаМЧБ   = НомерСтрокиМнЧ - (НомерРодителяНаМЧБ - 1) * СтрокВБлоке;
			
			Если НомерРодителяНаМЧБ > СтрокНаЛисте / СтрокВБлоке Тогда
				НомерРодителяНаМЧБ = 1;
				Если НомерСтрокиНаМЧБ = 1 Тогда
					ТребуетсяВыводЛиста = Истина;
				КонецЕсли;
			КонецЕсли;
			
		КонецЕсли;
		
		НомерРодителяПревысилМаксимальноеЗначение = НомерРодителяНаМЧБ > СтрокНаЛисте / СтрокВБлоке;
		НомерСтрокиПревысилМаксимальноеЗначение = НомерСтрокиНаМЧБ > СтрокВБлоке;
		
		Если ТребуетсяВыводЛиста
			ИЛИ НомерРодителяПревысилМаксимальноеЗначение
			ИЛИ НомерСтрокиПревысилМаксимальноеЗначение Тогда
			
			НомерСтрокиНаМЧБ = 1;
			НомерРодителяНаМЧБ = 1;
			
			ОбработатьПередВыводомЛистМЧБ(МЧБ, СтруктураПараметров);
			
			СтруктураПараметровРаздела = ОбщегоНазначения.СкопироватьРекурсивно(СтруктураПараметров);
			РегламентированнаяОтчетность.ВывестиНаПечатьЛистОбщая(Заголовок,
			СтруктураПараметровРаздела, МЧБ, СтруктураРеквизитовФормы.мПечатныеФормы);
			
			МЧБ = ОбъектОтчета(ИмяФормы).ПолучитьМакет(
			"ПечатныйБланк2023Кв3_" + СтруктураПараметровРаздела["ИмяСтраницы"]);
			
			МЧБ.ПолеСверху = 5;
			МЧБ.ПолеСправа = 5;
			МЧБ.ПолеСнизу  = 5;
			МЧБ.ПолеСлева  = 5;
			
			МассивСбрасываемыхКоординатРодителя = СтрРазделить(КоординатыРодителя, "_", Ложь);
			Если МассивСбрасываемыхКоординатРодителя.Количество() > 0 Тогда
				КоординатыРодителя = "_";
				Для каждого Координата Из МассивСбрасываемыхКоординатРодителя Цикл
					КоординатыРодителя = КоординатыРодителя + "1_";
				КонецЦикла;
			КонецЕсли;
			
		КонецЕсли;
		
		Если КоординатыРодителя <> "_" Тогда
			МассивКоординатРодителя = СтрРазделить(КоординатыРодителя, "_", Ложь);
			МассивКоординатРодителя[МассивКоординатРодителя.Количество() - 1] = Формат(НомерРодителяНаМЧБ, "ЧГ=");
			КоординатыРодителя = "_" + СтрСоединить(МассивКоординатРодителя, "_") + "_";
		КонецЕсли;
		
		КоординатыНаМЧБ = КоординатыРодителя + Формат(НомерСтрокиНаМЧБ, "ЧГ=") + "_";
		
		Для каждого Показатель Из СтрокаМнЧ.Данные Цикл
			НачалоИмениПоказателяНаМЧБ = Показатель.Ключ + КоординатыНаМЧБ;
			ЗаполнитьПоказательМЧБ(МЧБ, Показатель.Значение, НачалоИмениПоказателяНаМЧБ);
		КонецЦикла;
		
		Если ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М3 Тогда
			
			НомерСтроки3М3ПриПечатиМЧБ = НомерСтрокиНаМЧБ;
			
		ИначеЕсли ИмяГруппы = СтруктураРеквизитовФормы.мИдГруппы3М4 Тогда
			
			НомерСтроки3М3ПриПечатиМЧБ = НомерРодителяНаМЧБ;
			НомерСтроки3М4ПриПечатиМЧБ = НомерСтрокиНаМЧБ;
			
		КонецЕсли;
		
		ИменаПодчГрупп = СтруктураРеквизитовФормы.СтруктураМногострочныхЧастей[ИмяГруппы]["ИменаПодчиненныхГрупп"];
		Для каждого ИмяПодчГруппы Из ИменаПодчГрупп Цикл
			ВывестиНаПечатьЛистМногоуровневогоРаздела(МЧБ, СтрокаМнЧ, ИмяПодчГруппы, СтруктураПараметров, КоординатыНаМЧБ);
		КонецЦикла;
		
	КонецЦикла;
	
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьПоказательМЧБ(МЧБ, ЗначениеПоказателя, НачалоИмениПоказателяНаМЧБ)
	
	Если ТипЗнч(ЗначениеПоказателя) = Тип("Строка")
		ИЛИ ТипЗнч(ЗначениеПоказателя) = Тип("Дата") Тогда
		
		Если ТипЗнч(ЗначениеПоказателя) = Тип("Строка") Тогда
			ЗначПоказателя = СокрЛП(ЗначениеПоказателя);
		Иначе// тип "Дата"
			ЗначПоказателя = Формат(ЗначениеПоказателя, "ДФ=ддММгггг");
		КонецЕсли;
		
		Если НачалоИмениПоказателяНаМЧБ = "П000010001003_"
			ИЛИ НачалоИмениПоказателяНаМЧБ = "П000020001003_"
			ИЛИ НачалоИмениПоказателяНаМЧБ = "П000030001003_" Тогда
			ЗначПоказателя = РегламентированнаяотчетностьКлиентСервер.ДополнитьСтроку(ЗначПоказателя, 11, "-", 1);
		КонецЕсли;
		
		ДлинаПоказателя = СтрДлина(ЗначПоказателя);
		Для Ном = 1 По ДлинаПоказателя Цикл
			ОбластьМЧБ = МЧБ.Области.Найти(НачалоИмениПоказателяНаМЧБ + Формат(Ном, "ЧГ="));
			Если ОбластьМЧБ = Неопределено Тогда
				Прервать;
			КонецЕсли;
			ОбластьМЧБ.Текст = Сред(ЗначПоказателя, Ном, 1);
		КонецЦикла;
		
	ИначеЕсли ТипЗнч(ЗначениеПоказателя) = Тип("Число") Тогда
		
		//
		НачалоИмениПоказателяНаМЧБ_ = Лев(НачалоИмениПоказателяНаМЧБ, СтруктураРеквизитовФормы.ДлинаИмениГрафы);
		
		Если СтруктураРеквизитовФормы.ИменаЦелочисленныхСуммовыхПоказателей.Найти(
			НачалоИмениПоказателяНаМЧБ_) <> Неопределено Тогда
			ЗначПоказателя = Формат(Окр(ЗначениеПоказателя), "ЧГ=");
		Иначе
			ЗначПоказателя = Формат(ЗначениеПоказателя, "ЧГ=");
		КонецЕсли;
		//ЗначПоказателя = Формат(ЗначениеПоказателя, "ЧГ=");
		//
		
		ДлинаПоказателя = СтрДлина(ЗначПоказателя);
		ЧастиЧисла = СтрРазделить(ЗначПоказателя, ",");
		ЗначЦелойЧасти = ЧастиЧисла[0];
		ДлинаЦелойЧасти = СтрДлина(ЗначЦелойЧасти);
		Ном = 1;
		ОбластьМЧБ = МЧБ.Области.Найти(НачалоИмениПоказателяНаМЧБ + "1");
		Пока ОбластьМЧБ <> Неопределено Цикл
			Если ОбластьМЧБ.Текст = "." Тогда
				Если ЗначениеЗаполнено(ЗначЦелойЧасти) Тогда
					ЗначДробнойЧасти = "0";
					ДлинаДробнойЧасти = 1;
					Если ЧастиЧисла.Количество() = 2 Тогда
						ЗначДробнойЧасти = ЧастиЧисла[1];
						ДлинаДробнойЧасти = СтрДлина(ЗначДробнойЧасти);
					КонецЕсли;
					НомДробнойЧасти = 1;
					ОбластьДробнойЧастиМЧБ = МЧБ.Области.Найти(НачалоИмениПоказателяНаМЧБ + Формат(Ном + НомДробнойЧасти, "ЧГ="));
					Пока ОбластьДробнойЧастиМЧБ <> Неопределено Цикл
						ОбластьДробнойЧастиМЧБ.Текст
						= ?(НомДробнойЧасти > ДлинаДробнойЧасти, "0", Сред(ЗначДробнойЧасти, НомДробнойЧасти, 1));
						НомДробнойЧасти = НомДробнойЧасти + 1;
						ОбластьДробнойЧастиМЧБ = МЧБ.Области.Найти(НачалоИмениПоказателяНаМЧБ + Формат(Ном + НомДробнойЧасти, "ЧГ="));
					КонецЦикла;
					Прервать;
				Иначе
					Ном = Ном + 1;
					ОбластьМЧБ = МЧБ.Области.Найти(НачалоИмениПоказателяНаМЧБ + Формат(Ном, "ЧГ="));
					Продолжить;
				КонецЕсли;
			КонецЕсли;
			ОбластьМЧБ.Текст = ?(Ном > ДлинаЦелойЧасти, "-", Сред(ЗначЦелойЧасти, Ном, 1));
			Ном = Ном + 1;
			ОбластьМЧБ = МЧБ.Области.Найти(НачалоИмениПоказателяНаМЧБ + Формат(Ном, "ЧГ="));
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ОбработатьПередВыводомЛистМЧБ(МЧБ, СтруктураПараметров)
	
