		ДанныеМнЧ = Ветка.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппыР1М1];
		Для каждого СтрокаМнЧ Из ДанныеМнЧ.Строки Цикл
			ИндСтрокиМнЧ = ДанныеМнЧ.Строки.Индекс(СтрокаМнЧ);
			НомСтроки = Формат(ИндСтрокиМнЧ + 1, "ЧГ=");
			
			Если НЕ ЗначениеЗаполнено(СтрокаМнЧ.Данные["П00001М101000"]) Тогда
				СообщитьВТС("В строке " + НомСтроки + " сведений не задана марка (наименование) табачного изделия",
				"Раздел1", "П00001М101000_" + НомСтроки, НомСтраницы);
				СтатусПроверки = Ложь;
			КонецЕсли;
			
			ЗначПок = СокрЛП(СтрокаМнЧ.Данные["П00001М102000"]);
			Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
				СообщитьВТС("В строке " + НомСтроки + " сведений не задан код товара",
				"Раздел1", "П00001М102000_" + НомСтроки, НомСтраницы);
				СтатусПроверки = Ложь;
			ИначеЕсли НЕ (СтрДлина(ЗначПок) = 14 И СтроковыеФункцииКлиентсервер.ТолькоЦифрыВСтроке(ЗначПок)) Тогда
				СообщитьВТС("В строке " + НомСтроки + " сведений задан код товара, не состоящий из 14 цифр",
				"Раздел1", "П00001М102000_" + НомСтроки, НомСтраницы);
				СтатусПроверки = Ложь;
			КонецЕсли;
			
			ЗначПок = СокрЛП(СтрокаМнЧ.Данные["П00001М100001"]);
			Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
				СообщитьВТС("В строке " + НомСтроки + " сведений не задан признак табачного изделия",
