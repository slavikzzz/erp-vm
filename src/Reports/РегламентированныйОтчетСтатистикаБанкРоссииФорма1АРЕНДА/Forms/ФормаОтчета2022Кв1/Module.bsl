	СохрСтруктура = СохраненныеДанныеОтчета();
	ПоказателиОтчета = СохрСтруктура.ПоказателиОтчета;
	Для Каждого Раздел Из ПоказателиОтчета Цикл
		мДанныеОтчета.Вставить(СтрЗаменить(Раздел.Ключ, "ПолеТабличногоДокумента", ""),
			РегламентированнаяОтчетность.СвернутьДанныеТабличногоПоля(Раздел.Значение));
	КонецЦикла;
	
	Для Каждого Раздел Из мСтруктураМногоуровневыхРазделов Цикл
		ДанныеМнЧ = Новый Структура;
		ДанныеМногострочныхЧастей = СохрСтруктура.ДанныеМногоуровневыхРазделов[Раздел.Ключ].Строки[0].ДанныеМногострочныхЧастей;
		Для Каждого ДанныеМногострочнойЧасти Из ДанныеМногострочныхЧастей Цикл
			ДанныеМнЧ.Вставить(ДанныеМногострочнойЧасти.Ключ, Новый Массив);
			Для Каждого СтрокаМногострочнойЧасти Из ДанныеМногострочнойЧасти.Значение.Строки Цикл
				ДанныеМнЧ[ДанныеМногострочнойЧасти.Ключ].Добавить(СтрокаМногострочнойЧасти.Данные);
			КонецЦикла;
		КонецЦикла;
		мДанныеОтчета.Вставить(Раздел.Ключ, ДанныеМнЧ);
	КонецЦикла;
	
