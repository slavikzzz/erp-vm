#Область СлужебныеРасчет

Процедура РасчетРаздел1(Запись)

	Для Индекс = 6 По 17 Цикл
		
		Если Индекс = 14 ИЛИ Индекс = 11 Тогда		
			Продолжить;		
		КонецЕсли;
		
		НомерКолонки = Формат(Индекс, "ЧЦ=2; ЧН=; ЧГ=0; ЧВН="); // 06, 07..20.
		ИмяРесурса = "П0000100003" + НомерКолонки;
		
		Запись[ИмяРесурса] = ?(Запись[ИмяРесурса] = Неопределено, 0, Запись[ИмяРесурса]);
	
	КонецЦикла;
	
	// Кустов на гектар.
	Если Запись.П000010000315 > 0 Тогда	
		Запись.П000010000307 = Запись.П000010000306 / Запись.П000010000315;	
	КонецЕсли;
	
	// Урожайность центнер на га.
	Если Запись.П000010000315 > 0 Тогда	
		Запись.П000010000309 = Запись.П000010000317 / Запись.П000010000315;	
	КонецЕсли;
	
	// Урожайность центнер на куст.
	Если Запись.П000010000306 > 0 Тогда	
		Запись.П000010000310 = Запись.П000010000317 / Запись.П000010000306;	
	КонецЕсли;
	
	// Всего в тоннах через всего в центнерах.
	Запись.П000010000312 = Запись.П000010000317 / 10; 
	
	// Дубль урожайности центнер на га по формату выгрузки.
	Запись.П000010000316 = Запись.П000010000309;
	

