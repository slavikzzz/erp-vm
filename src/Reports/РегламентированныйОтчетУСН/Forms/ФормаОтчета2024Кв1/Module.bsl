&НаСервере
Процедура ЗагрузитьПодготовленныеДанные()
	Контейнер = ПолучитьИзВременногоХранилища(АдресХранилища);
	Если Контейнер = Неопределено Тогда 
		Возврат;
	КонецЕсли;
	
	Если Контейнер.Свойство("ТаблицаРасшифровки") Тогда 
		ПоместитьВоВременноеХранилище(Контейнер.ТаблицаРасшифровки, СтруктураРеквизитовФормы.АдресВременногоХранилищаРасшифровки);
	КонецЕсли;
	Контейнер = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(Контейнер, "Контейнер", Контейнер);
	
	ЗначениеВДанныеФормы(Контейнер.Раздел3_ДанныеДопСтрок, П0000300001);
	ЗаполнитьЗначенияСвойств(СтруктураДанныхРаздел11, Контейнер.Раздел11);
	ЗаполнитьЗначенияСвойств(СтруктураДанныхРаздел12, Контейнер.Раздел12);
	ЗаполнитьЗначенияСвойств(СтруктураДанныхРаздел21, Контейнер.Раздел21);
	ЗаполнитьЗначенияСвойств(СтруктураДанныхРаздел22, Контейнер.Раздел22);
	ЗаполнитьЗначенияСвойств(СтруктураДанныхРаздел3,  Контейнер.Раздел3);
	ЗаполнитьЗначенияСвойств(СтруктураДанныхРаздел4,  Контейнер.Раздел4);
	
	Если ЗначениеЗаполнено(СтруктураДанныхРаздел21.П002110012403)
		И НЕ ЗначениеЗаполнено(СтруктураДанныхРаздел21.П002110012404) Тогда
		СтруктураДанныхРаздел21.Вставить("П002110012404", "000000000000");
	ИначеЕсли ЗначениеЗаполнено(СтруктураДанныхРаздел21.П002110012404)
		И НЕ ЗначениеЗаполнено(СтруктураДанныхРаздел21.П002110012403) Тогда
		СтруктураДанныхРаздел21.Вставить("П002110012404", "");
	КонецЕсли;
	Если ЗначениеЗаполнено(СтруктураДанныхРаздел22.П000220026403)
		И НЕ ЗначениеЗаполнено(СтруктураДанныхРаздел22.П000220026404) Тогда
		СтруктураДанныхРаздел22.Вставить("П000220026404", "000000000000");
	ИначеЕсли ЗначениеЗаполнено(СтруктураДанныхРаздел22.П000220026404)
		И НЕ ЗначениеЗаполнено(СтруктураДанныхРаздел22.П000220026403) Тогда
		СтруктураДанныхРаздел22.Вставить("П000220026404", "");
	КонецЕсли;
	
	Если П0000300001.Количество() = 0 Тогда
		П0000300001.Добавить();
	КонецЕсли;
	
	РегламентированнаяОтчетность.ЗаполнитьСтруктуруДанныхРазделаЗначениямиИзДопСтрок(
		СтруктураДанныхРаздел3, Контейнер.Раздел3_ДанныеДопСтрок);
	
	ОтчетныйГод = Формат(Год(СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета), "ЧГ=");
	Если ОтчетныйГод <> "2025" Тогда
		СтруктураДанныхРаздел4.Вставить("П000040006403", 0);
	КонецЕсли;
	
	ЗаполнитьСведенияОбОрганизации(Истина, Ложь);
	ВывестиМакетВТаблДокНаСервере(СтруктураРеквизитовФормы.НаимТекущегоРаздела, 1);
	УстановитьДоступностьОбластей(ЭтотОбъект, СтруктураРеквизитовФормы.НаимТекущегоРаздела);
	РасчетНаСервере();
	
	ВключитьПечатьЗаполненногоНеобязательногоРазделаНаСервере("Раздел3", СтруктураДанныхРаздел3);
	ВключитьПечатьЗаполненногоНеобязательногоРазделаНаСервере("Раздел4", СтруктураДанныхРаздел4);
	
	Модифицированность = Истина;
	
	Если Элементы.Расшифровать.Видимость Тогда
		Элементы.Расшифровать.Доступность = Истина;
		Элементы.ТабличныйДокументКонтекстноеМенюРасшифровать.Доступность = Истина;
	КонецЕсли;
КонецПроцедуры

&НаСервере
Функция ЗаполнитьАвтоНаСервере()
	СохранитьДанныеРаздела(СтруктураРеквизитовФормы.НаимТекущегоРаздела, Ложь);
	ЗаполнитьПустыеСтруктурыДанных();
	СтруктураРеквизитовФормы.АдресВременногоХранилищаРасшифровки = ПоместитьВоВременноеХранилище(Неопределено, Новый УникальныйИдентификатор);
	
	ПараметрыОтчета = Новый Структура();
	ПараметрыОтчета.Вставить("Организация", СтруктураРеквизитовФормы.Организация);
	ПараметрыОтчета.Вставить("мДатаНачалаПериодаОтчета", НачалоГода(СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета));
	ПараметрыОтчета.Вставить("мДатаКонцаПериодаОтчета", СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета);
	ПараметрыОтчета.Вставить("ДатаНачалаРасширенногоПериодаОтчета", ДатаНачалаРасширенногоПериодаОтчета());
	ПараметрыОтчета.Вставить("УникальныйИдентификаторФормы", УникальныйИдентификатор);
	ПараметрыОтчета.Вставить("АдресВременногоХранилищаРасшифровки", СтруктураРеквизитовФормы.АдресВременногоХранилищаРасшифровки);
	
	Контейнер = Новый Структура();
	Контейнер.Вставить("Раздел11", СтруктураДанныхРаздел11);
	Контейнер.Вставить("Раздел12", СтруктураДанныхРаздел12);
	Контейнер.Вставить("Раздел21", СтруктураДанныхРаздел21);
	Контейнер.Вставить("Раздел22", СтруктураДанныхРаздел22);
	Контейнер.Вставить("Раздел3",  СтруктураДанныхРаздел3);
	Контейнер.Вставить("Раздел3_ДанныеДопСтрок", ДанныеФормыВЗначение(П0000300001, Тип("ТаблицаЗначений")));
	Контейнер.Вставить("Раздел4",  СтруктураДанныхРаздел4);
	
	ПараметрыВыполненияВФоне = ДлительныеОперации.ПараметрыВыполненияВФоне(УникальныйИдентификатор);
	ПараметрыВыполненияВФоне.ЗапуститьВФоне = Истина;
	РезультатВыполнения = ДлительныеОперации.ВыполнитьВФоне("РегламентированнаяОтчетностьПереопределяемый.ЗаполнитьОтчетВФоне",
		Новый Структура("ИДОтчета, ИДРедакцииОтчета, ПараметрыОтчета, Контейнер",
		СтрРазделить(ИмяФормы, ".")[1], СтрРазделить(ИмяФормы, ".")[3], ПараметрыОтчета, Контейнер), ПараметрыВыполненияВФоне);
	
	РезультатВыполнения.Вставить("ЗаданиеВыполнено", НРег(РезультатВыполнения.Статус) = "выполнено");
	АдресХранилища       = РезультатВыполнения.АдресРезультата;
	ИдентификаторЗадания = РезультатВыполнения.ИдентификаторЗадания;
	
	Если РезультатВыполнения.ЗаданиеВыполнено Тогда
		ЗагрузитьПодготовленныеДанные();
	КонецЕсли;
	
	Возврат РезультатВыполнения;
КонецФункции

&НаСервере
Процедура ВключитьПечатьЗаполненногоНеобязательногоРазделаНаСервере(ИмяРаздела, СтруктураДанныхРаздела)
	
	Если ИмяРаздела = "Раздел3" Тогда
		ПрефиксПоказателейРаздела = "П00003";
	ИначеЕсли ИмяРаздела = "Раздел4" Тогда
		ПрефиксПоказателейРаздела = "П00004";
	Иначе
		Возврат;
	КонецЕсли;
	
	Для Каждого Показатель Из СтруктураДанныхРаздела Цикл
		Если СтрНачинаетсяС(Показатель.Ключ, ПрефиксПоказателейРаздела) И ЗначениеЗаполнено(Показатель.Значение) Тогда
			НастройкиСтраницыРаздела = РегламентированнаяОтчетностьКлиентСервер.НайтиЭлементВДанныхФормыДерево(
				мДеревоВыбранныхСтраниц.ПолучитьЭлементы(), "ИмяСтраницы", ИмяРаздела);
			Если НастройкиСтраницыРаздела <> Неопределено Тогда
				НастройкиСтраницыРаздела.ВыводНаПечать = 1;
				КопироватьДанныеФормы(мДеревоВыбранныхСтраниц, мДеревоСтраницОтчета);
			КонецЕсли;
			Прервать;
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры

&НаСервере
Функция ДатаНачалаРасширенногоПериодаОтчета()
	
	ДатаРегистрацииОрганизации
	= РегламентированнаяОтчетность.ДатаРегистрацииОрганизации(СтруктураРеквизитовФормы.Организация);
	
	ПервыйНалоговыйПериод = ИнтерфейсыВзаимодействияБРО.БлижайшийНалоговыйПериод(
	СтруктураРеквизитовФормы.Организация, ДатаРегистрацииОрганизации,
	Перечисления.ВариантыРасширенногоПервогоНалоговогоПериода.РегистрацияВДекабре);
	
	КонецПервогоНалоговогоПериода = КонецДня(ПервыйНалоговыйПериод.Конец);
	
	Если КонецПервогоНалоговогоПериода >= КонецГода('20171231')
		И КонецПервогоНалоговогоПериода = СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета Тогда
		
		Возврат НачалоДня(Мин(ПервыйНалоговыйПериод.Начало, ПервыйНалоговыйПериод.Период));
		
	КонецЕсли;
	
	Возврат НачалоГода(СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета);
	
КонецФункции

