		КонецЕсли;
		
		ПарамКодыНалога211 = "";
		ПарамКодыВзносов211 = "";
		МассивНомСтр211 = Новый Массив;
		Для НомСтр = 0 По 3 Цикл
			СуммаНалога  = ОкрЧФ(ЭтотОбъект, СтруктураДанныхРаздел21["П002110013" + НомСтр + "03"]);
			СуммаВзносов = ОкрЧФ(ЭтотОбъект, СтруктураДанныхРаздел21["П002110014" + НомСтр + "03"]);
			МаксимальнаяСуммаНалога = ОкрЧФ(ЭтотОбъект, СуммаНалога * Коэффициент);
			Если СуммаВзносов > МаксимальнаяСуммаНалога Тогда
				МассивНомСтр211.Добавить(НомСтр);
				ПарамКодыНалога211 = ПарамКодыНалога211 + "13" + НомСтр + ", ";
				ПарамКодыВзносов211 = ПарамКодыВзносов211 + "14" + НомСтр + ", ";
			КонецЕсли;
		КонецЦикла;
		
		ПарамКодыНалога212 = "";
		ПарамКодыВзносов212 = "";
		МассивНомСтр212 = Новый Массив;
		Для НомСтр = 0 По 3 Цикл
			СуммаНалога  = ОкрЧФ(ЭтотОбъект, СтруктураДанныхРаздел21["П002120013" + НомСтр + "03"]);
			СуммаВзносов = ОкрЧФ(ЭтотОбъект, СтруктураДанныхРаздел21["П002120014" + НомСтр + "03"]);
			МаксимальнаяСуммаНалога = ОкрЧФ(ЭтотОбъект, СуммаНалога * Коэффициент);
			Если СуммаВзносов > МаксимальнаяСуммаНалога Тогда
