		ОбНал = СокрЛП(ТДО["ОбНал"].Значение);
	Иначе
		ОбНал = СокрЛП(Форма.СтруктураДанныхТитульный["ОбНал"]);
	КонецЕсли;
	
	Если ИмяРаздела = "Раздел11" Тогда
		
		ДанРазд = Форма.СтруктураДанныхРаздел11;
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = "Раздел11" Тогда
			
			// Строки 020, 040, 050, 070, 080 и 110 раздела 1.1 рассчитываются по данным разделов 2.1 и 4.
			Если НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				ТДО["П000110002003"].Значение = ДанРазд["П000110002003"];
				ТДО["П000110004003"].Значение = ДанРазд["П000110004003"];
				ТДО["П000110005003"].Значение = ДанРазд["П000110005003"];
