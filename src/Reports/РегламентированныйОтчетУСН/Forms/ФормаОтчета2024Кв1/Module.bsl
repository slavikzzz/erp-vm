			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000110010103);
		КонецЕсли;
		
	ИначеЕсли ИмяСтраницыПанели = "Раздел12" Тогда
		
		Если ЗначениеЗаполнено(Форма.СтруктураДанныхТитульный.ИзменениеМестаПостановкиНаУчет) Тогда
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П000120003003);
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П000120006003);
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П000120009003);
		Иначе
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000120003003);
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000120006003);
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000120009003);
		КонецЕсли;
		
		Если НЕ Форма.СтруктураРеквизитовФормы.ИП Тогда
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000120010103);
		КонецЕсли;
		
	ИначеЕсли ИмяСтраницыПанели = "Раздел21" Тогда
		
		Если Мин(ТДО.П002110012003.Значение, ТДО.П002110012103.Значение,
			ТДО.П002110012203.Значение, ТДО.П002110012303.Значение) < 6 Тогда
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П002110012403);
		Иначе
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П002110012403);
		КонецЕсли;
		
		Если ЗначениеЗаполнено(ТДО.П002110012403.Значение) Тогда
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П002110012404);
			УстановитьОбоснованиеПримененияНалоговойСтавкиПоУмолчанию(ТДО.П002110012404);
		Иначе
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П002110012404);
		КонецЕсли;
		
	ИначеЕсли ИмяСтраницыПанели = "Раздел22" Тогда
		
		Если Мин(ТДО.П000220026003.Значение, ТДО.П000220026103.Значение,
			ТДО.П000220026203.Значение, ТДО.П000220026303.Значение) < 15 Тогда
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П000220026403);
		Иначе
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000220026403);
		КонецЕсли;
		
		Если ЗначениеЗаполнено(ТДО.П000220026403.Значение) Тогда
			РазрешитьВводДанныхВОбласть(Форма, ТДО.П000220026404);
			УстановитьОбоснованиеПримененияНалоговойСтавкиПоУмолчанию(ТДО.П000220026404);
		Иначе
			ЗапретитьВводДанныхВОбласть(Форма, ТДО.П000220026404);
		КонецЕсли;
		
	ИначеЕсли ИмяСтраницыПанели = "Раздел4" Тогда
		
		ОбрабатываемаяОбласть = ТДО.П000040006403;
		Если Год(Форма.СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета) = 2025 Тогда
			ТДО.СекцияПояснение.Видимость = Ложь;
		Иначе
			ЗапретитьВводДанныхВОбласть(Форма, ОбрабатываемаяОбласть);
			ТДО.СекцияПояснение.Видимость = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

