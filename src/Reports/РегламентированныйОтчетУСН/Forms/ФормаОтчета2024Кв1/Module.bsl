				ТабличныйДокумент.Области["П002120014" + НомСтр + "03"].Значение = ОкрЧФ(ЭтотОбъект,
				ОкрЧФ(ЭтотОбъект, ТабличныйДокумент.Области["П002120013" + НомСтр + "03"].Значение) * Коэффициент);
