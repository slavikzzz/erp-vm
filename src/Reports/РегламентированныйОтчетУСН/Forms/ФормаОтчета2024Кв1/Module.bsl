				ТДО["П000110011003"].Значение = ДанРазд["П000110011003"];
			КонецЕсли;
			
			// Стр. 100 разд. 1.1 = (стр. 133 - стр. 143) разд. 2.1.1 - стр. 163 разд. 2.1.2
			// - стр. 063 разд. 4 - (стр. 020 + стр. 040 - стр. 050 + стр. 070 - стр. 080) - стр. 101,
			// если (стр. 133 - стр. 143) разд. 2.1.1 - стр. 163 разд. 2.1.2  - стр. 063 разд. 4
			// - (стр. 020 + стр. 040 - стр. 050 + стр. 070 - стр. 080) - стр. 101 >= 0.
			Окр_П000040006303 = ?(ОбНал = "1", ОкрЧФ(Форма, Форма.СтруктураДанныхРаздел4["П000040006303"]), 0);
			Окр_П002110013303 = ОкрЧФ(Форма, Форма.СтруктураДанныхРаздел21["П002110013303"]);
			Окр_П002110014303 = ОкрЧФ(Форма, Форма.СтруктураДанныхРаздел21["П002110014303"]);
			Окр_П002120016303 = ОкрЧФ(Форма, Форма.СтруктураДанныхРаздел21["П002120016303"]);
			Окр_П000110002003 = ОкрЧФ(Форма, ТДО["П000110002003"].Значение);
			Окр_П000110004003 = ОкрЧФ(Форма, ТДО["П000110004003"].Значение);
			Окр_П000110005003 = ОкрЧФ(Форма, ТДО["П000110005003"].Значение);
			Окр_П000110007003 = ОкрЧФ(Форма, ТДО["П000110007003"].Значение);
			Окр_П000110008003 = ОкрЧФ(Форма, ТДО["П000110008003"].Значение);
			Окр_П000110010103 = ОкрЧФ(Форма, ТДО["П000110010103"].Значение);
			ТДО["П000110010003"].Значение = Макс(0, Окр_П002110013303 - Окр_П002110014303 - Окр_П002120016303
			- Окр_П000040006303 - (Окр_П000110002003 + Окр_П000110004003 - Окр_П000110005003 + Окр_П000110007003
			- Окр_П000110008003) - Окр_П000110010103);
			
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "Раздел12" Тогда
		
		ДанРазд = Форма.СтруктураДанныхРаздел12;
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = "Раздел12" Тогда
			
			// Строки 020, 040, 050, 070, 080 и 110 раздела 1.2 рассчитываются по данным разделов 2.2 и 4.
			Если НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				ТДО["П000120002003"].Значение = ДанРазд["П000120002003"];
				ТДО["П000120004003"].Значение = ДанРазд["П000120004003"];
				ТДО["П000120005003"].Значение = ДанРазд["П000120005003"];
