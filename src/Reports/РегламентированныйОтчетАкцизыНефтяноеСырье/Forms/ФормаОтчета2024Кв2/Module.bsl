			РегламентированнаяОтчетностьКлиентСервер.УвеличитьИндекс(Индекс, ИндексСтр);
			Обл = ТДО.Найти("П00021М119003_" + ИндексСтр);
		КонецЦикла;
		
	ИначеЕсли ТипЗнч(СтраницаРаздела) = Тип("СтрокаДереваЗначений") Тогда
		
