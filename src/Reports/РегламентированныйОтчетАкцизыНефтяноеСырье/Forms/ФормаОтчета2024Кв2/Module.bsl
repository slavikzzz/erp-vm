		КонецЦикла;
		
	Иначе
		
		Возврат РезультатПроверки;
		
	КонецЕсли;
	
	Если Стр090 <> 0 Тогда
		
		ПромежуточноеЗначение = ((Стр100 + Стр105 - Стр190) + (Стр110 + Стр115 - Стр200)
		+ (Стр120 + Стр125 - Стр210) + (Стр130 + Стр135 - Стр220)) / Стр090;
		
		РезультатПроверки.Вставить("ВыполненоУсловие1",
