			Стр190 = Стр190 + Обл.Значение;
			Стр200 = Стр200 + ТДО["П00021М120003_" + ИндексСтр].Значение;
			Стр210 = Стр210 + ТДО["П00021М121003_" + ИндексСтр].Значение;
