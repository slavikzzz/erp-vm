					Стр220 = Стр220 + СтрокаМнЧ.Данные["П00021М122003"];
				КонецЦикла;
				
				// Стр.080.
				Если Данные["П000210009003"] = 0 Тогда
					Данные.Вставить("П000210008003", 0);
