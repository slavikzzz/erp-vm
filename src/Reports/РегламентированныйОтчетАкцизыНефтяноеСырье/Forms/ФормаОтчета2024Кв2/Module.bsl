	Если ИмяРаздела = "Раздел2" ИЛИ ИмяРаздела = "Раздел3" Тогда
		УдалитьСтраницуУровня0(ИмяРаздела);
	ИначеЕсли ИмяРаздела = "Раздел21" Тогда
		УдалитьСтраницуУровня1(ИмяРаздела);
	Иначе
		Возврат;
	КонецЕсли;
	
	СпрятатьСсылкуУдалитьСтраницу();
	
