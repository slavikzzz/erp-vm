&НаСервере
Процедура ВывестиНаПечатьОтчет(СтруктураПараметров, ВыбранныеСтраницы, СтрПоля = Неопределено)
	
	Если ВыбранныеСтраницы.Количество() = 0 Тогда
		
		Возврат;
		
	КонецЕсли;
	
	ИмяМакета = "ПечатныйБланк2020Кв1";
	
	Макет = ОбъектОтчета(ИмяФормы).ПолучитьМакет(ИмяМакета);
	
	ПечФорма = Макет.Получитьобласть();
	ПечФорма.ПолеСверху = 5;
	ПечФорма.ПолеСправа = 5;
	ПечФорма.ПолеСнизу  = 5;
	ПечФорма.ПолеСлева  = 5;
	ПечФорма.ОриентацияСтраницы = ОриентацияСтраницы.Портрет;
	ПечФорма.Автомасштаб = Истина;
	
	Шапка = ПечФорма.Получитьобласть("Шапка");
	ШапкаТабл1 = ПечФорма.Получитьобласть("ШапкаТабл1");
	СтрокаТабл1 = ПечФорма.Получитьобласть("СтрокаТабл1");
	ИтогоТабл1 = ПечФорма.Получитьобласть("ИтогоТабл1");
	ШапкаТабл2 = ПечФорма.Получитьобласть("ШапкаТабл2");
	СтрокаТабл2 = ПечФорма.Получитьобласть("СтрокаТабл2");
	СноскаТабл2 = ПечФорма.Получитьобласть("СноскаТабл2");
	
	НомерСтраницы = 2;
	ПечФорма.Очистить();
	
	Если ВыбранныеСтраницы.Найти("Титульный") <> Неопределено Тогда
		
		Шапка.Параметры.Заполнить(СтруктураДанныхТитульный);
		НаимОргИННКПП = СокрЛП(СтруктураДанныхТитульный.НаимОрг) + ", " + СокрЛП(СтруктураДанныхТитульный.ИНН);
		Если НЕ СтруктураРеквизитовФормы.ИП Тогда
			НаимОргИННКПП = НаимОргИННКПП + ", " + СокрЛП(СтруктураДанныхТитульный.КПП)
		КонецЕсли;
		Шапка.Параметры.НаимОргИННКПП = НаимОргИННКПП;
		
		ПечФорма.Вывести(Шапка);
		
	КонецЕсли;
	
	Если ВыбранныеСтраницы.Найти("Табл1") <> Неопределено Тогда
		
		ПечФорма.Вывести(ШапкаТабл1);
		
		ДеревоДанныхРаздела = ПолучитьИзВременногоХранилища(
		СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанныхТабл1"]);
		
		Ветка = ДеревоДанныхРаздела.Строки[0];
		
		ДанныеМнЧ = Ветка.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппы1].Строки;
		
		Объединение_Верх = Неопределено;
		Объединение_Низ = Неопределено;
		
		Для каждого ВеткаМнЧ Из ДанныеМнЧ Цикл
			
			Если ДанныеМнЧ.Индекс(ВеткаМнЧ) = 0 Тогда
				СтрокаТабл1.Параметры.Заполнить(Ветка.Данные);
				Объединение_Верх = ПечФорма.ВысотаТаблицы + 1;
			КонецЕсли;
			
			СтрокаТабл1.Параметры.Заполнить(ВеткаМнЧ.Данные);
			ПечФорма.Вывести(СтрокаТабл1);
			
			Обл = ПечФорма.Область("СтрокаТабл1");
			Обл.Имя = "_" + Формат(ДанныеМнЧ.Индекс(ВеткаМнЧ), "ЧГ=");
			
		КонецЦикла;
		
		ИтогоТабл1.Параметры.Заполнить(Ветка.Данные);
		ПечФорма.Вывести(ИтогоТабл1);
		
		Если ЗначениеЗаполнено(Объединение_Верх) Тогда
			
			Объединение_Низ = ПечФорма.ВысотаТаблицы;
			
			Обл = ПечФорма.Область(Объединение_Верх, , Объединение_Низ);
			Обл.Имя = "СтрокиТабл1";
			
			Для Ном = Объединение_Верх По Объединение_Низ Цикл
				Обл = ПечФорма.Область(Ном, , Ном);
				Обл.Имя = "";
			КонецЦикла;
			
			Обл = ПечФорма.Область(Объединение_Верх, 2, Объединение_Низ, 2);
			Обл.Объединить();
			Обл = ПечФорма.Область(Объединение_Верх, 3, Объединение_Низ, 3);
			Обл.Объединить();
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если ВыбранныеСтраницы.Найти("Табл2") <> Неопределено Тогда
		
		ПечФорма.Вывести(ШапкаТабл2);
		
		ДеревоДанныхРаздела = ПолучитьИзВременногоХранилища(
		СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанныхТабл2"]);
		
		Ветка = ДеревоДанныхРаздела.Строки[0];
		
		ДанныеМнЧ = Ветка.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппы2].Строки;
		
		Для каждого ВеткаМнЧ Из ДанныеМнЧ Цикл
			
			СтрокаТабл2.Параметры.Заполнить(ВеткаМнЧ.Данные);
			ПечФорма.Вывести(СтрокаТабл2);
			
			Обл = ПечФорма.Область("СтрокаТабл2");
			Обл.Имя = "_" + Формат(ДанныеМнЧ.Индекс(ВеткаМнЧ), "ЧГ=");
			
		КонецЦикла;
		
		ПечФорма.Вывести(СноскаТабл2);
		
	КонецЕсли;
	
	СтруктураПараметров.Вставить("НомерСтраницы", НомерСтраницы);
	
	РегламентированнаяОтчетность.ВывестиНаПечатьЛистОбщая(
	Заголовок, СтруктураПараметров, ПечФорма, СтруктураРеквизитовФормы.мПечатныеФормы);
	
КонецПроцедуры

