&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяСтраницыПанели = "", ОбластьИмя = "")
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет = Истина Тогда
		Возврат;
	КонецЕсли;
	
	Области = Форма.ПолеТабличногоДокументаФормаОтчета.Области;
	
	//Разделы 1 и 2.
	//гр. 1 по строкам 01 - 04, 06–11, 19 = (гр. 2 + гр. 3 + гр. 4) по строкам 01–04, 06–11, 19;
	Для Стр = 1 По 19 Цикл
		Если Стр = 5 Или (Стр > 11 И Стр < 19) Тогда
			Продолжить;
		КонецЕсли;
		НомСтр = Формат(Стр, "ЧЦ=2; ЧВН=");
		Области["П0101" + НомСтр + "03"].Значение
			= Области["П0101" + НомСтр + "04"].Значение
			+ Области["П0101" + НомСтр + "05"].Значение
			+ Области["П0101" + НомСтр + "06"].Значение;
	КонецЦикла;
	
	//гр. 1 по стр. 12–18 = (гр. 2 + гр. 4) по стр. 12–18;
	Для Стр = 12 По 18 Цикл
		Области["П0101" + Стр + "03"].Значение
			= Области["П0101" + Стр + "04"].Значение
			+ Области["П0101" + Стр + "06"].Значение;
	КонецЦикла;
	
	//гр. 1 по стр. 21 = (гр. 2 + гр. 3) по стр. 21.
	Области.П01012103.Значение = Области.П01012104.Значение + Области.П01012105.Значение;
	
	//стр. 01 = (стр. 02 + стр. 03 + стр. 04 + стр. 06 + стр. 07 + стр. 09 + стр. 11 + стр. 12 + стр. 19) по гр. 1, 2, 4;
	//стр. 01 = (стр. 02 + стр. 03 + стр. 04 + стр. 06 + стр. 07 + стр. 09 + стр. 11 + стр. 19) по гр. 3;
	//стр. 01 = (стр. 02 + стр. 03 + стр. 04 + стр. 07 + стр. 09 + стр. 11 + стр. 12  + стр. 19) по гр. 5
	МС = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок("02;03;04;06;07;09;11;12;19", ";");
	Для Гр = 3 По 7 Цикл
		ит = 0;
		Для Каждого Стр Из МС Цикл 
			Обл = Области.Найти("П0101" + Стр + "0" + Гр);
			Если Обл <> Неопределено Тогда 
				ит = ит + Обл.Значение;
			КонецЕсли;
		КонецЦикла;
		Области.Найти("П0101010" + Гр).Значение = Ит;
	КонецЦикла;
	
	//Раздел 3
