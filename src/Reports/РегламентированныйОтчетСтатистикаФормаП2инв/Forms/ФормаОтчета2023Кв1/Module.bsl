				Прервать;
			КонецЕсли;
			
			Значение = Значение + Области["П0040000032" + КолонкаСтр + "_" + Строка].Значение;
		КонецЦикла;
		
		Области["П0040032" + КолонкаСтр].Значение = Значение;
	КонецЦикла;
	
	//Раздел 5.
	//гр. 1 = гр. 2 + гр. 3;
	Области["П005003601"].Значение = Области["П005003602"].Значение + Области["П005003603"].Значение;
	
