	Области.П01033103.Значение = Области.П01033203.Значение + Области.П01033303.Значение + Области.П01033403.Значение;
	
	//Раздел 4
	Строка = 0;
	Пока Истина Цикл
		Строка = Строка + 1;
		Если Области.Найти("П004000003210_" + Строка) = Неопределено Тогда
			Прервать;
		КонецЕсли;
		
		//гр. 7 = (гр. 8 + гр. 9 + гр. 10) по всем строкам.
		Области["П004000003210_" + Строка].Значение =
					+Области["П004000003211_" + Строка].Значение
					+Области["П004000003212_" + Строка].Значение
					+Области["П004000003213_" + Строка].Значение;
		
		//гр. 2 = (гр. 3 + гр. 5 + гр. 6 + гр. 7 + гр. 11 + гр. 12 ) по всем строкам;
		Области["П004000003205_" + Строка].Значение =
					Области["П004000003206_" + Строка].Значение
					+Области["П004000003208_" + Строка].Значение
					+Области["П004000003209_" + Строка].Значение
					+Области["П004000003210_" + Строка].Значение
					+Области["П004000003214_" + Строка].Значение
