	Если ИмяРаздела = "Раздел2" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				ИтогСтр030 = 0;
				ИтогСтр040 = 0;
				
				РегламентированнаяОтчетностьКлиентСервер.УстановитьИндекс(Индекс, ИндексСтр);
				Обл = ТДО.Найти("П000200002003_" + ИндексСтр);
				Пока Обл <> Неопределено Цикл
					
					Стр030 = Окр(ТДО["П000200003003_" + ИндексСтр].Значение);
					Стр040 = Окр(ТДО["П000200004003_" + ИндексСтр].Значение);
					
					ТДО["П000200002003_" + ИндексСтр].Значение = Стр030 + Стр040;
					
					ИтогСтр030 = ИтогСтр030 + Стр030;
					ИтогСтр040 = ИтогСтр040 + Стр040;
					
					РегламентированнаяОтчетностьКлиентСервер.УвеличитьИндекс(Индекс, ИндексСтр);
					Обл = ТДО.Найти("П000200002003_" + ИндексСтр);
				КонецЦикла;
				
				ТДО["П000200005003"].Значение = ИтогСтр030 + ИтогСтр040;
				ТДО["П000200006003"].Значение = ИтогСтр030;
				ТДО["П000200007003"].Значение = ИтогСтр040;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "Раздел32" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				КодВалютыВыплатыДохода = СокрЛП(ТДО["П000320005003"].Значение);
				
				Если НЕ ЗначениеЗаполнено(ТДО["П000320009003"].Значение) Тогда
					Ставка = ТДО["П000320007003"].Значение;
					СтавкаДляРасчета = ?(Ставка = 0 ИЛИ Ставка = 99.99, 0, Ставка);
					Если КодВалютыВыплатыДохода = "643" Тогда
						ТДО["П000320010003"].Значение = Окр(Окр(ТДО["П000320004003"].Значение) * СтавкаДляРасчета / 100);
					Иначе
						ТДО["П000320010003"].Значение = Окр(Окр(ТДО["П000320004003"].Значение, 4) * СтавкаДляРасчета / 100, 4);
					КонецЕсли;
				Иначе
					// Ручной ввод значения в стр.100.
				КонецЕсли;
				
				Если КодВалютыВыплатыДохода = "643" Тогда
					ТДО["П000320013003"].Значение = Окр(ТДО["П000320004003"].Значение);
					ТДО["П000320014003"].Значение = Окр(ТДО["П000320010003"].Значение);
				Иначе
					ТДО["П000320013003"].Значение
					= Окр(Окр(ТДО["П000320004003"].Значение, 4) * Окр(ТДО["П000320012003"].Значение, 4));
					ТДО["П000320014003"].Значение
					= Окр(Окр(ТДО["П000320010003"].Значение, 4) * Окр(ТДО["П000320012003"].Значение, 4));
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "Раздел42" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				КодВалютыВыплатыДохода = СокрЛП(ТДО["П000420006003"].Значение);
				
				Если КодВалютыВыплатыДохода = "643" Тогда
					ТДО["П000420009003"].Значение = Окр(ТДО["П000420005003"].Значение);
				Иначе
					ТДО["П000420009003"].Значение
					= Окр(Окр(ТДО["П000420005003"].Значение, 4) * Окр(ТДО["П000420008003"].Значение, 4));
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "" Тогда
		
		Расчет(Форма, "Раздел42");
		Расчет(Форма, "Раздел32");
		Расчет(Форма, "Раздел2");
		
	КонецЕсли;
	
	Форма.Модифицированность = Истина;
	
