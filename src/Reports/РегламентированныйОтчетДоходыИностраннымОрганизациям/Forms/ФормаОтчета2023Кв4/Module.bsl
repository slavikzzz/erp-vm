			СтрокаТЗПров42_ПодчСтроки = ТЗПров42_ПодчСтроки.Найти(ПорядНом, "ПорядНом");
			
			Если СтрокаТЗПров42_ПодчСтроки <> Неопределено Тогда
				
				ТекВетка42.Данные = Новый Структура;
				СтарДанныеР42 = СтарТабл42[СтрокаТЗПров42_ПодчСтроки.СтарИнд].Данные;
				Для каждого ЭлСтрукт Из НачСтруктураДанных42 Цикл
					Если СтарДанныеР42.Свойство(ЭлСтрукт.Ключ) Тогда
						ТекВетка42.Данные.Вставить(ЭлСтрукт.Ключ, СтарДанныеР42[ЭлСтрукт.Ключ]);
