	КонецЦикла;
	
	ДанныеМногоуровневыхРазделов.Вставить(ИмяРаздела, ДеревоРаздела);
	
	// Раздел 2.
	ИмяРаздела = "Раздел2";
	ИмяГруппыМнЧ = СтруктураРеквизитовФормы.мИдГруппы2;
	
