	ИначеЕсли ИмяРаздела = "Раздел42" Тогда
		
		ДеревоДанных = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]);
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			АктивнаяВетка = ДеревоДанных.Строки[
			Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[0] - 1].Строки[
			Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[1] - 1].Строки[
			Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[2] - 1];
		КонецЕсли;
		
		Для каждого Ветка_41 Из ДеревоДанных.Строки Цикл
			
			Для каждого Ветка_42 Из Ветка_41.Строки[0].Строки Цикл
				
				Если Ветка_42 = АктивнаяВетка Тогда
					Для каждого Пок Из Ветка_42.Данные Цикл
						Ветка_42.Данные.Вставить(
						Пок.Ключ, Форма.ТабличныйДокумент.Области[Пок.Ключ].Значение);
					КонецЦикла;
				КонецЕсли;
				
				КодВалютыВыплатыДохода = СокрЛП(Ветка_42.Данные["П000420006003"]);
				
				Если КодВалютыВыплатыДохода = "643" Тогда
					Ветка_42.Данные.Вставить("П000420009003", Окр(Ветка_42.Данные["П000420005003"]));
				Иначе
					Ветка_42.Данные.Вставить("П000420009003",
					Окр(Окр(Ветка_42.Данные["П000420005003"], 4) * Окр(Ветка_42.Данные["П000420008003"], 4)));
				КонецЕсли;
				
				Если Ветка_42 = АктивнаяВетка Тогда
					ТДО["П000420009003"].Значение = Ветка_42.Данные["П000420009003"];
				КонецЕсли;
				
			КонецЦикла;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Если ДеревоДанных <> Неопределено Тогда
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]
		= ПоместитьВоВременноеХранилище(ДеревоДанных, Форма.УникальныйИдентификатор);
	КонецЕсли;
	
КонецПроцедуры

