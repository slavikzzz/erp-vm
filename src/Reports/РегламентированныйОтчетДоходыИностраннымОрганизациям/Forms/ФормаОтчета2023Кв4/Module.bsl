			МассивДатаПодписи[Ном - 1] = Сред(СтрДатаПодписи, Ном, 1);
		КонецЦикла;
	КонецЕсли;
	
	Возврат Новый Структура("ИНН,КПП,ДатаПодписи", МассивИНН, МассивКПП, МассивДатаПодписи);
	
