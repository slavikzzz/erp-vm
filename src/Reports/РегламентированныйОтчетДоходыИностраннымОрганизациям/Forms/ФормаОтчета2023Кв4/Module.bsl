	ИмяРаздела = "Раздел31";
	
	СтарТабл31 = СписокСохранения.ДанныеМногостраничныхРазделов["Раздел31"];
	СтарТабл32 = СписокСохранения.ДанныеМногостраничныхРазделов["Раздел32"];
	СтарТабл33 = СписокСохранения.ДанныеМногостраничныхРазделов["Раздел33"];
	
