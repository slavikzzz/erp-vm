	КонецЦикла;
	Если ЗначениеЗаполнено(ПараметрыВыгрузки["П000050104603"]) Тогда
		ПараметрыВыгрузки.Вставить("П000050100102_" + Формат(Инд, "ЧГ="), ПараметрыВыгрузки["П000050104602"]);
		ПараметрыВыгрузки.Вставить("П000050100103_" + Формат(Инд, "ЧГ="), ПараметрыВыгрузки["П000050104603"]);
		Если ПараметрыВыгрузки.Свойство("ЧНП000050104602") Тогда
			ПараметрыВыгрузки.Вставить("ЧНП000050100102_" + Формат(Инд, "ЧГ="), ПараметрыВыгрузки["ЧНП000050104602"]);
		КонецЕсли;
	КонецЕсли;
