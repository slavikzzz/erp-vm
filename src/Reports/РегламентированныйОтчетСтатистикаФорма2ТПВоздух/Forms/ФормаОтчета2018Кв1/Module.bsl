&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяТекущейСтраницыПанели = "", ОбластьИмя = "")
	
	Если (Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет = Истина) Тогда
		Возврат;
	КонецЕсли;
	
	Области = Форма.ПолеТабличногоДокументаФормаОтчета.Области;
	
	Для Гр = 3 По 8 Цикл 
		Области["П00010030" + Гр].Значение = Области["П00010040" + Гр].Значение
												+ Области["П00010050" + Гр].Значение
												+ Области["П00010060" + Гр].Значение
												+ Области["П00010070" + Гр].Значение
												+ Области["П00010080" + Гр].Значение
												+ Области["П00010090" + Гр].Значение;
		Области["П00010010" + Гр].Значение = Области["П00010020" + Гр].Значение
												+ Области["П00010030" + Гр].Значение;
	КонецЦикла;
	
	Для Стр = 1 По 9 Цикл
		Области["П000100"+Стр+"08"].Значение = Области["П000100"+Стр+"03"].Значение
														+ Области["П000100"+Стр+"05"].Значение
														- Области["П000100"+Стр+"06"].Значение;
	КонецЦикла;
	
