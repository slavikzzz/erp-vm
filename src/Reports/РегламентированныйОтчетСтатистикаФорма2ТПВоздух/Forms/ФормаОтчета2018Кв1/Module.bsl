&НаКлиенте
Процедура ПолеТабличногоДокументаФормаОтчетаПриИзмененииСодержимогоОбласти(Элемент, Область)
	
	// ПроцессыОбработкиДокументов
	//
	Если Элементы.ПолеТабличногоДокументаФормаОтчета.Защита Тогда
		
		Возврат;
		
	КонецЕсли;
	//
	// ПроцессыОбработкиДокументов
	
	Если Область.Имя = "ДатаСоставленияОтчета" Тогда 
		ДатаПодписи = Область.Значение;
		ЗаполнитьСведенияОбОрганизацииНаКлиенте(Истина);
		Модифицированность = Истина;
		Возврат;
	ИначеЕсли Область.Имя = "НомерКорректировки" Тогда 
		Если Область.Значение = 0 Тогда 
			СтруктураРеквизитовФормы.ВидДокумента = 0;
			НомерКорректировки = 0;
		Иначе 
			СтруктураРеквизитовФормы.ВидДокумента = 1;
			НомерКорректировки = Область.Значение;
		КонецЕсли;
		Модифицированность = Истина;
		Возврат;
	ИначеЕсли Область.Имя = "КодОНВ"
		Или Область.Имя = "КодОКТМООНВ"
		Или Область.Имя = "КодОКВЭД2ОНВ" Тогда 
		
		ПроставитьКодыВЯчейки(Область, ПолеТабличногоДокументаФормаОтчета);
		ПолеТабличногоДокументаФормаОтчета.Области["onvos_code"].Значение = ПолеТабличногоДокументаФормаОтчета.Области["КодОНВ"].Значение;
		ПолеТабличногоДокументаФормаОтчета.Области["onvos_oktmo"].Значение = ПолеТабличногоДокументаФормаОтчета.Области["КодОКТМООНВ"].Значение;
		ПолеТабличногоДокументаФормаОтчета.Области["onvos_okved"].Значение = ПолеТабличногоДокументаФормаОтчета.Области["КодОКВЭД2ОНВ"].Значение;
		Модифицированность = Истина;
		Возврат;
	КонецЕсли;
	
	ДополнительныеПараметры = Новый Структура("Область, Элемент, Форма", Область, Элемент, ЭтотОбъект);
	РегламентированнаяОтчетностьКлиент.ПредставлениеНуля(ДополнительныеПараметры);
	
	РасчетНаКлиенте("", "");
	
	Если СтруктураРеквизитовФормы.мАвтоВыборКодов Тогда
		ИмяОбласти = Область.Имя;
		Если СтрНайти(ИмяОбласти, "П000004000103_") = 1 Тогда
			ПолеТабличногоДокументаФормаОтчета.Области["П000004000193_" + Сред(ИмяОбласти, 15)].Значение = 0;
		КонецЕсли;
	КонецЕсли;
	
	Модифицированность = Истина;
	
КонецПроцедуры

