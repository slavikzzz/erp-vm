		КонецЕсли;
		ПолеТабличногоДокументаФормаОтчета.Области[ИмяОбласти].Значение = ?(Стр <= 20, "" + (200 + Стр), "");
	КонецЦикла;
	
	Для Стр = 1 По 80 Цикл
		ИмяОбласти = "П000004000100_" + Стр;
		Если ПолеТабличногоДокументаФормаОтчета.Области.Найти(ИмяОбласти) = Неопределено Тогда 
