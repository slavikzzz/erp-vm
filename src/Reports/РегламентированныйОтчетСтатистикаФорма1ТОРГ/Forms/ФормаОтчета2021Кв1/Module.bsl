			Для Инд1 = ОТЧ.ПривестиЗначение(ВерхНиз[0]) По ОТЧ.ПривестиЗначение(ВерхНиз[1]) Цикл 
				ТекСумма = ТекСумма + Области["П02" + Формат(Инд1, "ЧЦ=3; ЧВН=") + "03"].Значение;
			КонецЦикла;
		Иначе
			ТекСумма = ТекСумма + Области["П02" + Формат(ОТЧ.ПривестиЗначение(Элт), "ЧЦ=3; ЧВН=") + "03"].Значение;
		КонецЕсли;
	КонецЦикла;
	Области["П0208503"].Значение = ТекСумма;
	
	ТекСумма = 0;
	Для Каждого Элт Из СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(СтрЗаменить("03, 06, 22, 30-35, 38-39, 51, 64, 69, 76-77, 80-81, 84", " ", ""), ",", Истина) Цикл 
