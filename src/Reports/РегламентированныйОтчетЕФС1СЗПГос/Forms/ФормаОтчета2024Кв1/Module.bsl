		КонецЕсли;
		
	КонецЕсли;
	
	Если ИмяПоказателя = "П000110000101" ИЛИ ИмяПоказателя = "П000110000201"
		ИЛИ ИмяПоказателя = "П000110000301" ИЛИ ИмяПоказателя = "П000110000401" Тогда
		СтруктПарам = Новый Структура;
		СтруктПарам.Вставить("Фам", ТабличныйДокумент.Область("П000110000101").Значение);
		СтруктПарам.Вставить("Имя", ТабличныйДокумент.Область("П000110000201").Значение);
		СтруктПарам.Вставить("Отч", ТабличныйДокумент.Область("П000110000301").Значение);
		СтруктПарам.Вставить("СНИЛС", ТабличныйДокумент.Область("П000110000401").Значение);
