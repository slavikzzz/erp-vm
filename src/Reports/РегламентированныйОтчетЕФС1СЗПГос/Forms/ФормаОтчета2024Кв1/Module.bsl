&НаКлиентеНаСервереБезКонтекста
Процедура УстановитьДоступностьОбластей(Форма, ИмяРаздела)
	
	Перем Индекс, ИндексСтр;
	
	АвтоРасчПоказатели = Новый Массив;
	
	ТДО = Форма.ТабличныйДокумент.Области;
	
	Если ИмяРаздела = "Титульный" Тогда
		
		Для каждого ИмяПок Из Форма.СтруктураРеквизитовФормы["Титульный_ИменаЗависимыхПоказателей"] Цикл
			Обл = ТДО.Найти(ИмяПок);
			Если Обл <> Неопределено Тогда
				Если ЗначениеЗаполнено(ТДО.ПризнакСтрахователя.Значение) Тогда
					ЗапретитьВводДанныхВОбласть(Форма, Обл);
				Иначе
					РазрешитьВводДанныхВОбласть(Форма, Обл);
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
		
		Секция_Тел_ЭлАдр = ТДО.Найти("Секция_Тел_ЭлАдр");
		Если Секция_Тел_ЭлАдр <> Неопределено Тогда
			Секция_Тел_ЭлАдр.Видимость = НЕ ЗначениеЗаполнено(ТДО.ПризнакСтрахователя.Значение);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "Раздел1" Тогда
		
		Если ЗначениеЗаполнено(ТДО["П000110000601"].Значение) Тогда
			ЗапретитьВводДанныхВОбласть(Форма, ТДО["П000110000901"]);
			ЗапретитьВводДанныхВОбласть(Форма, ТДО["П000110000902"]);
			ЗапретитьВводДанныхВОбласть(Форма, ТДО["П000110000903"]);
		Иначе
			РазрешитьВводДанныхВОбласть(Форма, ТДО["П000110000901"]);
			РазрешитьВводДанныхВОбласть(Форма, ТДО["П000110000902"]);
			РазрешитьВводДанныхВОбласть(Форма, ТДО["П000110000903"]);
		КонецЕсли;
		
		Для каждого Обл Из ТДО Цикл
			
			Если СтрНачинаетсяС(Обл.Имя, "П00113М100003") Тогда
				
				Постфикс = Сред(Обл.Имя, 14);
				Если НРег(СокрЛП(Обл.Значение)) = "корректирующие" ИЛИ НРег(СокрЛП(Обл.Значение)) = "отменяющие" Тогда
					РазрешитьВводДанныхВОбласть(Форма, ТДО["П00113М100005" + Постфикс]);
					РазрешитьВводДанныхВОбласть(Форма, ТДО["П00113М100006" + Постфикс]);
				Иначе
					ЗапретитьВводДанныхВОбласть(Форма, ТДО["П00113М100005" + Постфикс]);
					ЗапретитьВводДанныхВОбласть(Форма, ТДО["П00113М100006" + Постфикс]);
				КонецЕсли;
				
			ИначеЕсли СтрНачинаетсяС(Обл.Имя, "П00113М200010") Тогда
				
				Постфикс = Сред(Обл.Имя, 14);
				Если ЗначениеЗаполнено(СокрЛП(Обл.Значение)) Тогда// нет званий
					ЗапретитьВводДанныхВОбласть(Форма, ТДО["П00113М200011" + Постфикс]);
					ЗапретитьВводДанныхВОбласть(Форма, ТДО["П00113М200012" + Постфикс]);
					ЗапретитьВводДанныхВОбласть(Форма, ТДО["П00113М200013" + Постфикс]);
				Иначе
					РазрешитьВводДанныхВОбласть(Форма, ТДО["П00113М200011" + Постфикс]);
					РазрешитьВводДанныхВОбласть(Форма, ТДО["П00113М200012" + Постфикс]);
					РазрешитьВводДанныхВОбласть(Форма, ТДО["П00113М200013" + Постфикс]);
				КонецЕсли;
				
			ИначеЕсли СтрНачинаетсяС(Обл.Имя, "ДобавитьСтроку" + Форма.СтруктураРеквизитовФормы.мИдГруппыР113М4) Тогда
				
				ОблДляУстановкиНевидимости = Форма.ТабличныйДокумент.Область(Обл.Верх, , Обл.Низ, );
				ОблДляУстановкиНевидимости.Видимость = Ложь;
				
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Для каждого ИмяПок Из АвтоРасчПоказатели Цикл
		Обл = ТДО.Найти(ИмяПок);
		Если Обл <> Неопределено Тогда
			Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
				Обл.Защита = Ложь;
				Обл.ЦветФона = Форма.мСтруктураЦветовРаскраски["_0"];
			Иначе
				Обл.Защита = Истина;
				Обл.ЦветФона = Форма.мСтруктураЦветовРаскраски["_4"];
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	ПереопределитьЗначенияСвойствЯчеекТабличногоДокумента(Форма, ИмяРаздела);
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
