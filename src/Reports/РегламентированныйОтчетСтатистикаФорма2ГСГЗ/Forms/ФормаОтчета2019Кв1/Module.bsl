				+ Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
		КонецЦикла;
		Области["П000001" + Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=") + "04"].Значение = ТекСумма;
	КонецЦикла;
	Для НомКол = 3 По 7 Цикл
		ТекСумма = 0;
		Для НомСтр = 104 По 106 Цикл
			ТекСумма = ТекСумма + Области["П000001"
				+ Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=")
				+ Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
		КонецЦикла;
		Области["П0000010103" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение = ТекСумма;
		ТекСумма = 0;
		Для НомСтр = 108 По 110 Цикл
			ТекСумма = ТекСумма + Области["П000001"
				+ Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=")
				+ Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
		КонецЦикла;
		Области["П0000010107" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение = ТекСумма;
		ТекСумма = 0;
		Для НомСтр = 112 По 115 Цикл
			ТекСумма = ТекСумма + Области["П000001"
				+ Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=")
				+ Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
		КонецЦикла;
		Области["П0000010111" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение = ТекСумма;
		ТекСумма = 0;
		Для НомСтр = 117 По 120 Цикл
			ТекСумма = ТекСумма + Области["П000001"
				+ Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=")
				+ Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
		КонецЦикла;
		Области["П0000010116" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение = ТекСумма;
		Области["П0000010102" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			= Области["П0000010103" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000010107" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000010111" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000010116" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
		Области["П0000010121" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
