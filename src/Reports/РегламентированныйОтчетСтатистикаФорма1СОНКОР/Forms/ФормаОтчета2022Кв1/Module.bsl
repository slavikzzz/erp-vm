		+ Области["П002001004803"].Значение
		+ Области["П002001004903"].Значение;
		
	Области["П004001006103"].Значение
		= Области["П004001006203"].Значение
		+ Области["П004001006303"].Значение
		+ Области["П004001006403"].Значение;
		
	Для Гр = 3 По 7 Цикл
		
		Графа = Формат(Гр, "ЧЦ=2; ЧВН=");
		
		Области["П0050010070" + Графа].Значение
			= Области["П0050010071" + Графа].Значение
			+ Области["П0050010072" + Графа].Значение
			+ Области["П0050010073" + Графа].Значение
			+ Области["П0050010074" + Графа].Значение
