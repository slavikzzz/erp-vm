&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяТекущейСтраницыПанели = "", ОбластьИмя = "")
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Области = Форма.ПолеТабличногоДокументаФормаОтчета.Области;
	
	СтрЧ = 0;
	Пока Истина Цикл
		СтрЧ = СтрЧ + 1;
		Стр  = Формат(СтрЧ, "ЧГ=");
		
		Обл = Области.Найти("П000001000105_" + Стр);
		Если Обл = Неопределено Тогда
			Прервать;
		КонецЕсли;
		
		СуммаПоГр = 0;
		Для Гр = 5 По 16 Цикл
			НомГр = Формат(Гр, "ЧЦ=2; ЧВН=");
			СуммаПоГр = СуммаПоГр + Области["П0000020001" + НомГр + "_" + Стр].Значение
		КонецЦикла;
		Области["П000001000105_" + Стр].Значение = СуммаПоГр;
	КонецЦикла;
	
	СтрЧ = 0;
	Пока Истина Цикл
		СтрЧ = СтрЧ + 1;
		Стр  = Формат(СтрЧ, "ЧГ=");
		
		Обл = Области.Найти("П000004000107_" + Стр);
		Если Обл = Неопределено Тогда
			Прервать;
		КонецЕсли;
		
		Области["П000004000106_" + Стр].Значение
			= Области["П000004000107_" + Стр].Значение
			+ Области["П000004000108_" + Стр].Значение
			+ Области["П000004000109_" + Стр].Значение
			+ Области["П000004000110_" + Стр].Значение
			+ Области["П000004000111_" + Стр].Значение
			+ Области["П000004000112_" + Стр].Значение;
		
		Области["П000005000105_" + Стр].Значение
			= Области["П000005000106_" + Стр].Значение
			+ Области["П000005000107_" + Стр].Значение
			+ Области["П000005000108_" + Стр].Значение
			+ Области["П000005000109_" + Стр].Значение;
		
		Области["П000005000110_" + Стр].Значение
