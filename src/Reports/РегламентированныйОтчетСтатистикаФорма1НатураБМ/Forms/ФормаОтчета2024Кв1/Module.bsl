		НовСтрТЗВыбора = ТЗВыбора.Вставить(0);
		НовСтрТЗВыбора.Код = "";
		НовСтрТЗВыбора.Название = "Пустое значение";
		
		ВвестиПоказатель(Элемент, ОбластьКод, ОбластьНаим, , , ПараметрВводаПоля.ТекстПриВыборе, ТЗВыбора, ,СтандартнаяОбработка);
		
		Возврат;
	КонецЕсли;
	
	Если СтрНайти(Область.Имя, "_") = 14 Тогда
		Если СтрНайти(Область.Имя, "П0000010001") = 1 Тогда
			СинхронизироватьРаздел("П0000010001", "П0000020001", Сред(Область.Имя, 15));
		ИначеЕсли СтрНайти(Область.Имя, "П0000020001") = 1 Тогда
			СинхронизироватьРаздел("П0000020001", "П0000010001", Сред(Область.Имя, 15));
		ИначеЕсли СтрНайти(Область.Имя, "П0000040001") = 1 Тогда
			СинхронизироватьРаздел("П0000040001", "П0000050001", Сред(Область.Имя, 15));
		ИначеЕсли СтрНайти(Область.Имя, "П0000050001") = 1 Тогда
			СинхронизироватьРаздел("П0000050001", "П0000040001", Сред(Область.Имя, 15));
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

