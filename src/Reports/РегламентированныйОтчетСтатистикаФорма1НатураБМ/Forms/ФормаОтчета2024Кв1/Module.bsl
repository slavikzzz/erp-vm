	ИначеЕсли Сред(Область.Имя, 12, 2) = "01" Или Сред(Область.Имя, 12, 2) = "02" Тогда
		
		Если Лев(Область.Имя, 7) = "П000002" Или Лев(Область.Имя, 7) = "П000001" Тогда //Раздел 1
			ИмяСправочника = "ОКПД_1000013346";
		ИначеЕсли Лев(Область.Имя, 7) = "П000004" Или Лев(Область.Имя, 7) = "П000005" Тогда //Раздел 2
			ИмяСправочника = "ОКПД_1000013941";
		КонецЕсли;
		
		ОбластьКод  = ПолеТабличногоДокументаФормаОтчета.Области.Найти(СтрЗаменить(Область.Имя, Сред(Область.Имя, 1, 11) + "01_", Сред(Область.Имя, 1, 11) + "02_"));
		ОбластьНаим = ПолеТабличногоДокументаФормаОтчета.Области.Найти(СтрЗаменить(Область.Имя, Сред(Область.Имя, 1, 11) + "02_", Сред(Область.Имя, 1, 11) + "01_"));
		
		НомСтр = Сред(Область.Имя, СтрНайти(Область.Имя, "_") + 1);
		
		МассивОчистки = Новый Массив;
		МассивОчистки.Добавить(ПолеТабличногоДокументаФормаОтчета.Области[Сред(Область.Имя, 1, 11) + "03_" + НомСтр]);
		МассивОчистки.Добавить(ПолеТабличногоДокументаФормаОтчета.Области[Сред(Область.Имя, 1, 11) + "04_" + НомСтр]);
		
		ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, ИмяСправочника);
		ВвестиПоказатель(Элемент, ОбластьКод, ОбластьНаим, ИмяСправочника, , ПараметрВводаПоля.ТекстПриВыборе, ПараметрВводаПоля.ТаблицаЗначений, ,СтандартнаяОбработка, МассивОчистки);
		
		Возврат;
	ИначеЕсли Сред(Область.Имя, 12, 2) = "03" Тогда
		
		Если Лев(Область.Имя, 7) = "П000002" Или Лев(Область.Имя, 7) = "П000001" Тогда //Раздел 1
			ИмяСправочника = "ОКПД_ЕИ_1000013346";
		ИначеЕсли Лев(Область.Имя, 7) = "П000004" Или Лев(Область.Имя, 7) = "П000005" Тогда //Раздел 2
			ИмяСправочника = "ОКПД_ЕИ_1000013941";
		КонецЕсли;
		
		ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, ИмяСправочника);
		
		ОбластьКод	 = ПолеТабличногоДокументаФормаОтчета.Области.Найти(СтрЗаменить(Область.Имя, Сред(Область.Имя, 1, 11) + "03_", Сред(Область.Имя, 1, 11) + "04_"));
		ОбластьНаим  = Область;
		
		НомСтр		 = Сред(Область.Имя, СтрНайти(Область.Имя, "_") + 1);
		КодОКПД		 = ПолеТабличногоДокументаФормаОтчета.Области[Сред(Область.Имя, 1, 11) + "02_" + НомСтр].Значение;
		МассивВыбора = ПараметрВводаПоля.ТаблицаЗначений.НайтиСтроки(Новый Структура("Ключ", КодОКПД));
		
		ТЗВыбора.Очистить();
		Для Каждого ЭлемМассива Из МассивВыбора Цикл
			НовСтрТЗВыбора = ТЗВыбора.Добавить();
			НовСтрТЗВыбора.Код = ЭлемМассива.Код;
			НовСтрТЗВыбора.Название = ЭлемМассива.Название;
