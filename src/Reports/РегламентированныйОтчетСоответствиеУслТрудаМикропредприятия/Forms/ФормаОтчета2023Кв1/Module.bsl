	РеквПровЛиста = Новый Массив;
	
	Для Ном = 1 По 15 Цикл
		
		Если Ном <= КолВетокР1 Тогда
			
			ВеткаР1 = ДерР1.Строки[Ном - 1];
			
			Дан = ВеткаР1.Данные;
			
			РабМесто = Новый Массив;
			
			НаимРабМеста = ?(ЗначениеЗаполнено(Дан["П000020000200"]),
			СокрЛП(Дан["П000020000200"]), "<не указано наименование рабочего места>");
			
			РабМесто.Добавить(НаимРабМеста);
			
			НомерРабМеста = ?(ЗначениеЗаполнено(Дан["П000020000100"]),
			СокрЛП(Дан["П000020000100"]), "<не указан номер рабочего места>");
			
			РабМесто.Добавить("рабочее место № " + НомерРабМеста);
			
			ДерМнЧ = ВеткаР1.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппы8М1];
			КолРаб = ДерМнЧ.Строки.Количество();
			
			Если КолРаб = 1 Тогда
				ЗанятоРаботников = "занят 1 работник";
			ИначеЕсли КолРаб >= 2 И КолРаб <= 4 Тогда
				ЗанятоРаботников = "занято " + Формат(ДерМнЧ.Строки.Количество(), "ЧГ=") + " работника";
			Иначе
				ЗанятоРаботников = "занято " + Формат(ДерМнЧ.Строки.Количество(), "ЧГ=") + " работников";
			КонецЕсли;
			
			РабМесто.Добавить(ЗанятоРаботников);
			
			ТабличныйДокумент.Область("РабочееМесто" + Формат(Ном, "ЧГ=")).Значение = СтрСоединить(РабМесто, "; ");
			
			НомерПровЛиста  = ?(ЗначениеЗаполнено(Дан["НомерПровЛиста"]), СокрЛП(Дан["НомерПровЛиста"]), "<не указан номер>");
			ДатаСоставления = ?(ЗначениеЗаполнено(Дан["ДатаСоставления"]), Формат(Дан["ДатаСоставления"], "ДФ=дд.ММ.гггг"),
			"<не указана дата составления>");
			
			РеквПровЛиста.Добавить("Проверочного листа № " + НомерПровЛиста + " от " + ДатаСоставления);
			
		Иначе
			
			ТабличныйДокумент.Область("РабочееМесто" + Формат(Ном, "ЧГ=")).Значение = "";
			
		КонецЕсли;
		
	КонецЦикла;
	
	ТабличныйДокумент.Область("РеквизитыПроверочногоЛиста").Значение = СтрСоединить(РеквПровЛиста, "; ");
	
	Модифицированность = Истина;
	
