#Область ОбработчикиСобытийЭлементовШапкиФормы

&НаКлиенте
Процедура ТабличныйДокументВыбор(Элемент, Область, СтандартнаяОбработка)
	
	// ПроцессыОбработкиДокументов
	//
	Если Элементы.ТабличныйДокумент.Защита Тогда
		Возврат;
	КонецЕсли;
	//
	// ПроцессыОбработкиДокументов
	
	Если СтрНачинаетсяС(Область.Имя, "ДобавитьСтроку") И Область.Текст <> "" Тогда
		ВставитьДополнительнуюСтроку();
	ИначеЕсли СтрНачинаетсяС(Область.Имя, "УдалитьСтроку") И Область.Текст <> "" Тогда
		УдалитьДополнительнуюСтроку();
	ИначеЕсли СтрНачинаетсяС(Область.Имя, "ДобавитьСтраницу") И Область.Текст <> "" Тогда
		ДобавитьСтраницуМногоуровнегоРаздела();
	ИначеЕсли СтрНачинаетсяС(Область.Имя, "УдалитьСтраницу") И Область.Текст <> "" Тогда
		УдалитьСтраницуМногоуровнегоРаздела();
	КонецЕсли;
	
	Если Область.Имя = "ПрОрг1" Тогда
		ПрОрг1 = ТабличныйДокумент.Области.ПрОрг1.Значение;
		Если НЕ ЗначениеЗаполнено(ПрОрг1) Тогда
			ТабличныйДокумент.Области.ПрОрг1.Значение = "Х";
			ТабличныйДокумент.Области.ПрОрг2.Значение = "";
			Модифицированность = Истина;
		КонецЕсли;
		
		Возврат;
		
	КонецЕсли;
	
	Если Область.Имя = "ПрОрг2" Тогда
		ПрОрг2 = ТабличныйДокумент.Области.ПрОрг2.Значение;
		Если НЕ ЗначениеЗаполнено(ПрОрг2) Тогда
			ТабличныйДокумент.Области.ПрОрг2.Значение = "Х";
			ТабличныйДокумент.Области.ПрОрг1.Значение = "";
			Модифицированность = Истина;
		КонецЕсли;
		
		Возврат;
		
	КонецЕсли;
	
	Если Область.Имя = "ПрПодп1" Тогда
		ПрПодп1 = ТабличныйДокумент.Области.ПрПодп1.Значение;
		Если НЕ ЗначениеЗаполнено(ПрПодп1) Тогда
			ТабличныйДокумент.Области.ПрПодп1.Значение = "Х";
			ТабличныйДокумент.Области.ПрПодп2.Значение = "";
			ТабличныйДокумент.Области.ДокУпПред.Значение = "";
			Модифицированность = Истина;
		КонецЕсли;
		
		УстановитьДоступностьОбластей(ЭтотОбъект, "Титульный");
		Возврат;
		
	КонецЕсли;
	
	Если Область.Имя = "ПрПодп2" Тогда
		ПрПодп2 = ТабличныйДокумент.Области.ПрПодп2.Значение;
		Если НЕ ЗначениеЗаполнено(ПрПодп2) Тогда
			ТабличныйДокумент.Области.ПрПодп2.Значение = "Х";
			ТабличныйДокумент.Области.ПрПодп1.Значение = "";
			Модифицированность = Истина;
		КонецЕсли;
		
		УстановитьДоступностьОбластей(ЭтотОбъект, "Титульный");
		Возврат;
		
	КонецЕсли;
	
	Если РегламентированнаяОтчетностьКлиент.ВыбраннаяОбластьРегламентированногоОтчетаНеВерна(
			ЭтотОбъект, Область, СтандартнаяОбработка) Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, Область.Имя);
	Если ПараметрВводаПоля <> Неопределено И ПараметрВводаПоля.ТаблицаЗначений.Количество() > 0 Тогда
		КодПоказателя = ПараметрВводаПоля.Показатель;
		КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
		
		ТребРезультат = 0;
		Если КодПоказателя = "Период" Тогда
			НомерМесяца = Месяц(СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета);
			Если СтруктураРеквизитовФормы.мПериодичность = СтруктураРеквизитовФормы.ПеречислениеПериодичностьКвартал Тогда
				ТребРезультат = НомерМесяца / 3;
			Иначе
				ТребРезультат = НомерМесяца + 4;
			КонецЕсли;
		КонецЕсли;
		
		Если ТребРезультат <> 0 Тогда
			РазмерТЗ = ТЗВыбора.Количество();
			Для Сч = 1 По РазмерТЗ Цикл
				ЭлементТЗ = ТЗВыбора[РазмерТЗ - Сч];
				Рез = ?(ЭлементТЗ.БазоваяДоходность = "", 0, Число(ЭлементТЗ.БазоваяДоходность));
				Если Рез <> 0 И Рез <> ТребРезультат Тогда
					ТЗВыбора.Удалить(ЭлементТЗ);
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
		
		ВвестиПоказатель(Элемент, Область, КодПоказателя, Ложь,
			ПараметрВводаПоля.ТекстПриВыборе, ТЗВыбора, СтандартнаяОбработка);
		
	КонецЕсли;
	
КонецПроцедуры

