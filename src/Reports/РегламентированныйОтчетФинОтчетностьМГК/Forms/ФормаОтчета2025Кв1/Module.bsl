&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяРаздела = "", ОбластьИмя = "")
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Если ИмяРаздела = "КонсолидированныйОтчет" Тогда
		Расчет_КонсолидированныйОтчет(Форма, ОбластьИмя = "");
		
	ИначеЕсли ИмяРаздела = "ОтчетностьУчастника" Тогда
		Расчет_ОтчетностьУчастника(Форма, ОбластьИмя = "");
		
	ИначеЕсли ИмяРаздела = "" Тогда
		Расчет(Форма, "КонсолидированныйОтчет");
		Расчет(Форма, "ОтчетностьУчастника");
		
	КонецЕсли;
	
