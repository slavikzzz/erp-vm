&НаКлиентеНаСервереБезКонтекста
Процедура ОбновитьТекстЗаголовка(Форма)
	
	Отчет = Форма.Отчет;
	
	ТекстЗаголовка = НСтр("ru = 'Остатки товаров по срокам хранения';
							|en = 'Stock balance by retention periods'");
	
	Если ЗначениеЗаполнено(Отчет.Организация) И Форма.ИспользуетсяНесколькоОрганизаций Тогда
		ЗаголовокОтчета = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстЗаголовка + "%1 %2",
			СтрШаблон(НСтр("ru = ' на %1';
							|en = ' by %1'"), Формат(Отчет.Период, "ДФ=dd.MM.yyyy; ДП=...")),
			БухгалтерскиеОтчетыВызовСервера.ПолучитьТекстОрганизация(
				Отчет.Организация, Отчет.ВключатьОбособленныеПодразделения, Отчет.Период));
	Иначе
		ЗаголовокОтчета = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстЗаголовка + "%1",
			СтрШаблон(НСтр("ru = ' на %1';
							|en = ' by %1'"), Формат(Отчет.Период, "ДФ=dd.MM.yyyy; ДП=...")));
	КонецЕсли;
	
	Форма.Заголовок = ЗаголовокОтчета;
	
