Процедура ПолеТабличногоДокументаФормаОтчетаВыбор(Элемент, Область, СтандартнаяОбработка)
	
	// ПроцессыОбработкиДокументов
	//
	Если Элементы.ПолеТабличногоДокументаФормаОтчета.Защита Тогда
		
		Возврат;
		
	КонецЕсли;
	//
	// ПроцессыОбработкиДокументов
	
	РегламентированнаяОтчетностьКлиент.ОбработкаВыбораПоляОбособленныхПодразделений(
		ЭтотОбъект, Область, СтандартнаяОбработка);
	
	Если Область.Имя = "ОргАдрес" Тогда
		РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчетеJSON(
			ЭтотОбъект, Область, СтандартнаяОбработка);
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтроку") > 0 Тогда
		СтандартнаяОбработка = Ложь;
		ДобавитьСтроку("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтроку") > 0 Тогда
		УдалитьСтроку("");
	Иначе
		ТЗВыбора.Очистить();
		ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, Лев(Область.Имя, 13));
		КолонкаПоиска = "Код";
		Если Лев(Область.Имя, 13) = "П000001000102" Тогда 
			КодОКПД =
				ПолеТабличногоДокументаФормаОтчета.Область(СтрЗаменить(Область.Имя, "П000001000102", "П000001000103")).Значение;
			Для Каждого Стр Из РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, "s_vidtov").ТаблицаЗначений Цикл
				Если Не ЗначениеЗаполнено(КодОКПД) Или КодОКПД = Стр.Название Тогда 
					НСтр = ТЗВыбора.Добавить();
					НСтр.Код = Стр.Код;
					НСтр.Название = Стр.РезультатПроверки;
				КонецЕсли;
			КонецЦикла;
			НовСтрТЗВыбора = ТЗВыбора.Вставить(0);
			НовСтрТЗВыбора.Код = "";
			НовСтрТЗВыбора.Название = "Пустое значение";
			КодПоказателя = Область.Значение;
		ИначеЕсли Лев(Область.Имя, 13) = "П000001000104" Тогда
			КодОКПД =
				ПолеТабличногоДокументаФормаОтчета.Область(СтрЗаменить(Область.Имя, "П000001000104", "П000001000103")).Значение;
			Для Каждого Стр Из РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, "s_okei").ТаблицаЗначений Цикл
				Если Не ЗначениеЗаполнено(КодОКПД) Или КодОКПД = Стр.Название Тогда
					НСтр = ТЗВыбора.Добавить();
					НСтр.Код = Стр.Код;
					НСтр.Название = Стр.РезультатПроверки;
				КонецЕсли;
			КонецЦикла;
			НовСтрТЗВыбора = ТЗВыбора.Вставить(0);
			НовСтрТЗВыбора.Код = "";
			НовСтрТЗВыбора.Название = "Пустое значение";
			КодПоказателя = Область.Значение;
		ИначеЕсли ПараметрВводаПоля <> Неопределено И ПараметрВводаПоля.ТаблицаЗначений <> Неопределено Тогда
			КодПоказателя = ПараметрВводаПоля.Показатель;
			КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
		КонецЕсли;
		
		Если ТЗВыбора.Количество() > 0 Тогда
			ВвестиПоказатель(Элемент, Область, КодПоказателя, Ложь,
				?(ПараметрВводаПоля <> Неопределено, ПараметрВводаПоля.ТекстПриВыборе, "Выбор кода"),
				ТЗВыбора, СтандартнаяОбработка, КолонкаПоиска);
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

