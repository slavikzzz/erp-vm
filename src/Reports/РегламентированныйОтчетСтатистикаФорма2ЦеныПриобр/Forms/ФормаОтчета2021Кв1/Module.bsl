				?(ЗначениеЗаполнено(ВыборКод), ВыборНазвание, "");
		ИначеЕсли Сред(Область.Имя, 12, 2) = "04" Тогда
			ВыборКод = Строка(РезультатВыбора["Код"]);
			КодПоказателя = СтруктураРеквизитовФормы.мИдГруппы1 + "04";
			Суффикс = СтрЗаменить(Область.Имя, КодПоказателя, "");
