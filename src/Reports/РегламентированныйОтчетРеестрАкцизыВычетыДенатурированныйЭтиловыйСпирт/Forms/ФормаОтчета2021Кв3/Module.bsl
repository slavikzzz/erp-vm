&НаКлиентеНаСервереБезКонтекста
Процедура УстановитьДоступностьОбластей(Форма, ИмяТекРаздела)
	
	ТДО = Форма.ТабличныйДокумент.Области;
	
	Если ИмяТекРаздела = "Титульный" Тогда
		
		ОблНаимОрг       = ТДО.НаимОрг;
		ОблКодФормыРеорг = ТДО.КодФормыРеорганизации;
		ОблКодИННРеорг   = ТДО.ИННРеорганизованнойОрганизации;
		ОблКодКППРеорг   = ТДО.КППРеорганизованнойОрганизации;
		
		Если НЕ Форма.СтруктураРеквизитовФормы.ИП Тогда
			
			РазрешитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодФормыРеорг);
			
			ЗначКодФормыРеорг = СокрЛП(ОблКодФормыРеорг.Значение);
			
			Если ЗначениеЗаполнено(ЗначКодФормыРеорг)
				И ЗначКодФормыРеорг <> "0" Тогда
				
				РазрешитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблНаимОрг);
				
				РазрешитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодИННРеорг);
				РазрешитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодКППРеорг);
				
			Иначе
				
				ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблНаимОрг);
				ТДО.НаимОрг.Значение = Форма.СтруктураРеквизитовФормы.НачальноеЗначениеНаимОрганизации;
				
				ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодИННРеорг);
				ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодКППРеорг);
				
			КонецЕсли;
			
		Иначе
			
			ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодФормыРеорг);
			ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодИННРеорг);
			ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ОблКодКППРеорг);
			
		КонецЕсли;
		
	Иначе
		
		ОбрабОбласти = Новый Массив;
		
		Если ИмяТекРаздела = "Таблица1" Тогда
			
			ОбрабОбласти.Добавить(ТДО["ИтогоСуммаГрафа5"]);
			ОбрабОбласти.Добавить(ТДО["ИтогоСуммаГрафа6"]);
			ОбрабОбласти.Добавить(ТДО["ИтогоСуммаГрафа9"]);
			ОбрабОбласти.Добавить(ТДО["ИтогоСуммаГрафа10"]);
			
			// Особая обработка: в Таблице 1 значения граф 1 и 2 доступны для редактирования
			// только на первой странице, а отображаются на всех страницах.
			//
			Если Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[0] > 1 Тогда
				
				ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ТДО["П0000001"], Ложь);
				ЗапретитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ТДО["П0000002"], Ложь);
				
			Иначе
				
				РазрешитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ТДО["П0000001"]);
				РазрешитьВводДанныхВОбласть(Форма.мСтруктураЦветовРаскраски, ТДО["П0000002"]);
				
			КонецЕсли;
			
		ИначеЕсли ИмяТекРаздела = "Таблица2" Тогда
			
			ОбрабОбласти.Добавить(ТДО["ИтогоСуммаГрафа17"]);
			
		КонецЕсли;
		
		Для каждого ОбрабОбласть Из ОбрабОбласти Цикл
			Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
				ОбрабОбласть.Защита   = Ложь;
				ОбрабОбласть.ЦветФона = Форма.мСтруктураЦветовРаскраски["_0"];
			Иначе
				ОбрабОбласть.Защита   = Истина;
				ОбрабОбласть.ЦветФона = Форма.мСтруктураЦветовРаскраски["_4"];
			КонецЕсли;
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

