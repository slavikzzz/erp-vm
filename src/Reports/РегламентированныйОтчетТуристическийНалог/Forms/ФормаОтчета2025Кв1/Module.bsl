		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяРаздела]);
		
		Для каждого Ветка Из ДеревоДанных.Строки Цикл
			
			Ветка.Данные.Вставить("П000020010003",
				Ветка.Данные["П000020007003"] - Ветка.Данные["П000020008003"]
				- Ветка.Данные["П000020008603"] - Ветка.Данные["П000020009003"]);
			
			Ветка.Данные.Вставить("П000020012003",
				Окр(Ветка.Данные["П000020010003"] * Ветка.Данные["П000020011003"] / 100));
			
			Ветка.Данные.Вставить("П000020015003",
				Ветка.Данные["П000020012003"] + Ветка.Данные["П000020013003"]
				- Ветка.Данные["П000020014003"]);
			
		КонецЦикла;
		
	КонецЕсли;
	
	Если ДеревоДанных <> Неопределено Тогда
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]
		= ПоместитьВоВременноеХранилище(ДеревоДанных, Форма.УникальныйИдентификатор);
	КонецЕсли;
	
КонецПроцедуры

