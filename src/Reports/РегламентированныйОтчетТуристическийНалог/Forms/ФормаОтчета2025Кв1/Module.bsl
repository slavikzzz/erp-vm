&НаКлиентеНаСервереБезКонтекста
Процедура УстановитьФорматВыводаНаСервере(Форма, ИмяРаздела)
	
	ТДО = Форма.ТабличныйДокумент.Области;
	
	Если ИмяРаздела = "Раздел1" Тогда
		Для Каждого Обл Из ТДО Цикл
			Если СтрНачинаетсяС(Обл.Имя, "П00001М202000") Тогда
				Постфикс = Сред(Обл.Имя, 14);
				Обл010 = ТДО.Найти("П00001М201000" + Постфикс);
				Обл.Формат = "ЧН=" + ?(Обл010 <> Неопределено И ЗначениеЗаполнено(Обл010.Значение), "0", "-");
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
