		Если ПараметрыОтчета["Показатель" + ИмяПоказателя] Тогда
			
			Если ИмяПоказателя = "БУ" Тогда
				
				ИмяПоказателяДляПодстановки = "Сумма";
				
			ИначеЕсли ИмяПоказателя = "ВалютнаяСумма" ИЛИ ИмяПоказателя = "Количество" ИЛИ ИмяПоказателя = "Контроль"
				ИЛИ ИмяПоказателя = "УУ" ИЛИ ИмяПоказателя = "ФО" ИЛИ ИмяПоказателя = "РазницаБУиУУ" Тогда
				
