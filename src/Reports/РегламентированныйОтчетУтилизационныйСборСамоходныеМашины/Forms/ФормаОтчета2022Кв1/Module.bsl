	Если ИмяПоказателя = "НалоговыйОрган" Тогда
		ЗначПок = СтрЗаменить(ЗначПоказателя, " ", "");
		Если СтрДлина(ЗначПок) = 4 ИЛИ СтрДлина(ЗначПок) = 0 Тогда
