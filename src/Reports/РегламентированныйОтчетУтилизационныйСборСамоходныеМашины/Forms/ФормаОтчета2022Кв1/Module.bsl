	КонецЕсли;
	
	ДополнительныеПараметры.Область.Значение = ДополнительныеПараметры.НовоеЗначение;
	
	УстановитьДоступностьОбластей(ЭтаФорма, "Титульный");
	
	СохрИмяТекРазделаОтчета = Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим;
	
	Если ДополнительныеПараметры.НовоеЗначение = "112" Тогда
		ИзменитьНастройкиРазделаВДеревеРазделов("Сведения", 1);
		ТДО = ТабличныйДокумент.Области;
		МасИменОбластей = СтрРазделить(
		"ИНН,КПП,НалоговыйОрган,НаимОрг,ТелОрганизации,ОргПодписант,ОргУп,ДокУпПред", ",", Ложь);
		Для каждого ИмяОбласти Из МасИменОбластей Цикл
			ТДО[ИмяОбласти].Значение = "";
		КонецЦикла;
		ТДО["ПрПодп"].Значение = "1";
		ОчиститьОКТМО();
	Иначе
		ИзменитьНастройкиВДеревеРазделовИОчиститьМногоуровневыйРаздел("Сведения", 0);
		ЗаполнитьСведенияОбОрганизацииНаСервере();
	КонецЕсли;
	
	НайденнаяСтрока = РегламентированнаяОтчетностьКлиентСервер.НайтиЭлементВДанныхФормыДерево(
	РазделыОтчета.ПолучитьЭлементы(), "КолонкаРазделыОтчетаСокрНаим", СохрИмяТекРазделаОтчета);
	Если НЕ НайденнаяСтрока = Неопределено Тогда
		Элементы.РазделыОтчета.ТекущаяСтрока = НайденнаяСтрока.ПолучитьИдентификатор();
	КонецЕсли;
	
	Модифицированность = Истина;
	
КонецПроцедуры

&НаСервере
Процедура ИзменитьНастройкиВДеревеРазделовИОчиститьМногоуровневыйРаздел(ИмяРаздела, ВариантНастроек, ФормироватьДеревоРазделов = Истина)
	
	ИзменитьНастройкиРазделаВДеревеРазделов(ИмяРаздела, ВариантНастроек);
	
	ИнициализироватьМногоуровневыйРаздел(ИмяРаздела);
	
