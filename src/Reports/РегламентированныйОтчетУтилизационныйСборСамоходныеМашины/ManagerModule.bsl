Функция ДанныеРеглОтчета(ЭкземплярРеглОтчета) Экспорт
	
	ТаблицаДанныхРеглОтчета = ИнтерфейсыВзаимодействияБРО.НовыйТаблицаДанныхРеглОтчета();
	
	ДанныеРеглОтчета = ЭкземплярРеглОтчета.ДанныеОтчета.Получить();
	Если ТипЗнч(ДанныеРеглОтчета) <> Тип("Структура") Тогда
		Возврат ТаблицаДанныхРеглОтчета;
	КонецЕсли;
	
	Если ЭкземплярРеглОтчета.ВыбраннаяФорма = "ФормаОтчета2022Кв1" Тогда
		
		Если ДанныеРеглОтчета.Свойство("ОкружениеСохранения") Тогда
			
			Возврат ТаблицаДанныхРеглОтчета; // отчет сохранен в 2.0
			
		ИначеЕсли ДанныеРеглОтчета.Свойство("ДанныеМногоуровневыхРазделов") Тогда
			
			ДанныеР1 = ДанныеРеглОтчета.ДанныеМногоуровневыхРазделов["Раздел1"].Строки[0].Данные;
			
			УтилизационныйСбор = ТаблицаДанныхРеглОтчета.Добавить();
			
			УтилизационныйСбор.Период = ЭкземплярРеглОтчета.ДатаОкончания;
			УтилизационныйСбор.КБК    = ДанныеР1["П000010001003"];
			УтилизационныйСбор.ОКАТО  = ДанныеР1["П000010002003"];
			УтилизационныйСбор.Сумма  = ДанныеР1["П000010003003"];
			
		КонецЕсли;
		
	ИначеЕсли ЭкземплярРеглОтчета.ВыбраннаяФорма = "ФормаОтчета2016Кв4"
		ИЛИ ЭкземплярРеглОтчета.ВыбраннаяФорма = "ФормаОтчета2016Кв1" Тогда
		
		// Данные берутся с первой страницы многостраничного раздела 1.
		Страница1Раздела1 = ДанныеРеглОтчета.ДанныеМногостраничныхРазделов.Раздел1[0].Данные;
		
		УтилизационныйСбор = ТаблицаДанныхРеглОтчета.Добавить();
		
		УтилизационныйСбор.Период = ЭкземплярРеглОтчета.ДатаОкончания;
		УтилизационныйСбор.КБК    = Страница1Раздела1.П000010001001;
		УтилизационныйСбор.ОКАТО  = Страница1Раздела1.П000010002001;
		УтилизационныйСбор.Сумма  = Страница1Раздела1.П000010003001;
		
	КонецЕсли;
	
	Возврат ТаблицаДанныхРеглОтчета;
	
КонецФункции

Функция ДеревоФормИФорматов() Экспорт
	
	ФормыИФорматы = Новый ДеревоЗначений;
	ФормыИФорматы.Колонки.Добавить("Код");
	ФормыИФорматы.Колонки.Добавить("ДатаПриказа");
	ФормыИФорматы.Колонки.Добавить("НомерПриказа");
	ФормыИФорматы.Колонки.Добавить("ДатаНачалаДействия");
	ФормыИФорматы.Колонки.Добавить("ДатаОкончанияДействия");
	ФормыИФорматы.Колонки.Добавить("ИмяОбъекта");
	ФормыИФорматы.Колонки.Добавить("Описание");
	
	ФормаОтчета2016Кв1 = ОпределитьФормуВДеревеФормИФорматов(ФормыИФорматы,
	"1151101", '2016-02-16', "СД-4-3/2437@", "ФормаОтчета2016Кв1");
	ОпределитьФорматВДеревеФормИФорматов(ФормаОтчета2016Кв1, "5.01");
	
	ФормаОтчета2016Кв4 = ОпределитьФормуВДеревеФормИФорматов(ФормыИФорматы,
	"1151101", '2016-10-24', "ММВ-7-3/578@", "ФормаОтчета2016Кв4");
	ОпределитьФорматВДеревеФормИФорматов(ФормаОтчета2016Кв4, "5.01");
	
	ФормаОтчета2022Кв1 = ОпределитьФормуВДеревеФормИФорматов(ФормыИФорматы,
	"1151101", '2021-12-01', "ЕД-7-3/1045@", "ФормаОтчета2022Кв1");
	ОпределитьФорматВДеревеФормИФорматов(ФормаОтчета2022Кв1, "5.02");
	
	Возврат ФормыИФорматы;
	
КонецФункции

