	Если Найти(Область.Имя, ":") > 0 Тогда
		СтандартнаяОбработка = Ложь;
		Возврат;
	КонецЕсли;
	
	РегламентированнаяОтчетностьКлиент.ОбработкаВыбораПоляОбособленныхПодразделений(
		ЭтотОбъект, Область, СтандартнаяОбработка);
	
	Если Область.Имя = "ОргАдрес" Тогда
		РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчетеJSON(
			ЭтотОбъект, Область, СтандартнаяОбработка);
	ИначеЕсли СтрНайти(Область.Имя, "П01340") = 1 Или СтрНайти(Область.Имя, "П01350") = 1 Тогда
		Модифицированность = Истина;
		СтандартнаяОбработка = Ложь;
		
		Если Область.Значение = 0 Тогда
			Область.Значение = Число(Прав(Область.Имя, 1)) - 2;
		Иначе
			Область.Значение = 0;
		КонецЕсли;
	ИначеЕсли СтрНайти(Область.Имя, "П03") = 1 Тогда
		ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(
			ЭтотОбъект, "СправочникПричиныОтсутствияИнноваций");
	ИначеЕсли Область.Имя = "П12903" Или Область.Имя = "П13003" Или Область.Имя = "П13103"
		  Или Область.Имя = "П13203" Или Область.Имя = "П13303" Тогда
		ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(
			ЭтотОбъект, "СправочникДаНет");
	КонецЕсли;
	
	Если ПараметрВводаПоля <> Неопределено И ПараметрВводаПоля.ТаблицаЗначений <> Неопределено Тогда
		КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
		ВвестиПоказатель(Элемент, Область, , Ложь,
			ПараметрВводаПоля.ТекстПриВыборе, ТЗВыбора, СтандартнаяОбработка);
	КонецЕсли;
	
