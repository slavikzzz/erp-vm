	Сведения.Добавить("", "АдрПрописки");
	Сведения.Добавить("", "ИННФЛ");
	Сведения.Добавить("", "ИННЮЛ");
	Сведения.Добавить("", "ОГРН");
	Сведения.Добавить("", "ОКВЭД");
