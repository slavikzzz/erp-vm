		Возврат;
	КонецЕсли;
	
	РезультатКод = РезультатВыбора["Код"];
	РезультатНазвание = ?(РезультатВыбора["Название"] = "Пустое значение" , "", РезультатВыбора["Название"]);
	
	Если Область.Имя = "П001001000101" Или Лев(Область.Имя, 13) = "П001001000201"
	 Или Область.Имя = "П001001000103" Или Лев(Область.Имя, 13) = "П001001000203" Тогда
		
		МнгСтр = ?(СтрНайти(Область.Имя, "_") > 0, "_", "");
		
		Если Область.Имя = "П001001000101" Или Лев(Область.Имя, 13) = "П001001000201" Тогда
			Если Область.Значение <> РезультатНазвание Тогда
				ТабличныйДокумент.Области[Лев(Область.Имя, 11) + "04" + Сред(Область.Имя, 14)].Значение = "";
