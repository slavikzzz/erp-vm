			ПодстрокаЗамены = Лев(Область.Имя, 11) + "03" + МнгСтр;
			
			ОбластьКод = СтрЗаменить(Область.Имя, ПодстрокаПоиска, ПодстрокаЗамены);
			ТабличныйДокумент.Области[ОбластьКод].Значение = РезультатКод;
		Иначе
			Если Область.Значение <> РезультатКод Тогда
				ТабличныйДокумент.Области[Лев(Область.Имя, 11) + "04" + Сред(Область.Имя, 14)].Значение = "";
			КонецЕсли;
			Область.Значение = РезультатКод;
			
			ПодстрокаПоиска = Лев(Область.Имя, 13) + МнгСтр;
			ПодстрокаЗамены = Лев(Область.Имя, 11) + "01" + МнгСтр;
			
			ОбластьНазвание = СтрЗаменить(Область.Имя, ПодстрокаПоиска, ПодстрокаЗамены);
			ТабличныйДокумент.Области[ОбластьНазвание].Значение = РезультатНазвание;
		КонецЕсли;
