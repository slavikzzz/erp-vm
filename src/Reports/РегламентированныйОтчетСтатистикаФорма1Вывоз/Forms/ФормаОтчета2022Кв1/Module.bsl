&НаКлиенте
Процедура ТабличныйДокументВыбор(Элемент, Область, СтандартнаяОбработка)
	
	// ПроцессыОбработкиДокументов
	//
	
	Если Элементы.ТабличныйДокумент.Защита Тогда
		
		Возврат;
		
	КонецЕсли;
	//
	// ПроцессыОбработкиДокументов
	
	Если Найти(Область.Имя, ":") > 0 Тогда
		СтандартнаяОбработка = Ложь;
		Возврат;
	КонецЕсли;
	
	Если Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Титульный" Тогда
		
		РегламентированнаяОтчетностьКлиент.ОбработкаВыбораПоляОбособленныхПодразделений(
			ЭтотОбъект, Область, СтандартнаяОбработка, "ТабличныйДокумент");
		
		Если Область.Имя = "ОргАдрес" Тогда
			РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчетеJSON(
				ЭтотОбъект, Область, СтандартнаяОбработка);
		КонецЕсли;
		
	ИначеЕсли Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Раздел1" Тогда
		
		ТЗВыбора.Очистить();
		
		Если Область.Имя = "П001001000101" Или Лев(Область.Имя, 13) = "П001001000201"
		 Или Область.Имя = "П001001000103" Или Лев(Область.Имя, 13) = "П001001000203" Тогда
		
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(
				ЭтотОбъект, "СправочникПереченьПродукции");
			КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
			ТекстПриВыборе = ПараметрВводаПоля.ТекстПриВыборе;
			
		ИначеЕсли Область.Имя = "П001001000104" Или Лев(Область.Имя, 13) = "П001001000204" Тогда
			
			ИмяКодОКПД2 = Лев(Область.Имя, 11) + "03" + Сред(Область.Имя, 14);
			
			КодОКПД2 = ТабличныйДокумент.Области[ИмяКодОКПД2].Значение;
			
			ТЗ = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтотОбъект, "СправочникЕИ").ТаблицаЗначений;
			Для Каждого Стр Из ТЗ Цикл
				Если КодОКПД2 = Стр.Название Тогда
					НСтр = ТЗВыбора.Добавить();
					НСтр.Код = Стр.Код;
					НСтр.Название = Стр.РезультатПроверки;
				КонецЕсли;
			КонецЦикла;
			НовСтрТЗВыбора = ТЗВыбора.Вставить(0);
			НовСтрТЗВыбора.Код = "";
			НовСтрТЗВыбора.Название = "Пустое значение";
			
			ТекстПриВыборе = "Выбор единицы измерения";
			
		ИначеЕсли Область.Имя = "П001001000110" Или Лев(Область.Имя, 13) = "П001001000205" Тогда
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(
				ЭтотОбъект, "СправочникИсточникПолученияТовара");
			
			КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
			ТекстПриВыборе = ПараметрВводаПоля.ТекстПриВыборе;
			
		ИначеЕсли Лев(Область.Имя, 13) = "П001001000206" Тогда
		
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(
				ЭтотОбъект, "СправочникПереченьТерриторий");
			
			КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
			ТекстПриВыборе = ПараметрВводаПоля.ТекстПриВыборе;
			
		ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтроку") > 0 Тогда
			СтандартнаяОбработка = Ложь;
			ДобавитьСтроку("");
		ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтроку") > 0 Тогда
			СтандартнаяОбработка = Ложь;
			УдалитьСтроку(Область.Имя);
		ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтраницу") > 0 Тогда
			ДобавитьСтраницу("");
		ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтраницу") > 0 Тогда
			Если Область.Гиперссылка Тогда
				УдалитьСтраницу("");
			КонецЕсли;
		КонецЕсли;
		
		Если ТЗВыбора.Количество() > 0 Тогда
			ВвестиПоказатель(Элемент, Область, Область.Значение, Ложь, ТекстПриВыборе, ТЗВыбора, СтандартнаяОбработка);
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

