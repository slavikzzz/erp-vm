// Функция РАСЧЕТ ()
// Выполняет расчет вычисляемых показателей на заданной странице отчета
// (ячеек, выделенных зеленым цветом). 
// В случае неуказания листа, ничего происходить не будет
// Параметры:
//  ИмяСтраницыПанели - строка, имя страницы основной панели формы.
//
&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяТекущейСтраницыПанели = "", ОбластьИмя = "", Перерасчет = Ложь)
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Области = Форма.ТабличныйДокумент.Области;
	
	Если Не Перерасчет Тогда
		Если ИмяТекущейСтраницыПанели = "Раздел1" Тогда
			ОбщЗначение1 = 0;
			ОбщЗначение2 = 0;
			Инд = 0;
			Пока Истина Цикл
				Инд  = Инд + 1;
				Обл1 = Форма.ТабличныйДокумент.Области.Найти("П001001000207" + "_" + Строка(Инд));
				Обл2 = Форма.ТабличныйДокумент.Области.Найти("П001001000208" + "_" + Строка(Инд));
				Если Обл1 = Неопределено Тогда
					Прервать;
				Иначе
					ОбщЗначение1 = ОбщЗначение1 + Обл1.Значение;
					ОбщЗначение2 = ОбщЗначение2 + Обл2.Значение;
				КонецЕсли;
			КонецЦикла;
			Области["П001001000107"].Значение = ОбщЗначение1;
			Области["П001001000108"].Значение = ОбщЗначение2;
		КонецЕсли;
	КонецЕсли;
	
	Если Перерасчет Тогда
		Для Каждого Лист Из Форма.ТаблицаСтраницыРаздела1 Цикл
			ЛистПоказатели = Лист.Данные[0].Значение;
			
			ОбщЗначениеКолонка1 = 0;
			ОбщЗначениеКолонка2 = 0;
			Инд = 0;
			
			Пока Истина Цикл
				Инд  = Инд + 1;
				ПоказательЗначение1 = Неопределено;
				ПоказательЗначение2 = Неопределено;
				ЛистПоказатели.Свойство("П001001000207" + "_" + Строка(Инд), ПоказательЗначение1);
				ЛистПоказатели.Свойство("П001001000208" + "_" + Строка(Инд), ПоказательЗначение2);
				Если ПоказательЗначение1 = Неопределено Тогда
					Прервать;
				Иначе
					ОбщЗначениеКолонка1 = ОбщЗначениеКолонка1 + ПоказательЗначение1;
					ОбщЗначениеКолонка2 = ОбщЗначениеКолонка2 + ПоказательЗначение2;
				КонецЕсли;
			КонецЦикла;
			
			ЛистПоказатели["П001001000107"] = ОбщЗначениеКолонка1;
