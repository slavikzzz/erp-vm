// Для подсистемы "Варианты отчетов" при работе в модели сервиса.
// Возвращаемое значение:
//  Массив - Содержит массив структур со свойствами:
//     * ВариантОтчета - Структура - Вариант отчета.
//        Имя             - Строка - Имя варианта отчета.
//        Представление   - Строка - Представление варианта отчета.
//
Функция ВариантыНастроек() Экспорт
	
	Результат = Новый Массив;
	
	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "ОборотноСальдоваяВедомость");
	Вариант.Вставить("Представление", НСтр("ru = 'Оборотно-сальдовая ведомость по показателям бюджетов';
											|en = 'Trial balance for budget balance items'"));
	Результат.Добавить(Вариант);
	
	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "ОборотноСальдоваяВедомостьПоПоказателюБюджетов");
	Вариант.Вставить("Представление", НСтр("ru = 'Оборотно-сальдовая ведомость по показателю бюджетов';
											|en = 'Trial balance for the budget balance item'"));
	Результат.Добавить(Вариант);
	
	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "Расшифровка");
	Вариант.Вставить("Представление", НСтр("ru = 'Оборотно-сальдовая ведомость по показателям бюджетов';
											|en = 'Trial balance for budget balance items'"));
	Результат.Добавить(Вариант);
	
	Возврат Результат;
	
КонецФункции

