&НаКлиенте
Процедура ПредставлениеУведомленияПриИзмененииСодержимогоОбласти_Уведомление1НачалоУплаты(Область)
	Если ВРег(Область.Имя) = "ДАТАОТ" Тогда 
		Объект.ДатаПодписи = Область.Значение;
	КонецЕсли;
	
	Если Область.СодержитЗначение = Истина
		И ТипЗнч(Область.Значение) = Тип("Число")
		И СтрНачинаетсяС(ВРег(Область.Имя), "СУММА") Тогда 
		
		Области = ПредставлениеУведомления.Области;
		Области.СуммаИтогоМес1.Значение = Области.Сумма1Мес1.Значение + Области.Сумма2Мес1.Значение + Области.Сумма3Мес1.Значение;
		Области.СуммаИтогоМес2.Значение = Области.Сумма1Мес2.Значение + Области.Сумма2Мес2.Значение + Области.Сумма3Мес2.Значение;
		Области.СуммаИтогоМес3.Значение = Области.Сумма1Мес3.Значение + Области.Сумма2Мес3.Значение + Области.Сумма3Мес3.Значение;
		Модифицированность = Истина;
	КонецЕсли;
