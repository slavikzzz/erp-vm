	МассивТипов.Добавить(ПредопределенноеЗначение("Перечисление.ТипыПервичныхДокументов.КорректировкаРеализации"));
	ТипыСОбщимиОтборами.Добавить(МассивТипов);
	
	МассивТипов = Новый Массив;
	МассивТипов.Добавить(ПредопределенноеЗначение("Перечисление.ТипыПервичныхДокументов.ПриемНаХранение"));
	МассивТипов.Добавить(ПредопределенноеЗначение("Перечисление.ТипыПервичныхДокументов.ПриемНаХранение"));
	ТипыСОбщимиОтборами.Добавить(МассивТипов);
	
	МассивТипов = Новый Массив;
	МассивТипов.Добавить(ПредопределенноеЗначение("Перечисление.ТипыПервичныхДокументов.ОплатаПоставщику"));
	МассивТипов.Добавить(ПредопределенноеЗначение("Перечисление.ТипыПервичныхДокументов.ПриобретениеУПоставщика"));
