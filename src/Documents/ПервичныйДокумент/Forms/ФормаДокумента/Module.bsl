	СписокВыбора = Элементы.ПорядокРасчетов.СписокВыбора;
	СписокВыбора.Очистить();
	СписокВыбора.Добавить(Перечисления.ПорядокРасчетов.ПоНакладным, НСтр("ru = 'По расчетным документам';
																		|en = 'By AR/AP documents'"));
	СписокВыбора.Добавить(Перечисления.ПорядокРасчетов.ПоЗаказамНакладным, НСтр("ru = 'Аванс по заказам, долг по накладным';
																				|en = 'Invoice for debt, Order for prepayment'"));
	СписокВыбора.Добавить(Перечисления.ПорядокРасчетов.ПоДоговорамНакладным, НСтр("ru = 'Аванс по договорам, долг по накладным';
																					|en = 'Invoice for debt, Contract for prepayment'"));
	
	Если Объект.Партнер = Справочники.Партнеры.НашеПредприятие Тогда
		Если ПолучитьФункциональнуюОпцию("ИспользоватьДоговорыМеждуОрганизациями") Тогда
			СписокВыбора.Добавить(Перечисления.ПорядокРасчетов.ПоДоговорамКонтрагентов, НСтр("ru = 'По договорам';
																							|en = 'By contracts'"));
		КонецЕсли;
	Иначе
		СписокВыбора.Добавить(Перечисления.ПорядокРасчетов.ПоДоговорамКонтрагентов, НСтр("ru = 'По договорам';
																						|en = 'By contracts'"));
		ОписаниеПорядкаРасчетов = Новый Массив();
		ОписаниеПорядкаРасчетов.Добавить(НСтр("ru = 'По заказам';
												|en = 'By orders'"));
		Если Объект.ТипПервичногоДокумента = Перечисления.ТипыПервичныхДокументов.ПриобретениеУПоставщика
			Или Объект.ТипПервичногоДокумента = Перечисления.ТипыПервичныхДокументов.ОплатаПоставщику
			Или Объект.ТипПервичногоДокумента = Перечисления.ТипыПервичныхДокументов.КорректировкаПриобретения Тогда
			Если ПолучитьФункциональнуюОпцию("ИспользоватьКомиссиюПриЗакупках") Тогда
				ОписаниеПорядкаРасчетов.Добавить(НСтр("ru = 'отчетам по комиссии';
														|en = 'commission reports'"));
			КонецЕсли;
			Если ПолучитьФункциональнуюОпцию("ИспользоватьОтветственноеХранениеВПроцессеЗакупки") Тогда
				ОписаниеПорядкаРасчетов.Добавить(НСтр("ru = 'документам выкупа и списания товаров с хранения';
														|en = 'purchase invoices — VMI and VMI adjustments'"));
			КонецЕсли;
		ИначеЕсли Объект.ТипПервичногоДокумента = Перечисления.ТипыПервичныхДокументов.РеализацияКлиенту
			Или Объект.ТипПервичногоДокумента = Перечисления.ТипыПервичныхДокументов.ОплатаОтКлиента
			Или Объект.ТипПервичногоДокумента = Перечисления.ТипыПервичныхДокументов.КорректировкаРеализации Тогда 
			Если ПолучитьФункциональнуюОпцию("ИспользоватьКомиссиюПриПродажах") Тогда
				ОписаниеПорядкаРасчетов.Добавить(НСтр("ru = 'отчетам комиссионера';
														|en = 'consignment issue notifications'"));
				ОписаниеПорядкаРасчетов.Добавить(НСтр("ru = 'реализациям через комиссионера';
														|en = 'sales via consignee'"));
			КонецЕсли;
			Если ПолучитьФункциональнуюОпцию("ИспользоватьОтветственноеХранение") Тогда
				ОписаниеПорядкаРасчетов.Добавить(НСтр("ru = 'документам выкупа товаров хранителем';
														|en = 'sales invoices — VMI sold'"));
			КонецЕсли;
		КонецЕсли;
		СписокВыбора.Добавить(Перечисления.ПорядокРасчетов.ПоЗаказам, СтрСоединить(ОписаниеПорядкаРасчетов, " / "));
	КонецЕсли;
	
	Если ПроверитьЗаполнение Тогда 
		Если СписокВыбора.НайтиПоЗначению(Объект.ПорядокРасчетов) = Неопределено Тогда
			Объект.ПорядокРасчетов = Неопределено;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

