Функция МесяцыУходаДляПечати(Выборка, ДниУходаПоВсемДокументам)
	ДниУхода = ДниУходаПоВсемДокументам.Скопировать(Новый Структура("Ссылка", Выборка.Ссылка));
	МесяцыУхода = МесяцыУхода(ДниУхода);
	Если МесяцыУхода.Количество() = 0 Тогда
		МесяцУхода = МесяцыУхода.Добавить();
		МесяцУхода.НачалоМесяца          = Выборка.ДатаНачалаСобытия;
		МесяцУхода.ПредставлениеПериодов = "";
		МесяцУхода.КоличествоДней        = 0;
		МесяцУхода.КоличествоПериодов    = 0;
	Иначе
		Для Каждого МесяцУхода Из МесяцыУхода Цикл
			МесяцУхода.ПредставлениеПериодов = СтрШаблон(НСтр("ru = '%1 %2 г.';
																|en = '%1 %2'"),
				МесяцУхода.ПредставлениеПериодов,
				Формат(МесяцУхода.НачалоМесяца, "ДФ=yyyy"));
		КонецЦикла;
	КонецЕсли;
	Возврат МесяцыУхода;
КонецФункции

Функция МассивСтрокЗаданнойДлины(ИсходнаяСтрока, Длина, ОтступСНовойСтроки = "", СокращатьПробелы = Истина)
	Результат                = Новый Массив;
	МодифицированныйИсходник = ?(СокращатьПробелы, СокрЛП(ИсходнаяСтрока), Строка(ИсходнаяСтрока));
	ДлинаОтступаСНовойСтроки = СтрДлина(ОтступСНовойСтроки);
	ПробелыИПереносыСтрок    = СЭДОФСС.ПробелыИПереносыСтрок();
	Если ТипЗнч(Длина) = Тип("Число") Тогда
		БратьДлинуИзМассива = Ложь;
		МаксимальнаяДлина = Длина;
	Иначе
		БратьДлинуИзМассива = Истина;
		МассивДлин = СтрРазделить(Длина, ", ", Ложь);
		МаксимальнаяДлинаИндекс = 0;
		МассивДлинВГраница = МассивДлин.ВГраница();
		МаксимальнаяДлина = Число(МассивДлин[МаксимальнаяДлинаИндекс]);
	КонецЕсли;
	Для НомерСтроки = 1 По СтрЧислоСтрок(МодифицированныйИсходник) Цикл
		Строка = СтрПолучитьСтроку(МодифицированныйИсходник, НомерСтроки);
		Если СтрДлина(Строка) > МаксимальнаяДлина Тогда
			МассивПодстрок = СтрокаВМассивСРазделителями(Строка, ПробелыИПереносыСтрок);
			Буфер = "";
			ДлинаБуфера = 0;
			Для Каждого Подстрока Из МассивПодстрок Цикл
				ДлинаПодстроки = СтрДлина(Подстрока);
				ДлинаБуфера = ДлинаБуфера + ДлинаПодстроки;
				Если ДлинаБуфера > МаксимальнаяДлина Тогда
					// Нужен перенос.
					Результат.Добавить(?(СокращатьПробелы, СокрЛП(Буфер), Буфер));
					Если ПустаяСтрока(Подстрока) Тогда
						Буфер       = ОтступСНовойСтроки;
						ДлинаБуфера = ДлинаОтступаСНовойСтроки;
					Иначе
						Буфер       = ОтступСНовойСтроки + Подстрока;
						ДлинаБуфера = ДлинаОтступаСНовойСтроки + ДлинаПодстроки;
					КонецЕсли;
					Если БратьДлинуИзМассива Тогда
						МаксимальнаяДлинаИндекс = МаксимальнаяДлинаИндекс + 1;
						Если МаксимальнаяДлинаИндекс > МассивДлинВГраница Тогда
							МаксимальнаяДлинаИндекс = 0;
						КонецЕсли;
						Если МаксимальнаяДлинаИндекс <= МассивДлинВГраница Тогда
							МаксимальнаяДлина = Число(МассивДлин[МаксимальнаяДлинаИндекс]);
						КонецЕсли;
					КонецЕсли;
				Иначе
					// Накопление буфера.
					Буфер = Буфер + Подстрока;
				КонецЕсли;
			КонецЦикла;
			// Добавление "хвоста".
			Если ДлинаБуфера > ДлинаОтступаСНовойСтроки И Не ПустаяСтрока(Буфер) Тогда
				Результат.Добавить(?(СокращатьПробелы, СокрЛП(Буфер), Буфер));
			КонецЕсли;
		Иначе
			Результат.Добавить(?(СокращатьПробелы, СокрЛП(Строка), Строка));
			Если БратьДлинуИзМассива Тогда
				МаксимальнаяДлинаИндекс = МаксимальнаяДлинаИндекс + 1;
				Если МаксимальнаяДлинаИндекс > МассивДлинВГраница Тогда
					МаксимальнаяДлинаИндекс = 0;
				КонецЕсли;
				Если МаксимальнаяДлинаИндекс <= МассивДлинВГраница Тогда
					МаксимальнаяДлина = Число(МассивДлин[МаксимальнаяДлинаИндекс]);
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	Возврат Результат;
КонецФункции

Функция СтрокаВМассивСРазделителями(Знач Строка, Знач Разделители)
	Если ПустаяСтрока(Строка) Тогда
		Возврат Строка;
	КонецЕсли;
	ПоследовательностьСлов = СтрРазделить(Строка, Разделители, Ложь);
	ПоследовательностьРазделителей = СтрРазделить(Строка, СтрСоединить(ПоследовательностьСлов, ""), Ложь);
	МассивРезультат = ПоследовательностьСлов;
	ВГраница = ПоследовательностьРазделителей.ВГраница();
	Если ВГраница >= 0 Тогда
		Если СтрНачинаетсяС(Строка, ПоследовательностьРазделителей[0]) Тогда
			Сдвиг = 0;
		Иначе
			Сдвиг = 1;
		КонецЕсли;
		Для Индекс = 0 По ПоследовательностьРазделителей.ВГраница() Цикл
			МассивРезультат.Вставить(Индекс*2 + Сдвиг, ПоследовательностьРазделителей[Индекс]);
		КонецЦикла;
	КонецЕсли;
	Возврат МассивРезультат;
КонецФункции

Процедура ВывестиМассивСтрокВТабличныйДокумент(ТабличныйДокумент, ОбластьМакета, ИмяПараметра, МассивСтрок, МинимальноеКоличествоСтрок = 0)
	
	СтруктураЗаполнения = Новый Структура;
	
	Для каждого ЧастьСтроки Из МассивСтрок Цикл
		СтруктураЗаполнения.Вставить(ИмяПараметра, ЧастьСтроки);
		ЗаполнитьЗначенияСвойств(ОбластьМакета.Параметры, СтруктураЗаполнения);
		ТабличныйДокумент.Вывести(ОбластьМакета);
	КонецЦикла;
	
	СтрокВыведено = МассивСтрок.Количество();
	
	Пока МинимальноеКоличествоСтрок > СтрокВыведено Цикл
		СтруктураЗаполнения.Вставить(ИмяПараметра, "");
		ЗаполнитьЗначенияСвойств(ОбластьМакета.Параметры, СтруктураЗаполнения);
		ТабличныйДокумент.Вывести(ОбластьМакета); 
		СтрокВыведено = СтрокВыведено + 1;
	КонецЦикла;

КонецПроцедуры

Процедура ПриПечатиЗаявления2023(КонтекстПечати)
	СЭДОФСС.УстановитьСтандартныйОтступПечати(КонтекстПечати);
