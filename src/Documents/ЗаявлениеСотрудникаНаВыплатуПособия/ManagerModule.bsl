Функция ПериодИНомерЛН(Выборка)
	Представления = Новый Массив;
	
	Если ЗначениеЗаполнено(Выборка.ДатаНачалаЛисткаНетрудоспособности)
		И ЗначениеЗаполнено(Выборка.ДатаОкончанияЛисткаНетрудоспособности) Тогда
		Представления.Добавить(СтрШаблон(
			НСтр("ru = 'с %1 по %2';
				|en = 'from %1 to %2'"),
			Формат(Выборка.ДатаНачалаЛисткаНетрудоспособности, "ДЛФ=D"),
			Формат(Выборка.ДатаОкончанияЛисткаНетрудоспособности, "ДЛФ=D")));
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Выборка.НомерЛисткаНетрудоспособности) Тогда
		Представления.Добавить(СтрШаблон(НСтр("ru = 'ЛН № %1';
												|en = 'SLR No. %1'"), СокрЛП(Выборка.НомерЛисткаНетрудоспособности)));
	КонецЕсли;
	
	Возврат СтрСоединить(Представления, ", ");
