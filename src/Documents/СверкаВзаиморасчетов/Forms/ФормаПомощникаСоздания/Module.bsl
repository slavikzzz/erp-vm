		Элементы.Далее.Заголовок = НСтр("ru = 'Завершить';
										|en = 'Exit'");
		Элементы.Назад.Заголовок = "<< " + НСтр("ru = 'Вернуться в начало';
												|en = 'To step 1'");
		Элементы.Отмена.Видимость = Ложь;

	КонецЕсли;
	
