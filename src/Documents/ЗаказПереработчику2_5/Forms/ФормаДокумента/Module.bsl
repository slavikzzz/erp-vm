			ОбщегоНазначения.СообщитьПользователю(
				ТекстСообщения,
				Выборка.Ссылка,
				Поле,
				?(Выборка.Ссылка = Неопределено, "Объект", ""),
				Отказ);
			
		КонецЦикла;
		
	КонецЕсли;
	
