	Если НЕ РезультатЗапроса.Пустой() Тогда
		
		Выборка = РезультатЗапроса.Выбрать();
		
		Пока Выборка.Следующий() Цикл
			
			Корректировка = Выборка.Ссылка.ПолучитьОбъект();
			ОбщегоНазначенияКлиентСервер.ДополнитьСтруктуру(Корректировка.ДополнительныеСвойства, ДополнительныеСвойства, Ложь);
			Корректировка.УстановитьПометкуУдаления(Истина);
			
		КонецЦикла;

	КонецЕсли;
	
КонецПроцедуры

