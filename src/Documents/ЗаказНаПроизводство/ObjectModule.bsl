		Если Интервалы.Количество() > 0 Тогда
			
			ДополнительныеСвойства.Вставить("ПроверитьЗагрузкуОборудования", Истина);
			ДополнительныеСвойства.Вставить("ИнтервалыЗагрузкиДляПроверки", Интервалы);
			
		КонецЕсли;
		
	КонецЕсли;
	
