Функция ДанныеОтпускаДляСЭДО(ОтпускПоУходу, ДокументСЭДО)
	Результат = Новый Структура("ДанныеШапки, СведенияОРебенке");
	
	Если Не ЗначениеЗаполнено(ОтпускПоУходу) Тогда
		Возврат Результат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Ссылка", ОтпускПоУходу);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ШапкаДокумента.Организация КАК Организация,
	|	ШапкаДокумента.Сотрудник КАК Сотрудник,
	|	ШапкаДокумента.Номер КАК Номер,
	|	ШапкаДокумента.НомерПриказа КАК НомерПриказа,
	|	ШапкаДокумента.Дата КАК Дата,
	|	ШапкаДокумента.ДатаНачала КАК ДатаНачала,
	|	ШапкаДокумента.ДатаОкончанияПособияДоПолутораЛет КАК ДатаОкончанияПособияДоПолутораЛет
	|ИЗ
	|	Документ.ОтпускПоУходуЗаРебенком КАК ШапкаДокумента
	|ГДЕ
	|	ШапкаДокумента.Ссылка = &Ссылка
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ДанныеОДетях.Ссылка КАК Ссылка,
	|	ДанныеОДетях.НомерСтроки КАК НомерСтроки,
	|	ДанныеОДетях.ИдентификаторСтроки КАК ИдентификаторСтроки,
	|	ДанныеОДетях.Очередность КАК Очередность,
	|	ЕСТЬNULL(РодственникиФизическихЛиц.ДатаРождения, ДанныеОДетях.ДатаРожденияРебенка) КАК ДатаРожденияРебенка,
	|	ДанныеОДетях.Ребенок КАК Ребенок,
	|	ДанныеОДетях.ВидПодтверждающегоДокумента КАК ВидПодтверждающегоДокумента,
	|	ДанныеОДетях.НаименованиеПодтверждающегоДокумента КАК НаименованиеПодтверждающегоДокумента,
	|	ДанныеОДетях.ДатаДокумента КАК ДатаДокумента,
	|	ДанныеОДетях.СерияДокумента КАК СерияДокумента,
	|	ДанныеОДетях.НомерДокумента КАК НомерДокумента,
	|	ДанныеОДетях.КемВыданДокумент КАК КемВыданДокумент,
	|	ДанныеОДетях.НаличиеРешенияСудаОЛишенииПрав КАК НаличиеРешенияСудаОЛишенииПрав,
	|	ЕСТЬNULL(РодственникиФизическихЛиц.ДатаРождения, ДанныеОДетях.ДатаРожденияРебенка) КАК ДатаРождения,
	|	ЕСТЬNULL(РодственникиФизическихЛиц.Фамилия, ДанныеОДетях.Фамилия) КАК Фамилия,
	|	ЕСТЬNULL(РодственникиФизическихЛиц.Имя, ДанныеОДетях.Имя) КАК Имя,
	|	ЕСТЬNULL(РодственникиФизическихЛиц.Отчество, ДанныеОДетях.Отчество) КАК Отчество
	|ИЗ
	|	Документ.ОтпускПоУходуЗаРебенком.ДанныеОДетях КАК ДанныеОДетях
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.РодственникиФизическихЛиц КАК РодственникиФизическихЛиц
	|		ПО ДанныеОДетях.Ребенок = РодственникиФизическихЛиц.Ссылка
	|			И (ДанныеОДетях.Фамилия = """")
	|			И (ДанныеОДетях.Имя = """")
	|			И (ДанныеОДетях.Отчество = """")
	|			И (ДанныеОДетях.ДатаРожденияРебенка = ДАТАВРЕМЯ(1, 1, 1))
	|ГДЕ
	|	ДанныеОДетях.Ссылка = &Ссылка";
	
	РезультатыЗапроса = Запрос.ВыполнитьПакет();
	ТаблицаШапки = РезультатыЗапроса[0].Выгрузить();
	ТаблицаДетей = РезультатыЗапроса[1].Выгрузить();
	
	Если ТаблицаШапки.Количество() > 0 Тогда
		Результат.ДанныеШапки = ТаблицаШапки[0];
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ДокументСЭДО.Ребенок) Тогда
		Результат.СведенияОРебенке = ТаблицаДетей.Найти(ДокументСЭДО.Ребенок, "Ребенок");
		Если Результат.СведенияОРебенке <> Неопределено Тогда
			Возврат Результат;
		КонецЕсли;
	КонецЕсли;
	
	Количество = ТаблицаДетей.Количество();
	Если Количество = 0 Тогда
		Возврат Результат;
	КонецЕсли;
	
	Если Количество = 1 Тогда
		СведенияОРебенке = ТаблицаДетей[0];
		Если СведенияОРебенке.Ребенок = ДокументСЭДО.Ребенок
			Или Не ЗначениеЗаполнено(ДокументСЭДО.Ребенок)
			Или Не ЗначениеЗаполнено(СведенияОРебенке.Ребенок) Тогда
			Результат.СведенияОРебенке = СведенияОРебенке;
			Возврат Результат;
		КонецЕсли;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ДокументСЭДО.РебенокИмя) Тогда
		Найденные = ТаблицаДетей.НайтиСтроки(Новый Структура("Имя", ДокументСЭДО.РебенокИмя));
		Если Найденные.Количество() = 1 Тогда
			СведенияОРебенке = Найденные[0];
			Если СведенияОРебенке.Ребенок = ДокументСЭДО.Ребенок
				Или Не ЗначениеЗаполнено(ДокументСЭДО.Ребенок)
				Или Не ЗначениеЗаполнено(СведенияОРебенке.Ребенок) Тогда
				Результат.СведенияОРебенке = СведенияОРебенке;
				Возврат Результат;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ДокументСЭДО.РебенокДатаРождения) Тогда
		Найденные = ТаблицаДетей.НайтиСтроки(Новый Структура("ДатаРожденияРебенка", ДокументСЭДО.РебенокДатаРождения));
		Если Найденные.Количество() = 1 Тогда
			СведенияОРебенке = Найденные[0];
			Если СведенияОРебенке.Ребенок = ДокументСЭДО.Ребенок
				Или Не ЗначениеЗаполнено(ДокументСЭДО.Ребенок)
				Или Не ЗначениеЗаполнено(СведенияОРебенке.Ребенок) Тогда
				Результат.СведенияОРебенке = СведенияОРебенке;
				Возврат Результат;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	Очередность = ОбщегоНазначенияБЗК.ЗначениеСвойства(ДокументСЭДО, "РебенокОчередность");
	Если ЗначениеЗаполнено(Очередность) Тогда
		Найденные = ТаблицаДетей.НайтиСтроки(Новый Структура("Очередность", Очередность));
		Если Найденные.Количество() = 1 Тогда
			СведенияОРебенке = Найденные[0];
			Если СведенияОРебенке.Ребенок = ДокументСЭДО.Ребенок
				Или Не ЗначениеЗаполнено(ДокументСЭДО.Ребенок)
				Или Не ЗначениеЗаполнено(СведенияОРебенке.Ребенок) Тогда
				Результат.СведенияОРебенке = СведенияОРебенке;
				Возврат Результат;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	Возврат Результат;
КонецФункции

