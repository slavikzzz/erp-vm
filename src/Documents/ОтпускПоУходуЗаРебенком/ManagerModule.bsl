// Возникает в формах документов, которые ссылаются на строку таблицы ДанныеОДетях (см. колонку ИдентификаторСтроки).
Процедура НастроитьПолеВыбораРебенка(ОтпускПоУходу, ПолеВвода) Экспорт
	СписокВыбора = ПолеВвода.СписокВыбора;
	СписокВыбора.Очистить();
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ЕСТЬNULL(РодственникиФизическихЛиц.ДатаРождения, ДанныеОДетях.ДатаРожденияРебенка) КАК ДатаРожденияРебенка,
	|	ЕСТЬNULL(РодственникиФизическихЛиц.Имя, ДанныеОДетях.Имя) КАК Имя,
	|	ДанныеОДетях.ИдентификаторСтроки КАК ИдентификаторСтроки
	|ИЗ
	|	Документ.ОтпускПоУходуЗаРебенком.ДанныеОДетях КАК ДанныеОДетях
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.РодственникиФизическихЛиц КАК РодственникиФизическихЛиц
	|		ПО ДанныеОДетях.Ребенок = РодственникиФизическихЛиц.Ссылка
	|			И (ДанныеОДетях.Фамилия = """")
	|			И (ДанныеОДетях.Имя = """")
	|			И (ДанныеОДетях.Отчество = """")
	|			И (ДанныеОДетях.ДатаРожденияРебенка = ДАТАВРЕМЯ(1, 1, 1))
	|ГДЕ
	|	ДанныеОДетях.Ссылка = &Ссылка";
	Запрос.УстановитьПараметр("Ссылка",ОтпускПоУходу);
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() Цикл
		СписокВыбора.Добавить(Выборка.ИдентификаторСтроки, Выборка.Имя + " ("+ Формат(Выборка.ДатаРожденияРебенка, "ДЛФ=D") +")");
	КонецЦикла;
	
	Если СписокВыбора.Количество() = 0 Тогда
		ПолеВвода.Подсказка = НСтр("ru = 'В документе не заполнены сведения о детях, за которыми осуществляется уход';
									|en = 'Information on children for whom care is provided is not filled in the document'");
	Иначе
		ПолеВвода.Подсказка = НСтр("ru = 'Ребенок, за которым осуществляется уход';
									|en = 'Child for whom care is provided'");
	КонецЕсли;
КонецПроцедуры

// Возникает при заполнении документов ВходящийЗапросФССДляРасчетаПособия и ОтветНаЗапросФССДляРасчетаПособия.
// Получает последний отпуск по уходу по физлицу, головной организации и периоду отпуска.
Процедура ЗаполнитьПервичныйДокументДляРасчетаПособияФСС(ДокументСЭДО, Реквизиты) Экспорт
	Если ТипЗнч(ДокументСЭДО.ПервичныйДокумент) = Тип("ДокументСсылка.ОтпускПоУходуЗаРебенком")
		И ЗначениеЗаполнено(ДокументСЭДО.ПервичныйДокумент) Тогда
		ИменаРеквизитов = "Организация, Сотрудник";
		УходЗаРебенком = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ДокументСЭДО.ПервичныйДокумент, ИменаРеквизитов);
		ГоловнаяОрганизация = ЗарплатаКадры.ГоловнаяОрганизация(УходЗаРебенком.Организация);
		ФизическоеЛицо      = УходЗаРебенком.Сотрудник;
		Если ГоловнаяОрганизация = ДокументСЭДО.ГоловнаяОрганизация
			И ФизическоеЛицо = ДокументСЭДО.ФизическоеЛицо Тогда
			Возврат;
		КонецЕсли;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(ДокументСЭДО.ФизическоеЛицо)
		Или Не ЗначениеЗаполнено(ДокументСЭДО.ОтпускПоУходуДатаНачала)
		Или Не ЗначениеЗаполнено(ДокументСЭДО.ОтпускПоУходуДатаОкончания) Тогда
		Возврат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	Найденный.Ссылка КАК Ссылка
	|ИЗ
	|	Документ.ОтпускПоУходуЗаРебенком КАК Найденный
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Организации КАК Организации
	|		ПО (Организации.ГоловнаяОрганизация = &ГоловнаяОрганизация)
	|			И Найденный.Организация = Организации.Ссылка
	|		ЛЕВОЕ СОЕДИНЕНИЕ Документ.ОтпускПоУходуЗаРебенком КАК Исправляющий
	|		ПО Найденный.Ссылка = Исправляющий.ИсправленныйДокумент
	|ГДЕ
	|	Найденный.Сотрудник = &ФизическоеЛицо
	|	И Найденный.ДатаНачала <= &ДатаОкончания
	|	И Найденный.ДатаОкончания >= &ДатаНачала
	|	И Организации.ГоловнаяОрганизация = &ГоловнаяОрганизация
	|	И НЕ Найденный.ПометкаУдаления
	|
	|УПОРЯДОЧИТЬ ПО
	|	НЕ Исправляющий.Ссылка ЕСТЬ NULL,
	|	Найденный.ДатаНачала УБЫВ,
	|	Найденный.Проведен УБЫВ,
	|	Найденный.Ссылка УБЫВ";
	Запрос.УстановитьПараметр("ФизическоеЛицо",      ДокументСЭДО.ФизическоеЛицо);
	Запрос.УстановитьПараметр("ГоловнаяОрганизация", ДокументСЭДО.ГоловнаяОрганизация);
	Запрос.УстановитьПараметр("ДатаНачала",          ДокументСЭДО.ОтпускПоУходуДатаНачала);
	Запрос.УстановитьПараметр("ДатаОкончания",       ДокументСЭДО.ОтпускПоУходуДатаОкончания);
	
	УстановитьПривилегированныйРежим(Истина);
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Реквизиты.Вставить("ПервичныйДокумент", Выборка.Ссылка);
	КонецЕсли;
КонецПроцедуры

// Возникает при заполнении документа ОтветНаЗапросФССДляРасчетаПособия на основании отпуска по уходу.
Процедура ЗаполнитьОтветНаЗапросФССДляРасчетаПособия(ОтпускПоУходу, ДокументСЭДО, Реквизиты, ДанныеДляРасчетаСреднегоЗаработка) Экспорт
	
	Массив = ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ОтпускПоУходу);
	ДанныеДляРасчетаСреднегоЗаработка = ДанныеДокументовДляРасчетаСреднегоЗаработкаФСС(Массив).Получить(ОтпускПоУходу);
	
	ДанныеОтпуска = ДанныеОтпускаДляСЭДО(ОтпускПоУходу, ДокументСЭДО);
	
	Реквизиты.Вставить("ВидПособия", Перечисления.ПособияНазначаемыеФСС.ЕжемесячноеПособиеПоУходуЗаРебенком);
	
	Если ДанныеОтпуска.ДанныеШапки <> Неопределено Тогда
		Шапка = ДанныеОтпуска.ДанныеШапки;
