&НаСервере
Процедура СотрудникиОбработкаВыбораНаСервере(ВыбранныеЗначение);
	
	Если Не ЗначениеЗаполнено(ВыбранныеЗначение) Тогда
		Возврат;
	КонецЕсли;
	
	Если ТиПЗнч(ВыбранныеЗначение[0]) = Тип("СправочникСсылка.ФизическиеЛица") Тогда
		ПараметрыПолученияСотрудников = КадровыйУчет.ПараметрыПолученияСотрудниковОрганизацийПоСпискуФизическихЛиц();
		ПараметрыПолученияСотрудников.Организация = Объект.Организация;
		ПараметрыПолученияСотрудников.НачалоПериода = Объект.Дата;
		ПараметрыПолученияСотрудников.ОкончаниеПериода = Объект.Дата;
		ПараметрыПолученияСотрудников.СписокФизическихЛиц = ВыбранныеЗначение;
		ВыбранныеСотрудники = КадровыйУчет.СотрудникиОрганизации(Истина, ПараметрыПолученияСотрудников).ВыгрузитьКолонку("Сотрудник");
	Иначе
		ВыбранныеСотрудники = ВыбранныеЗначение;
	КонецЕсли;
	
	ОтобранныеСотрудники = Новый Массив;
	Для Каждого Сотрудник Из ВыбранныеСотрудники Цикл
		
		Если Объект.Сотрудники.НайтиСтроки(Новый Структура("Сотрудник", Сотрудник)).Количество() > 0 Тогда
			Продолжить;
		КонецЕсли;
		ОтобранныеСотрудники.Добавить(Сотрудник);
		
	КонецЦикла;
	
	ДанныеЗаполнения = ДанныеПоследнейСтроки(ЭтотОбъект, ТекущаяДатаСеанса());
	Для Каждого Сотрудник Из ОтобранныеСотрудники Цикл
		СтрокаСотрудники = Объект.Сотрудники.Добавить();
		СтрокаСотрудники.Сотрудник = Сотрудник;
		ЗаполнитьНовуюСтроку(СтрокаСотрудники, ДанныеЗаполнения);
	КонецЦикла;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Функция ДанныеПоследнейСтроки(УправляемаяФорма, ДатаСеанса, Смещение = 0)
	
	ДанныеСтроки = Новый Структура("ДатаВозобновления", ДатаСеанса);
	Если УправляемаяФорма.Объект.Сотрудники.Количество() - Смещение > 0 Тогда
		ЗаполнитьЗначенияСвойств(
			ДанныеСтроки,
			УправляемаяФорма.Объект.Сотрудники[УправляемаяФорма.Объект.Сотрудники.Количество() - 1 - Смещение]);
	КонецЕсли;
	
	Возврат ДанныеСтроки;
	
КонецФункции

