Процедура ОбработкаПолученияПредставления(Данные, Представление, СтандартнаяОбработка)
	
	Если НЕ ПустаяСтрока(Данные.ВидДокументаФСС) Тогда
		СтандартнаяОбработка = Ложь;
		Шаблон = НСтр("ru = '%1 № %2 от %3';
						|en = '%1 № %2 от %3'");
		Представление = СтрШаблон(Шаблон,
			Данные.ВидДокументаФСС,
			?(ЗначениеЗаполнено(Данные.ВходящийНомер),
				Формат(Данные.ВходящийНомер, "ЧГ=0"), СтрЗаменить(Данные.Номер, " ", "")),
			?(ЗначениеЗаполнено(Данные.ВходящаяДата),
				Формат(Данные.ВходящаяДата, "ДЛФ=D"), Формат(Данные.Дата, "ДЛФ=D"))
		);
	КонецЕсли;
	
КонецПроцедуры

Процедура ОбработкаПолученияПолейПредставления(Поля, СтандартнаяОбработка)
	
	СтандартнаяОбработка = Ложь;
	Поля.Добавить("ВидДокументаФСС");
	Поля.Добавить("Дата");
	Поля.Добавить("Номер");
	Поля.Добавить("ВходящийНомер");
	Поля.Добавить("ВходящаяДата");
	
КонецПроцедуры

