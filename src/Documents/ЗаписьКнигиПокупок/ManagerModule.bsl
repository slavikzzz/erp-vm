	МассивПодстрок.Добавить(СтрШаблон(НСтр("ru = 'Запись книги покупок № %1 от %2 г.';
											|en = 'Purchase ledger entry No. %1 dated %2'"), СокрЛП(Номер), Формат(Дата, "ДЛФ=D")));
