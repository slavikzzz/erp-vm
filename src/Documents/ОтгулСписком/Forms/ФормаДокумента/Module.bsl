		Массив.Добавить(Новый Структура("ЭлементФормы", "СотрудникиСотрудник"));
		Массив.Добавить(Новый Структура("ЭлементФормы", "СотрудникиДатаНачала"));
		Массив.Добавить(Новый Структура("ЭлементФормы", "СотрудникиДатаОкончания"));
