	НачатоВыполнениеОпераций = Ложь;
	ЕстьБракВОперациях = Ложь;
	
	Если ИспользоватьПооперационноеУправление
		И НЕ Объект.ПроизводствоНаСтороне
		И (НЕ Объект.МаршрутнаяКарта.Пустая()
			ИЛИ ПолучитьФункциональнуюОпцию("ХранитьОперацииВРесурсныхСпецификациях")) Тогда
	
		ПроверяемыеСтатусы = УправлениеПроизводствомКлиентСервер.СтатусыДоступноПооперационноеУправление(ЭтотОбъект);
		Если ПроверяемыеСтатусы.Найти(Объект.Статус) <> Неопределено Тогда
			
			ТекстЗапроса = "
			|ВЫБРАТЬ
			|	МАКСИМУМ(ВЫБОР
			|		КОГДА Операции.КоличествоБрак > 0
			|			ТОГДА ИСТИНА
			|		ИНАЧЕ ЛОЖЬ
			|	КОНЕЦ) КАК ЕстьБракВОперациях
			|ИЗ
			|	Документ.ПроизводственнаяОперация2_2 КАК Операции
			|ГДЕ
			|	Операции.Этап = &Этап
			|	И Операции.Проведен
			|ИМЕЮЩИЕ
			|	КОЛИЧЕСТВО(Операции.Ссылка) > 0";
			
			Запрос = Новый Запрос;
			Запрос.Текст = ТекстЗапроса;
			Запрос.УстановитьПараметр("Этап", Объект.Ссылка);
			
			УстановитьПривилегированныйРежим(Истина);
			РезультатЗапроса = Запрос.Выполнить();
			УстановитьПривилегированныйРежим(Ложь);
			
			Если НЕ РезультатЗапроса.Пустой() Тогда
				
				Выборка = РезультатЗапроса.Выбрать();
				Выборка.Следующий();
				
				НачатоВыполнениеОпераций = Истина;
				ЕстьБракВОперациях       = Выборка.ЕстьБракВОперациях;
				
			КонецЕсли;
		
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

