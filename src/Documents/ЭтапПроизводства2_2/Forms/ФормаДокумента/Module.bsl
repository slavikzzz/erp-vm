&НаСервере
Процедура ОбработатьИзменениеСпособаПроизводстваНаСервере()
	
	Объект.ПроизводствоНаСтороне = (СпособПроизводства = СпособПроизводстваНаСтороне());
	
	Объект.ПроизводствоНаСтороне2_5 =
		Объект.ПроизводствоНаСтороне
		И ИспользоватьЗаказыПереработчикам2_5
		И (ТипЗнч(Объект.ЗаказПереработчику) = Тип("Неопределено")
			Или ТипЗнч(Объект.ЗаказПереработчику) = Тип("ДокументСсылка.ЗаказПереработчику2_5"));
	
	Объект.ОставитьИзделияУПереработчика =
		Ложь
		И Объект.ПроизводствоНаСтороне2_5
		И Объект.ОставитьИзделияУПереработчика;
	
	Если Объект.ПроизводствоНаСтороне Тогда
		ПриВыбореСпособаПроизводствоНаСтороне();
	КонецЕсли;
	
	ПараметрыВстраивания = Документы.ЭтапПроизводства2_2.ДоступныеОстаткиПараметрыВстраивания(Объект);
	ОбеспечениеВДокументахСервер.ДоступныеОстаткиПриЧтенииНаСервере(ЭтотОбъект, ПараметрыВстраивания);
	ЗаполнитьСтатусыУказанияСерийСервер("ВыходныеИзделия,ПобочныеИзделия", Истина);
	
	НастроитьЗависимыеЭлементыФормы(ЭтотОбъект, "СпособПроизводства");
	УстановитьВидимостьОбеспечения();
	
	УстановитьВидимостьКомандВводаНаОсновании();

