Функция ФорматированнаяСтрокаНадписьСпецификация()
	
	МассивСтрок = Новый Массив();
	
	Если Не Объект.Спецификация.Пустая() Тогда
		
		Таблица = Новый ТаблицаЗначений;
		Таблица.Колонки.Добавить("Заголовок");
		Таблица.Колонки.Добавить("ПредставлениеСсылки");
		Таблица.Колонки.Добавить("Ссылка");
		Таблица.Колонки.Добавить("Требуется");
		Таблица.Колонки.Добавить("Доступно");
		
		НоваяСтрока = Таблица.Добавить();
		НоваяСтрока.Заголовок = "";
		НоваяСтрока.ПредставлениеСсылки = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Объект.Спецификация, "Наименование");
		НоваяСтрока.Ссылка = "#ОткрытьСпецификацию";
		НоваяСтрока.Требуется = СтрДлина(НоваяСтрока.ПредставлениеСсылки);
		НоваяСтрока.Доступно = Мин(НоваяСтрока.Требуется, 50);
		СтрокКПересчету = ?(НоваяСтрока.Доступно < НоваяСтрока.Требуется, 1, 0);
			
		Если Не ПерваяОперация.Пустая() Тогда
			НоваяСтрока = Таблица.Добавить();
			НоваяСтрока.Заголовок = НСтр("ru = 'с операции:';
										|en = 'from operation:'") + " ";
			НоваяСтрока.ПредставлениеСсылки = ПерваяОперацияПредставление;
			НоваяСтрока.Ссылка = "#ОткрытьПервуюОперацию";
			НоваяСтрока.Требуется = СтрДлина(НоваяСтрока.Заголовок) + СтрДлина(НоваяСтрока.ПредставлениеСсылки);
			НоваяСтрока.Доступно = Мин(НоваяСтрока.Требуется, 25);
			СтрокКПересчету = ?(НоваяСтрока.Доступно < НоваяСтрока.Требуется, СтрокКПересчету+1, СтрокКПересчету);
		КонецЕсли;
		
		Если Не ПоследняяОперация.Пустая() Тогда
			НоваяСтрока = Таблица.Добавить();
			НоваяСтрока.Заголовок = НСтр("ru = 'по операцию:';
										|en = 'to operation:'") + " ";
			НоваяСтрока.ПредставлениеСсылки = ПоследняяОперацияПредставление;
			НоваяСтрока.Ссылка = "#ОткрытьПоследнююОперацию";
			НоваяСтрока.Требуется = СтрДлина(НоваяСтрока.Заголовок) + СтрДлина(НоваяСтрока.ПредставлениеСсылки);
			НоваяСтрока.Доступно = Мин(НоваяСтрока.Требуется, 25);
			СтрокКПересчету = ?(НоваяСтрока.Доступно < НоваяСтрока.Требуется, СтрокКПересчету+1, СтрокКПересчету);
		КонецЕсли;
		
		Остаток = 100 - Таблица.Итог("Доступно");
		Если Остаток > 0 И СтрокКПересчету > 0 Тогда
			Для каждого Строка Из Таблица Цикл
				Если Строка.Доступно < Строка.Требуется Тогда
					Количество = Мин(Строка.Требуется - Строка.Доступно,
						?(СтрокКПересчету = 1, Остаток, Окр(Остаток/СтрокКПересчету)));
					Строка.Доступно = Строка.Доступно + Количество;
					Остаток = Остаток - Количество;
					СтрокКПересчету = СтрокКПересчету - 1;
				КонецЕсли;
				Если Остаток = 0 Или СтрокКПересчету = 0 Тогда
					Прервать;
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
		
		МассивСтрок = Новый Массив();
		
		Для Индекс = 0 По Таблица.Количество()-1 Цикл
			Строка = Таблица[Индекс];
			
			Если Не ПустаяСтрока(Строка.Заголовок) Тогда
				МассивСтрок.Добавить(Строка.Заголовок);
			КонецЕсли;
			
			ПредставлениеСсылки = ?(Строка.Доступно < Строка.Требуется,
				Лев(Строка.ПредставлениеСсылки, Строка.Доступно - СтрДлина(Строка.Заголовок) - 3) + "...",
				Строка.ПредставлениеСсылки);
			МассивСтрок.Добавить(Новый ФорматированнаяСтрока(ПредставлениеСсылки,,,,Строка.Ссылка));
			
			Если Индекс < Таблица.Количество()-1 Тогда
				МассивСтрок.Добавить("  ");
			КонецЕсли;
		КонецЦикла;
		
	Иначе
		МассивСтрок.Добавить("<" + НСтр("ru = 'нет спецификации';
										|en = 'no BOM'") + ">");
	КонецЕсли;
	
	Если ПравоДоступа("Использование", Метаданные.Обработки.РедактированиеПоследовательностиЭтаповПроизводства) Тогда
		МассивСтрок.Добавить("  ");
		МассивСтрок.Добавить(Новый ФорматированнаяСтрока(НСтр("ru = 'показать этапы';
																|en = 'show stages'"),,,, "#ПоказатьЭтапы"));
	КонецЕсли;
	
	Возврат Новый ФорматированнаяСтрока(МассивСтрок);
	
КонецФункции

