		Запрос.Текст = ТекстЗапросаЗаполнитьНаОснованииПередачиПереработчикуПоЗаказам();
	Иначе
		Запрос.Текст = ТекстЗапросаЗаполнитьНаОснованииПередачиПереработчикуБезЗаказа();
	КонецЕсли;
	
	Результат = Запрос.ВыполнитьПакет();
	РеквизитыШапки = Результат[Результат.ВГраница() - 2].Выбрать();
	ТаблицаТовары  = Результат[Результат.ВГраница() - 1].Выгрузить();
	ТаблицаЗаказы  = Результат[Результат.ВГраница()].Выгрузить();
	
