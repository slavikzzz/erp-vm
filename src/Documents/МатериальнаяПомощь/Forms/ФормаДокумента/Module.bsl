	ИтогКВыплате = Объект.Начисления.Итог("КВыплате");
	Для Н =1 По КоличествоКолонокИтоговЗависимыхНачислений Цикл
		ЭтотОбъект["ИтогРезультатЗависимыхНачислений" + Формат(Н, "ЧГ=")] = Объект.Начисления.Итог("РезультатЗависимыхНачислений" + Формат(Н, "ЧГ=")); 
	КонецЦикла;
	
	ОбновитьИтогиПодвала(ЭтотОбъект);

