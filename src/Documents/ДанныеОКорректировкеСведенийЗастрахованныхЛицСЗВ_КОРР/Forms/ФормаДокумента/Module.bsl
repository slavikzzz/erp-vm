		ДанныеСотрудника = ДанныеСотрудников[СтрокаСотрудника.Сотрудник];
		Если ДанныеСотрудника <> Неопределено Тогда 
			ЗаполнитьЗначенияСвойств(СтрокаСотрудника, ДанныеСотрудника);
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры

