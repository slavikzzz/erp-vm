// Процедура обновляет наименования для печати элементов всех видов бюджетов.
//
// Параметры:
//  ЗначениеРеквизита - СправочникСсылка.СтатьиБюджетов, СправочникСсылка.ПоказателиБюджетов, СправочникСсылка.НефинансовыеПоказателиБюджетов - 
//   статья бюджета, показатель бюджета или нефинансовый показатель с измененным наименованием.
//  Наименование - Строка - обновленное наименование для печати
//
Процедура ОбновитьНаименованияДляПечати(ЗначениеРеквизита, Наименование) Экспорт
	
	Если ТипЗнч(ЗначениеРеквизита) = Тип("СправочникСсылка.СтатьиБюджетов") Тогда
		Реквизит = ПланыВидовХарактеристик.РеквизитыЭлементовФинансовыхОтчетов.СтатьяБюджетов;
	ИначеЕсли ТипЗнч(ЗначениеРеквизита) = Тип("СправочникСсылка.ПоказателиБюджетов") Тогда
		Реквизит = ПланыВидовХарактеристик.РеквизитыЭлементовФинансовыхОтчетов.ПоказательБюджетов;
	ИначеЕсли ТипЗнч(ЗначениеРеквизита) = Тип("СправочникСсылка.НефинансовыеПоказателиБюджетов") Тогда
		Реквизит = ПланыВидовХарактеристик.РеквизитыЭлементовФинансовыхОтчетов.НефинансовыйПоказатель;
	Иначе
		Возврат;
	КонецЕсли;
	
	УстановитьПривилегированныйРежим(Истина);
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Реквизит", Реквизит);
	Запрос.УстановитьПараметр("Значение", ЗначениеРеквизита);
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ЭлементыФинансовыхОтчетовРеквизитыВидаЭлемента.Ссылка КАК Ссылка,
	|	ЭлементыФинансовыхОтчетовРеквизитыВидаЭлемента.Ссылка.Владелец КАК ВидБюджета
	|ИЗ
	|	Справочник.ЭлементыФинансовыхОтчетов.РеквизитыВидаЭлемента КАК ЭлементыФинансовыхОтчетовРеквизитыВидаЭлемента
	|ГДЕ
	|	ЭлементыФинансовыхОтчетовРеквизитыВидаЭлемента.Реквизит = &Реквизит
	|	И ЭлементыФинансовыхОтчетовРеквизитыВидаЭлемента.Значение = &Значение
	|ИТОГИ ПО
	|	ВидБюджета";
	Выборка = Запрос.Выполнить().Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
	Пока Выборка.Следующий() Цикл
		
		ВыборкаДетальная = Выборка.Выбрать();
		Пока ВыборкаДетальная.Следующий() Цикл
			ЭлементФООбъект = ВыборкаДетальная.Ссылка.ПолучитьОбъект();
			ЭлементФООбъект.Заблокировать();
			ЭлементФООбъект.НаименованиеДляПечати = Наименование;
			ЭлементФООбъект.Записать();
		КонецЦикла;
		
		НаборЗаписей = РегистрыСведений.КэшВспомогательныхДанныхВидаБюджета.СоздатьНаборЗаписей();
		НаборЗаписей.Отбор.ВидБюджета.Установить(Выборка.ВидБюджета);
		НаборЗаписей.Отбор.ВидКэша.Установить(Перечисления.ВидыКэшаБюджета.ДеревоЭлементовБезДопЭлементов);
		НаборЗаписей.Записать();
		
		НаборЗаписей.Отбор.ВидКэша.Установить(Перечисления.ВидыКэшаБюджета.ДеревоЭлементовСДопЭлементами);
		НаборЗаписей.Записать();
		
		НаборЗаписей.Отбор.ВидКэша.Установить(Перечисления.ВидыКэшаБюджета.ДеревоВывода);
		НаборЗаписей.Записать();
		
	КонецЦикла;
	
КонецПроцедуры

