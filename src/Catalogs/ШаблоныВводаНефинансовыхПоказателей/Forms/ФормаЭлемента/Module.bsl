		ТекстЯчейки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'По-умолчанию (%1)';
				|en = 'Default (%1)'"),
			Элементов.Количество());
	Иначе
		ТекстЯчейки = НСтр("ru = 'Выбрать';
							|en = 'Select'");
