	СтруктураНастроек = Новый Структура();
	
	СтруктураНастроек.Вставить("ОбновитьДополнить", 0);
	СтруктураНастроек.Вставить("ИзменитьРезультатНа", 0);
	СтруктураНастроек.Вставить("ТочностьОкругления", 0);
	
