&НаКлиенте
Процедура ОбновитьПредставлениеФизическогоЛица(СтруктураФИО = Неопределено)
	
	Если СтруктураФИО = Неопределено Тогда
		СтруктураФИО = ФизическиеЛицаКлиентСервер.ЧастиИмени(Объект.ФИО);
	КонецЕсли;
	
	ЧастиНаименования = Новый Массив;
	ЧастиНаименования.Добавить(СтруктураФИО.Фамилия);
	
	Если ЗначениеЗаполнено(СтруктураФИО.Имя) Тогда
		ЧастиНаименования.Добавить(СтруктураФИО.Имя);
	КонецЕсли;
	Если ЗначениеЗаполнено(СтруктураФИО.Отчество) Тогда
		ЧастиНаименования.Добавить(СтруктураФИО.Отчество);
	КонецЕсли;
	Если ЗначениеЗаполнено(Объект.УточнениеНаименования) Тогда
		ЧастиНаименования.Добавить(СокрЛП(Объект.УточнениеНаименования));
	КонецЕсли;
	
	Объект.Наименование = СтрСоединить(ЧастиНаименования, " ");
	
КонецПроцедуры

&НаСервере
Процедура ПрочитатьИсториюФИО()
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("ФизическоеЛицо", Объект.Ссылка);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ФИОФизическихЛиц.Период КАК Период,
	|	ФИОФизическихЛиц.ФизическоеЛицо,
	|	ФИОФизическихЛиц.Фамилия,
	|	ФИОФизическихЛиц.Имя,
	|	ФИОФизическихЛиц.Отчество
	|ИЗ
	|	РегистрСведений.ФИОФизическихЛиц КАК ФИОФизическихЛиц
	|ГДЕ
	|	ФИОФизическихЛиц.ФизическоеЛицо = &ФизическоеЛицо
	|
	|УПОРЯДОЧИТЬ ПО
	|	Период";
	
	НаборЗаписейФИОФизЛиц.Загрузить(Запрос.Выполнить().Выгрузить());
	
КонецПроцедуры

&НаСервере
Процедура ЗаписатьИзмененияФИО()
	
	НаборЗаписейРегистра = РеквизитФормыВЗначение("НаборЗаписейФИОФизЛиц");
	
	НаборЗаписейРегистра.Отбор.ФизическоеЛицо.Установить(Объект.Ссылка);
	Для Каждого ТекСтр Из НаборЗаписейРегистра Цикл
		ТекСтр.ФизическоеЛицо = Объект.Ссылка;
	КонецЦикла;
	
	НаборЗаписейРегистра.ДополнительныеСвойства.Вставить("НеФормироватьНаименование");
	
	НаборЗаписейРегистра.Записать(Истина);
	
КонецПроцедуры

&НаКлиенте
Процедура ОбновитьФИОФизическихЛиц(СтруктураФИО = Неопределено)
	
	Если СтруктураФИО = Неопределено Тогда
		СтруктураФИО = ФизическиеЛицаКлиентСервер.ЧастиИмени(Объект.ФИО);
	КонецЕсли;
	
	Если НаборЗаписейФИОФизЛиц.Количество() = 0 Тогда
		// Добавляем новую запись если регистр не содержит данных
		ЗаполнитьЗначенияСвойств(НаборЗаписейФИОФизЛиц.Добавить(), СтруктураФИО);
	КонецЕсли;
	
	ПерваяЗапись = НаборЗаписейФИОФизЛиц[0];
	Если ЗначениеЗаполнено(Объект.ДатаРождения) Тогда
		ПерваяЗапись.Период = Объект.ДатаРождения;
	ИначеЕсли НЕ ЗначениеЗаполнено(ПерваяЗапись.Период) Тогда
		ПерваяЗапись.Период = ТекущаяДата();
	КонецЕсли;
	
	ТекущаяЗапись = НаборЗаписейФИОФизЛиц[НаборЗаписейФИОФизЛиц.Количество() - 1];
	Если ЗначениеЗаполнено(ТекущаяЗапись.Имя) И ЗначениеЗаполнено(ТекущаяЗапись.Отчество) Тогда
		ФИОТекущейЗаписи = СтрШаблон("%1 %2 %3", ТекущаяЗапись.Фамилия, ТекущаяЗапись.Имя, ТекущаяЗапись.Отчество);
	ИначеЕсли ЗначениеЗаполнено(ТекущаяЗапись.Имя) Тогда
		ФИОТекущейЗаписи = СтрШаблон("%1 %2", ТекущаяЗапись.Фамилия, ТекущаяЗапись.Имя);
	Иначе
		ФИОТекущейЗаписи = СтрШаблон("%1", ТекущаяЗапись.Фамилия);
	КонецЕсли;
	
	Если ФИОТекущейЗаписи <> Объект.ФИО Тогда
		ТекущаяЗапись = НаборЗаписейФИОФизЛиц.Добавить();
		ЗаполнитьЗначенияСвойств(ТекущаяЗапись, СтруктураФИО);
		ТекущаяЗапись.Период = ТекущаяДата();
	КонецЕсли;
	
	УстановитьСвойстваГиперссылкиИсторииФИО(Объект, Элементы, НаборЗаписейФИОФизЛиц.Количество());
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура УстановитьСвойстваГиперссылкиИсторииФИО(Объект, Элементы, КоличествоЗаписей)
	
	ЗаголовокГиперссылки = Новый Массив;
	ЗаголовокГиперссылки.Добавить(НСтр("ru = 'История ФИО';
										|en = 'Full name history'"));
	
	Если КоличествоЗаписей > 0 Тогда
		ЗаголовокГиперссылки.Добавить(СтрШаблон("(%1)", КоличествоЗаписей));
	КонецЕсли;
	
	Элементы.ИсторияФИО.Заголовок   = СтрСоединить(ЗаголовокГиперссылки, " ");
	Элементы.ИсторияФИО.Доступность = ЗначениеЗаполнено(Объект.Ссылка);
	
КонецПроцедуры

