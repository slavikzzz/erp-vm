Функция СтруктурыРеквизитовПартийРавны(Структура1, Структура2)
	
	Для Каждого ТекРеквизит Из Структура1 Цикл
		
		ИмяРеквизита = ТекРеквизит.Ключ;
		
		Если ИмяРеквизита = "Код"
			ИЛИ ИмяРеквизита = "Ссылка"
			ИЛИ ИмяРеквизита = "УникальныйИдентификатор"
			ИЛИ ИмяРеквизита = "Наименование"
			ИЛИ ИмяРеквизита = "ГруппаЗатрат" Тогда
			Продолжить;
		КонецЕсли;
		
		//++ НЕ УТКА
		Если ИмяРеквизита = "Организации" Тогда
			
			Таблица1 = Структура1[ИмяРеквизита]; // ТаблицаЗначений
			Таблица2 = Структура2[ИмяРеквизита]; // ТаблицаЗначений
			
			Если Не Таблица1.Количество() = Таблица2.Количество() Тогда
				Возврат Ложь;
			КонецЕсли;
			
			Для Индекс = 0 По Таблица1.Количество() - 1 Цикл
				Если Таблица1[Индекс].Организация <> Таблица2[Индекс].Организация Тогда
					Возврат Ложь;
				КонецЕсли;
			КонецЦикла;
			
		Иначе
		//-- НЕ УТКА
			Если Структура1[ИмяРеквизита] <> Структура2[ИмяРеквизита] Тогда
				Возврат Ложь;
			КонецЕсли;
		//++ НЕ УТКА
		КонецЕсли;
		//-- НЕ УТКА
		
	КонецЦикла;
	
	Возврат Истина;
	
КонецФункции

