	Если Параметры.Свойство("АвтоТест") Тогда
		Возврат;
	КонецЕсли;
	
	//++ НЕ УТ
	
	// Обязательные параметры
	ЗаполнитьЗначенияСвойств(ЭтаФорма, Параметры, "Организация, Подразделение, Номенклатура, Характеристика");
	
	// Не обязательные параметры
	Параметры.Свойство("ДокументВозврата", ДокументВозврата);
	
	ЗаполнитьТаблицуОстатков();
	
