&НаСервере
Процедура ЗаполнитьПараметрыЗаполненияУдержаниеДСВ(ПараметрыЗаполнения)
		                                                                  
	Если Задание.УдержаниеДСВ.Пустая() Тогда
		
		ДанныеЗаполнения = Новый Структура;
		ДанныеЗаполнения.Вставить("Действие", 		"ЗаполнитьПоПараметрамЗаполнения");
		ДанныеЗаполнения.Вставить("Организация", 	Задание.Организация);
		ДанныеЗаполнения.Вставить("Удержания",		УдержанияДСВ());
		
		ПараметрыЗаполнения.Вставить("Основание", ДанныеЗаполнения);
	Иначе
		ПараметрыЗаполнения.Вставить("Ключ", Задание.УдержаниеДСВ);		
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Функция  УдержанияДСВ()
		
	УдержанияДСВ = Новый Структура;
	УдержанияДСВ.Вставить("ФизическоеЛицо", 				Задание.ФизическоеЛицо);
	УдержанияДСВ.Вставить("РабочееМесто", 					СотрудникИОрганизация().Сотрудник);
	УдержанияДСВ.Вставить("Размер", 						Задание.РазмерУдержанияСумма);
	УдержанияДСВ.Вставить("ИдентификаторСтрокиВидаРасчета",	0);
	
	Возврат ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(УдержанияДСВ);
	
КонецФункции

&НаСервере
Функция СотрудникИОрганизация()
	
	Результат = Новый Структура("Сотрудник, Организация");
	
	Если Задание.Организация.Пустая() Тогда
		
		ОсновныеСотрудники = КадровыйУчет.ОсновныеСотрудникиИнформационнойБазы(Истина, Задание.ФизическоеЛицо, Задание.Дата);
		ОсновнойСотрудник = ОсновныеСотрудники[Задание.ФизическоеЛицо];
		Результат.Сотрудник = ОсновнойСотрудник;
		
		КадровыеДанныеОсновногоСотрудника = КадровыйУчет.КадровыеДанныеСотрудников(Истина, ОсновнойСотрудник, "Организация", Задание.Дата);
		ОрганизацияОсновногоСотрудника = КадровыеДанныеОсновногоСотрудника.Найти(ОсновнойСотрудник).Организация;
		Результат.Организация = ОрганизацияОсновногоСотрудника;
		
	Иначе
		Результат.Организация = Задание.Организация;	
		Результат.Сотрудник = КадровыйУчет.ОсновнойСотрудникФизическогоЛица(Задание.ФизическоеЛицо,
																			Задание.Организация,
																			Задание.Дата);
	КонецЕсли;
																						 
	Возврат Результат;
	
